<!-- This is the template which will be shown when there is
     a xar:workflow-status tag somewhere in the code
     The ideas is to use a layout attribute in the tag to select the proper layout
-->
<xar:if condition="empty($layout) or $layout eq 'default'">
  <h3><xar:mlstring>Workflow processes initiated by me</xar:mlstring></h3>
  <div class="xar-norm-outline" style="padding: 0.5em 1em 0.5em;">
    <!-- Include the default layout for the xar:workflow-status tag -->
    <xar:template file="workflowlist"/>
  </div>
<xar:else/>
  <!-- Layout apparently had a value -->
  <xar:mlstring>Trying to use layout : </xar:mlstring>#$layout#
  <xar:mlstring>Not implemented yet</xar:mlstring>
  <xar:mlstring>This layout is undefined - please specify it in modules/workflow/xartemplates/user-showinstances.xd</xar:mlstring>
</xar:if>
