<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Smilies Module</xar:mlstring></span></div>
<!-- common admin menu for this module - remove link to the current function -->
<div class="xar-mod-body">
<h2><xar:mlstring>Modify a Smiley</xar:mlstring></h2>
<form method="post" action="#xarModURL('smilies', 'admin', 'modify', array('phase' => 'update'))#" method="post" enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="authid" id="authid" value="#$authid#" />
	<input type="hidden" name="sid" id="sid" value="#$sid#" />
    <table border="0" width="100%">
        <tr>
            <td>
                <table border="0" width="100%">
                    <tr align="left" valign="middle">
                        <td>
                            <xar:mlstring>Smiley Code</xar:mlstring>
                        </td>
                        <td>
                            <input type="text" name="code" id="code" value="#$code#" size="10" maxlength="100" tabindex="1" />
						</td>
					</tr>
					<tr align="left" valign="middle">
						<td>
							<xar:mlstring>Smiley Icon</xar:mlstring>
						</td>
						<td>
							<input type="text" name="icon" id="icon" value="#$icon#" size="30" maxlength="100" tabindex="1" />
						</td>
					</tr>
					<tr align="left" valign="middle">
						<td>
							<xar:mlstring>Smiley Emotion</xar:mlstring>
						</td>
						<td>
							<input type="text" name="emotion" id="emotion" value="#$emotion#" size="30" maxlength="100" tabindex="1" />
						</td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
	<input type="submit" value="#xarML('Modify Smiley')#" align="middle" tabindex="5" />
</form>
</div>