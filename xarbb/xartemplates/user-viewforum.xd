	<xar:if condition="!empty($pager)">	
		<td align="right" valign="middle" nowrap="nowrap">
				<span class="xar-sub">
					<b>
						#$pager#
					</b>  
				</span>
			</td>
	</xar:if>
		<!--  Need an API Forum Picker. 
		<td align="right" valign="bottom" nowrap="nowrap">
			<span class="xar-sub">
