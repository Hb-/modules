  <!-- BEGIN FORUMS -->
<xar:loop name="$items">
	<tr> 
		<td class="xar-norm" align="center" valign="middle">
			#$loop:item['timeimage']#
		</td>
		<td class="xar-norm" width="100%" height="50">
			<span class="xar-title">
				<a href="#xarModURL('xarbb', 'user', 'redirect', array('fid' => $loop:item['fid']))#" title="#$loop:item['fname']#">
					#$loop:item['fname']#
				</a><br />
			</span> 
			<span class="xar-norm">
				#$loop:item['fdesc']#<br />
			</span>
		</td>
		<td class="xar-accent" align="center" valign="middle">
			<span class="xar-sub">
				#$loop:item['ftopics']#
			</span>
		</td>
		<td class="xar-norm" align="center" valign="middle">
			<span class="xar-sub">
				#$loop:item['fposts']#
			</span>
		</td>
		<td class="xar-accent" align="center" valign="middle" nowrap="nowrap">
			<span class="gensmall">
				#xarLocaleFormatDate('%a, %d %B %Y %H:%M:%S %Z', $loop:item['fpostid'])#<br />
				<strong>By: </strong> <a href="#xarModUrl('roles', 'user', 'display', array('uid' => $loop:item['fposter']))#">#$loop:item['name']#</a>
			</span>
		</td>
  </tr>
</xar:loop>
  <!-- END forumrow -->
  <!-- END catrow -->
</table>

<table width="100%" cellspacing="0" border="0" align="center" cellpadding="2">
	<tr> 
		<td align="left">
			<span class="xar-sub">
				<a href="#xarModURL('xarbb', 'user', 'redirect')#">
					<xar:mlstring>
					    Mark all forums as read
					</xar:mlstring>
				</a>
			</span>
		</td>
		<td align="right">
			<span class="xar-sub">
				<xar:mlstring>
				    All times are GMT
				</xar:mlstring>
			</span>
		</td>
	</tr>
</table>
<xar:if condition="!xarUserIsLoggedIn()">
	<form action="#xarModURL('roles', 'user', 'login')#" method="post" enctype="application/x-www-form-urlencoded">
		<table width="100%" cellpadding="3" cellspacing="1">
			<tr> 
				<th height="28" align="left">
					<span class="xar-title">
						<xar:mlstring>
							Log in
						</xar:mlstring>
					</span>
				</th>	
			</tr>
			<tr> 
				<td align="center" valign="middle" height="28">
					<span class="xar-sub">
						<label for="uname">
							<xar:mlstring>
								Username
							</xar:mlstring>: 
						</label>
						<input type="text" name="uname" id="uname" maxlength="64" size="10" />
						&nbsp;&nbsp;&nbsp;
						<label for="pass">
							<xar:mlstring>
								Password
							</xar:mlstring>: 
						</label>
						<input type="password" name="pass" id="pass" maxlength="64" size="10" />
						<xar:if condition="xarConfigGetVar('Site.Session.SecurityLevel') ne 'High'">
							<label for="rememberme">
								<xar:mlstring>
									Remember me
								</xar:mlstring>
							</label>
							<input type="checkbox" name="rememberme" id="rememberme" value="1" />
						</xar:if>
						&nbsp;&nbsp;&nbsp; 
						<input type="hidden" name="redirecturl" id="returnurl" value="#$return_url#" />
						<input type="submit" value="#$submitlabel#" />
					</span> 
				</td>
			</tr>
		</table>
	</form>
</xar:if>

<br clear="all" />

<table cellspacing="3" border="0" align="center" cellpadding="0">
	<tr> 
		<td width="20" align="center">
			#$newpost#
		</td>
		<td>
			<span class="xar-sub">
				<xar:mlstring>
				    New posts
				</xar:mlstring>
			</span>
		</td>
		<td>
			&nbsp;&nbsp;
		</td>
		<td width="20" align="center">
			#$nonewpost#
		</td>
		<td>
			<span class="xar-sub">
				<xar:mlstring>
				    No new posts
				</xar:mlstring>
			</span>
		</td>
		<td>
			&nbsp;&nbsp;
		</td>
		<td width="20" align="center">
			#$locked#
		</td>
		<td>
			<span class="xar-sub">
				<xar:mlstring>
				    Forum Locked
				</xar:mlstring>
			</span>
		</td>
	</tr>
</table>

<xar:if condition="!empty($pager)">
#$pager#
</xar:if>