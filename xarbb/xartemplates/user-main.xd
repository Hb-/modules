<!-- TODO Put this in the forum list and stop using this tag -->
<table border="0" cellpadding="3" cellspacing="0" width="100%">
	<tr>
		<td><!--- we show the category count here too --->
			<xar:categories-navigation layout="trails" showchildren="1" module="xarbb" itemtype="1" func="main" showcatcount="1" />
		</td>
	</tr>
</table>
<table width="100%" cellspacing="0" cellpadding="2">
	<tr> 
		<td align="left" valign="bottom">
			<p>
				<xar:if condition="xarUserIsLoggedIn()">
					<span class="xar-sub">
						<xar:mlstring>
							You last visited on
						</xar:mlstring>
							#xarLocaleFormatDate('%a, %d %B %Y %H:%M:%S %Z', $lastvisitdate)#
							<br />
						<xar:mlstring>
							The current time is
						</xar:mlstring>
						#xarLocaleFormatDate('%a, %d %B %Y %H:%M:%S %Z', $now)#
						<br />
					</span>
				</xar:if>
				<span>
					<a class="xar-title" href="#xarModURL('xarbb', 'user', 'main')#">
						#xarModGetVar('themes', 'SiteName', 0)# #xarModGetVar('themes', 'SiteTitleSeparator', 0)#  #xarModGetVar('themes', 'SiteSlogan', 0)# #xarModGetVar('themes', 'SiteTitleSeparator', 0)# 
						<xar:mlstring>
							Forum Index
						</xar:mlstring>
					</a><br />
				</span>
			</p>
		</td>
		<td align="right" valign="bottom" class="xar-sub">
			<p>
				<xar:if condition="xarUserIsLoggedIn()">
					<a href="#xarModURL('xarbb', 'user', 'searchtopics', array('from' => $lastvisitdate))#">
						<xar:mlstring>
						    View topics since last visit
						</xar:mlstring>
					</a><br />
					<a href="#xarModURL('xarbb', 'user', 'searchtopics', array('by' => $uid))#">
						<xar:mlstring>
						    View your topics
						</xar:mlstring>
					</a><br />
					<a href="#xarModURL('xarbb', 'user', 'searchtopics', array('replies' => 1))#">
						<xar:mlstring>
						    View unanswered topics
						</xar:mlstring>
					</a>
				</xar:if>
			</p>
		</td>
	</tr>
</table>
<table width="100%" cellpadding="4" cellspacing="1">
	<tr> 
		<th colspan="2" nowrap="nowrap">
			<xar:mlstring>
				Forum
			</xar:mlstring>
		</th>
		<th width="50" nowrap="nowrap">
			<xar:mlstring>
				Topics
			</xar:mlstring>
		</th>
		<th width="50" nowrap="nowrap">
			<xar:mlstring>
				Posts
			</xar:mlstring>
		</th>
		<th width="250" nowrap="nowrap">
			<xar:mlstring>
				Last Post
			</xar:mlstring>
		</th>
	</tr>
