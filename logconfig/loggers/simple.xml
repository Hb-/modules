<object name="simple_logger">
  <label>File Logger</label>
  <moduleid>6969</moduleid>
  <itemtype>1</itemtype>
  <urlparam>itemid</urlparam>
  <maxid>0</maxid>
  <config>Logs to a file in text format.</config>
  <isalias>0</isalias>
  <properties>

    <property name="id">
      <label>Id</label>
      <type>itemid</type>
      <default></default>
      <source>dynamic_data</source>
      <status>2</status>
      <order>1</order>
      <validation></validation>
    </property>

    <property name="loggerType">
      <label>Logger Type</label>
      <type>static</type>
      <default>simple</default>
      <source>dynamic_data</source>
      <status>1</status>
      <order>2</order>
      <validation></validation>
    </property>

    <property name="description">
      <label>Logger Description</label>
      <type>static</type>
      <default>This logger will put the log into a file. You will need to enter its path and name.</default>
      <source>dynamic_data</source>
      <status>1</status>
      <order>3</order>
      <validation></validation>
    </property>

    <property name="fileName">
      <label>File</label>
      <type>textbox</type>
      <default>var/logs/log.txt</default>
      <source>dynamic_data</source>
      <status>1</status>
      <order>4</order>
      <validation>1:60</validation>
    </property>

    <property name="mode">
      <label>File Mode</label>
      <type>integerbox</type>
      <default>644</default>
      <source>dynamic_data</source>
      <status>1</status>
      <order>5</order>
      <validation>0:777</validation>
    </property>

    <property name="timeFormat">
      <label>Time Format</label>
      <type>dateformat</type>
      <default>%b %d %H:%M:%S</default>
      <source>dynamic_data</source>
      <status>1</status>
      <order>6</order>
      <validation></validation>
    </property>

    <property name="logLevel">
      <label>Log Level</label>
      <type>loglevel</type>
      <default></default>
      <source>dynamic_data</source>
      <status>1</status>
      <order>7</order>
      <validation></validation>
    </property>

  </properties>

</object>