<xar:set name="$updatebutton"><xar:mlstring>Update configuration</xar:mlstring></xar:set>
<xar:set name="$adocachel"><xar:mlstring>ADOdb Cache Path:</xar:mlstring></xar:set>
<xar:set name="$rsscachel"><xar:mlstring>RSS Cache Path:</xar:mlstring></xar:set>
<xar:set name="$templcachel"><xar:mlstring>Template Cache Path:</xar:mlstring></xar:set>
<xar:set name="$updatenote"><xar:mlstring>The default cache paths are entered below.<br />
                Change them only if you have changed default cache directory paths.<br />
                Note there is no trailing slash in the path names.</xar:mlstring></xar:set>
<xar:set name="$defado"><xar:mlstring>Default ADOdb Cache path is </xar:mlstring></xar:set>
<xar:set name="$defrss"><xar:mlstring>Default RSS Cache path is </xar:mlstring></xar:set>
<xar:set name="$deftem"><xar:mlstring>Default Template Cache path is </xar:mlstring></xar:set>

<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Site Tools Administration</xar:mlstring></span></div>
<div class="xar-mod-body"><h2><xar:mlstring>Modify Configuration</xar:mlstring></h2>
<div style="margin: auto;">

    <span style="float: left; width: 98%; text-align: right;">
       <form action="#xarModURL('sitetools', 'admin', 'updateconfig')#" method="post" enctype="application/x-www-form-urlencoded" />
        <input type="hidden" name="authid" id="authid" value="#$authid#" />
    </span>
    <span style="float: left; padding-bottom: 20px; padding-top: 30px; width: 98%; text-align: center;">
       #$updatenote#
    </span>

    <div style="clear: both; padding-top: 10px;">
		<span style="float: left; width: 30%; text-align: right;">
		<span class="help" title="#$defado# #$defadopath#">
            <label for="adopath">#$adocachel#</label>
        </span>
		</span>
		<span style="float: right; width: 68%; text-align: left;">
            <input type="text" name="adopath" id="adopath" size="40" maxlength="128" value="#$adopath#" />
        </span>
    </div>
    <div style="clear: both; padding-top: 10px;">
		<span style="float: left; width: 30%; text-align: right;">
		<span class="help" title="#$defrss# #$defrsspath#">
            <label for="rsspath">#$rsscachel#</label>
        </span>
		</span>
		<span style="float: right; width: 68%; text-align: left;">
            <input type="text" name="rsspath" id="rsspath" size="40" maxlength="128" value="#$rsspath#" />
        </span>
    </div>
    <div style="clear: both; padding-top: 10px;">
		<span style="float: left; width: 30%; text-align: right;">
		<span class="help" title="#$deftem# #$deftemplpath#">
            <label for="templpath">#$templcachel#</label>
        </span>
		</span>          
		<span style="float: right; width: 68%; text-align: left;">
            <input type="text" name="templpath" id="templpath" size="40" maxlength="128" value="#$templpath#" />
        </span>
    </div>

    <span style="float: left; padding-top: 30px; width: 98%; text-align: center;">
        <input type="submit" value="#$updatebutton#" align="center" />
    </span>
  </form>

</div>
</div>
