
<input type="hidden" name="authid" id="authid" value="#$authid#"/>
<input type="hidden" name="conn_id" id="conn_id" value="#$conn_id#"/>

<table>
  <tr>
    <td><label for="conn_name"><xar:mlstring>Connection name</xar:mlstring></label></td>
    <td><input type="text" name="conn_name" id="conn_name" value="#$name#"></td>
  </tr>
  <tr>
    <td><label for="conn_desc"><xar:mlstring>Description</xar:mlstring></label></td>
    <td><input type="textarea" name="conn_desc" id="conn_desc" value="#$description#"></td>
  </tr>
  <tr>
    <td><label for="conn_type"><xar:mlstring>Type</xar:mlstring></label></td>
    <td>
      <select name="conn_type" id="conn_type">
        <xar:if condition="$type eq 'mysql'">
          <option selected="selected" value="mysql">MySql</option>
        </xar:if>
        <xar:if condition="$type eq 'mysql'">
          <option selected="selected" value="odbc">ODBC</option>
        </xar:if>
      </select>
    </td>
  </tr>
  <tr>
    <td><label for="conn_server"><xar:mlstring>Server</xar:mlstring></label></td>
    <td><input type="text" name="conn_server" id="conn_server" value="#$server#"></td>
  </tr>
  <tr>
    <td><label for="conn_database"><xar:mlstring>Database name</xar:mlstring></label></td>
    <td><input type="text" name="conn_database" id="conn_database" value="#$database#"></td>
  </tr>
  <tr>
    <td><label for="conn_user"><xar:mlstring>User</xar:mlstring></label></td>
    <td><input type="text" name="conn_user" id="conn_user" value="#$user#"></td>
  </tr>
  <tr>
    <td><label for="conn_password"><xar:mlstring>Password</xar:mlstring></label></td>
    <td><input type="password" name="conn_password" id="conn_password" value="#$password#"></td>
  </tr>
</table>

