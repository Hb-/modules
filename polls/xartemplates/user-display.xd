<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Vote</xar:mlstring></span></div>
<div class="xar-mod-body"><h2>#$title#</h2>
<div style="text-align: center;margin: auto;">
<xar:if condition="!$canvote">
    <p><xar:mlstring>You are not allowed to vote on this Poll.</xar:mlstring></p>
<xar:else />
    <form method="post" action="&xar-modurl-polls-user-vote;">
    <xar:if condition="$private">
        <p><xar:mlstring>This Poll is currently private.  Results will not be shown.</xar:mlstring></p>
    </xar:if>
    <table cellpadding="2" cellspacing="0" style="align: center;margin: auto;border: 0px;">
    <xar:for start="$i = 1" test="$i <= count($options)" iter="$i++">
    <tr>
        <td>
			<input type="hidden" name="authid" value="#$authid#" />
			<input type="hidden" name="pid" value="#$pid#" />
            <xar:if condition="$type eq 'single'">
                <input type="radio" name="option" id="polloption_#$i#" value="#$i#" />
            <xar:elseif condition="$type eq 'multi'" />
                <input type="checkbox" name="option_#$i#" id="polloption_#$i#" value="#$i#" />
            </xar:if>
        </td>
        <td style="text-align: left;"><label for="polloption_#$i#">#$options[$i]['name']#</label></td>
    </tr>
    </xar:for>
    </table>
    <p><input type="submit" value="#$buttonlabel#" /></p>
    <xar:if condition="$previewresults">
    <p><a href="#$resultsurl#"><xar:mlstring>View Results</xar:mlstring></a></p>
    </xar:if>
    <p><a href="#xarModUrl('polls', 'user', 'list')#"><xar:mlstring>Previous Polls</xar:mlstring></a></p>
    </form>
</xar:if>
    </div>
<div class="xar-mod-foot">
#$hookoutput#
</div>
</div>