</xar:comment>
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Polls Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2>
        <xar:mlstring>
            Modify Poll
        </xar:mlstring>
    </h2>
    <div style="margin: auto;">
        <form method="post" name="post" id="post" action="&xar-modurl-polls-admin-update;">
            <input type="hidden" name="authid" value="#$authid#">
            <input type="hidden" name="pid" value="#$pid#">
            <div style="clear: both; padding-top: 1opx;">
                <span style="float: left; width: 20%; text-align: right;">
                    <label for="title">
                        <xar:mlstring>
                            Poll title
                        </xar:mlstring>
                    </label>:
                </span>
                <span style="float: right; width: 78%; text-align: left;">
                    <input type="text" name="title" id="title" size="50" maxlength="100" value="#$polltitle#">
                </span>
            </div>
            <div style="clear: both; padding-top: 10px;">
                <span style="float: left; width: 20%; text-align: right;">
                    <xar:mlstring>
                        Poll type
                    </xar:mlstring>:
                </span>
                <span style="float: right; width: 78%; text-align: left;">
                    <xar:if condition="$polltype eq 'single'">
                        <input type="radio" name="polltype" value="single" checked="checked" />
                    <xar:else />
                        <input type="radio" name="polltype" value="single" />
                    </xar:if>
                    &nbsp;
                    <xar:mlstring>
                        Single Choice
                    </xar:mlstring>
                    <xar:if condition="$polltype eq 'multi'">
                        <input type="radio" name="polltype" value="multi" checked="checked" />
                    <xar:else />
                        <input type="radio" name="polltype" value="multi" />
                    </xar:if>
                    &nbsp;
                    <xar:mlstring>
                        Multiple Choice
                    </xar:mlstring>
                </span>
            </div>
            <div style="clear: both; padding-top: 10px;">
                <span style="float: left; width: 20%; text-align: right;">
                    <label for="private">
                        <xar:mlstring>
                            Private
                        </xar:mlstring>
                    </label>:
                </span>
                <span style="float: right; width: 78%; text-align: left;">
                    <xar:if condition="$private">
                        <input type="checkbox" name="private" id="private" value="1" checked="checked" />
                    <xar:else />
                        <input type="checkbox" name="private" id="private" value="1" />
                    </xar:if>
                </span>
            </div>
            <div style="clear: both; padding-top: 10px;">
                <span style="float: left; width: 98%; text-align: center;">
                    #$hooks#
                </span>
            </div>
            <div style="clear: both; padding-top: 10px;">
                <span style="float: left; width: 98%; text-align: center;">
                    <a href="&xar-modurl-polls-admin-display;&amp;pid=#$pid#">
                        <xar:mlstring>
                            Edit options
                        </xar:mlstring>
                    </a>
                </span>
            </div>
            <div style="clear: both; padding-top: 10px;">
                <span style="float: left; width: 98%; text-align: center;">
                    <input type="submit" value="#$buttonlabel#">
                </span>
            </div>
        </form>
    </div>
</div>
