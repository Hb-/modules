<!-- Symbolen subtemplate -->
<style type="text/css">
.symbool {
    width: 100pt;
    margin: 0pt;
    border: 0;
    padding: 2pt;
}
</style>

<xar:set name="sql">'
    select Symbolen.Omschrijving, Symbolen.Code, Symbolen.symbool, Symbolen.id AS symbool_id
    from Symbolen, StofToepassingSymbolen
    where groepid='.$groupid.' AND
          StofToepassingSymbolen.Benamingid = ? AND
          StofToepassingSymbolen.Afdelingid = ? AND
          StofToepassingSymbolen.symboolid = Symbolen.id'
</xar:set>
    
<xar:set name="symset">
  <xar:reports-dataset connection="$connection" sql="$sql" vars="array($benamingid,$afdelingid)"/>
</xar:set>
    
<xar:if condition="!$symset-&gt;EOF">
 <table>
    <tr>
      <xar:while condition="!$symset-&gt;EOF">
        <td>
          <span class="label center large"><xar:reports-dataitem dataset="$symset" name="Code"/></span><br/>
          <xar:reports-dataitem dataset="$symset" name="symbool" type="image/jpeg" unique_id="symbool_id"/>
          <img class="symbool" src="#$symbool#" /><br/>
          <span class="small" align="center"><xar:reports-dataitem dataset="$symset" name="Omschrijving"/></span>
        </td>
        <xar:set name="nextrow">$symset->MoveNext()</xar:set>
      </xar:while>
    </tr>
  </table>
</xar:if>