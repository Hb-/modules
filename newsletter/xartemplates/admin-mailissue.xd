<div class="xar-mod-head">
    <span class="xar-mod-title">#$menu['menutitle']#</span>
</div>
<div class="xar-mod-body">
    <h2><xar:mlstring>Publish Issue</xar:mlstring></h2><br />
    <div style="text-align: left;margin: auto;">
        <table width="100%" border="0" cellspacing="0" cellpadding="4">
            <tr>
                <td width="20%">
                    <xar:mlstring>Issue:</xar:mlstring>
                    <br />
                </td>
                <td>
                    <b>#$publication['title']#&nbsp;:&nbsp;#$issue['title']#</b>
                </td>
            </tr>
            <tr>
                <td width="20%">
                    <xar:mlstring>Total Sent:</xar:mlstring>
                </td>
                <td>
                    <b>#$issueCounts['total']#</b>
                </td>
            </tr>
            <tr>
                <td width="20%">
                    <xar:mlstring>Total Errors:</xar:mlstring>
                </td>
                <td>
                    <b>#$issueCounts['errors']#</b>
                </td>
            </tr>
        </table>
        <br />
        <xar:if condition="!empty($subscriptions)">
        <table width="100%" border="0" cellspacing="0" cellpadding="4">
            <tr>
                <td align="left" valign="top" colspan="4">
                    <xar:mlstring>Sent to:</xar:mlstring>
                    <br />
                </td>
            </tr>
            <tr>
                <td><b><xar:mlstring>User Name</xar:mlstring></b></td>
                <td><b><xar:mlstring>Email</xar:mlstring></b></td>
                <td><b><xar:mlstring>HTML/Text</xar:mlstring></b></td>
                <td><b><xar:mlstring>Error</xar:mlstring></b></td>
            </tr>
            <xar:loop name="$subscriptions">
                <tr>
                    <td>
                        <xar:if condition="empty($loop:item['nameurl'])">
                            #$loop:item['name']#
                        <xar:else />
                            <a href="#$loop:item['nameurl']#">#$loop:item['name']#</a>
                        </xar:if>
                    </td>
                    <td>
                        <xar:if condition="empty($loop:item['emailurl'])">
                            #$loop:item['email']#
                        <xar:else />
                            <a href="#$loop:item['emailurl']#">#$loop:item['email']#</a>
                        </xar:if>
                    </td>
                    </td>
                    <xar:if condition="$loop:item['htmlmail'] eq true">
                        <td>HTML</td>
                    <xar:else />
                        <td>Text</td>
                    </xar:if>
                    <xar:if condition="$loop:item['mailerror'] eq true">
                        <td><b>ERROR</b></td>
                    <xar:else />
                        <td>&nbsp;</td>
                    </xar:if>
                </tr>
            </xar:loop>
        </table>
        <xar:else />
            <table width="100%" border="0" cellspacing="0" cellpadding="4">
                <tr>
                    <td>
                        <b><xar:mlstring>Nobody has subscribed to this publication!</xar:mlstring></b>
                    </td>
                </tr>
            </table>
        </xar:if>
        <br />
    </div>
</div>
