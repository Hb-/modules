    <div style="clear: both; padding-top: 10px;">
        <span style="float: left; width: 20%; text-align: right;">
            <span class="help" title="#xarML('The Featured Item ID.')#">
            <label for="numitems#$blockid#"><xar:mlstring>Featured Item No:</xar:mlstring></label>:</span>
        </span>
        <span style="float: right; width: 78%; text-align: left;">
             <input type="text" name="numitems" id="numitems#$blockid#" value="#$numitems#" size="5" maxlength="5" />
        </span>
    </div>
    <div style="clear: both; padding-top: 10px;">
        <span style="float: left; width: 20%; text-align: right;">
            <span class="help" title="#xarML('ID of Featured Store')#">
            <label for="featuredstore#$blockid#"><xar:mlstring>Featured Store ID</xar:mlstring></label>:
            </span>
        </span>
        <span style="float: right; width: 78%; text-align: left;">
              <select name="featuredstore" id="featuredstore" size="1">
                    <xar:foreach in="$shopdata" key="$k" value="$v">
                        <xar:if condition="$k['id'] eq $featuredstore">
                            <option value="#$v['id']#" selected="selected">#$v['name']#</option>
                        <xar:else />
                            <option value="#$v['id']#">#$v['name']#</option>
                        </xar:if>
                    </xar:foreach>
                    </select>
                </span>
    </div>

