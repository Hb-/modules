<xar:if condition="!isset($error)">

    <div class="xar-mod-head">
        <span class="xar-mod-title">
            <xar:mlstring>Messages</xar:mlstring>
        </span>
    </div>

    <div class="xar-mod-body">
        <h2>
            <xar:mlstring>Messages Overview</xar:mlstring>
        </h2>

        <div align="center">
            <xar:mlstring>Welcome to Messages module</xar:mlstring>
        </div>
