<xar:else />
    <div class="xar-mod-head">
        <span class="xar-mod-title">
            <xar:mlstring>Messages</xar:mlstring>
        </span>
    </div>
    <br />
    <div class="xar-norm">
        #$error#
    </div>
</xar:if>