<div class="xar-mod-head"><span class="xar-mod-title">#$namelabel#</span></div>
<div class="xar-mod-body">
    <h2><xar:mlstring>Subscription Summary</xar:mlstring></h2>
    <div align="center">
    <table width="100%" border="0" cellspacing="0" cellpadding="2">
    <tr>
        <th>
            #$modnamelabel#
        </th>
        <th>
            #$categorylabel#
        </th>
        <th>
            #$numsubscriberslabel#
        </th>
        <th>
            #$actionlabel#
        </th>
    </tr>
    <xar:if condition="count($items) gt 0">
    <xar:foreach in="$items" value="$item">
    <tr>
        <td>
            #$item['modname']#
        </td>
        <td>
            #$item['catname']#
        </td>
        <td>
            #$item['numsubscribers']#
        </td>
        <td>
            <a href="#xarModURL('pubsub','admin','viewsubscribers',array('catname'=>$item['catname'],'cid'=>$item['cid']))#"><xar:mlstring>Subscribers</xar:mlstring></a>
        </td>
     </tr>
     </xar:foreach>
    <xar:else />
    <tr>
      <td colspan="5" align="left">
      <br />
      <strong><xar:mlstring>No subscriptions found</xar:mlstring></strong>
      </td>
    </tr>
    </xar:if>
</table>
</div>
</div>
<!-- add the pager here -->
#$pager#
