<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Headlines Ad
ministration</xar:mlstring></span></div>
<!-- common admin menu for this module - remove link to the current function -->
<div class="xar-mod-body">
<h2><xar:mlstring>View Headlines</xar:mlstring></h2>
<div align="center">
<table width="100%" border="0" cellspacing="0" cellpadding="2">
    <tr>
        <th>
                        #$modnamelabel#
                </th>
                <th>
                        #$categorylabel#
                </th>
        <th>
                        #$itemlabel#
                </th>
        <th>
                        #$numsubscriberslabel#
                </th>
        <th>
                        #$templatelabel#
                </th>
        </tr>
    <xar:if condition="count($items) gt 0">
    <xar:loop name="$items">
    <tr>
        <td>
			#$modname#
  	</td>
        <td>
			#$category#
  	</td>
        <td>
			#$item#
  	</td>
        <td>
			#$numsubscribers#
  	</td>
        <td>
			#$template#
  	</td>
     </tr>
     </xar:loop>
    <xar:else />
    <tr>
      <td colspan="5" align="left">
      <br />
      <strong><xar:mlstring>No headlines found</xar:mlstring></strong>
      </td>
    </tr>
    </xar:if>
</table>
</div>
</div>
<!-- add the pager here -->
#$pager#
