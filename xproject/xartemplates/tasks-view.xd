
<table border="0" width="100%">

    <!-- the variables used in this menu come from example_user_menu() -->

    <tr><th align="center">&xar-var-menutitle;</th></tr>
    <tr><td>
        <table border="0" width="100%"><tr align="center" valign="middle">

        <td><a href="&xar-modurl-xproject-admin-new;">&xar-var-menulabel_new;</a></td>
        <td><strong>&xar-var-menulabel_view;</strong></td>
        <td><a href="&xar-modurl-xproject-user-search;">&xar-var-menulabel_search;</a></td>
        <td><a href="&xar-modurl-xproject-admin-modifyconfig;">&xar-var-menulabel_config;</a></td>

        </tr></table>
    </td></tr>
</table>
<br />

<xar:if condition="!empty($status)">
    <strong>&xar-var-status;</strong>
<xar:else />

<xar:blockgroup name="toxarav" id="toxarav" />

<table border="0" cellspacing="0" cellpadding="5">
    <tr>
        <td align="right">&xar-var-name_label; : </td>
        <td>&xar-var-name_value;</td>
    </tr>
    <tr>
        <td align="right">&xar-var-description_label; : </td>
        <td>&xar-var-description_value;</td>
    </tr>
</table>
<br />

<!-- add the output from display hooks here -->
&xar-var-hookoutput;
</xar:if>

<table border="1" cellpadding="5" cellspacing="0">
    <xar:loop name="tasks" prefix="task">
    <tr align="center"><td>

        <xar:if condition="empty($task_link)">
            &xar-var-task_name;
            <xar:else />
               <a href="&xar-var-task_link;">&xar-var-task_name;</a>
        </xar:if>

    </td></tr>
    </xar:loop>

</table>
