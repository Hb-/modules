<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>xProject</xar:mlstring></span></div>
<div class="xar-mod-body">
<h2><xar:mlstring>View Projects</xar:mlstring></h2>
<div align="center">
<xar:if condition="!empty($status)">
    <div>#$status#</div>
</xar:if>

<table border="0" cellpadding="2" cellspacing="1" class="xar-accent">
    <tr>
        <th><xar:mlstring>Name</xar:mlstring></th>
        <th><xar:mlstring>Description</xar:mlstring></th>
        <th><xar:mlstring>Tasks</xar:mlstring></th>
        <th><xar:mlstring>Options</xar:mlstring></th>
    </tr>
    <xar:loop name="$xprojects" prefix="project">
    <tr><td class="xar-norm">

        <xar:if condition="empty($project_link)">
            #$project_name#
            <xar:else />
               <a href="#$project_link#">#$project_name#</a>
        </xar:if>

    </td>
    <td class="xar-norm">#$project_description#
    </td>
    <td class="xar-norm" align="center">#$project_numtasks#
    </td>
        <td class="xar-norm" align="center">[ 
           <xar:if condition="empty($project_editurl)">
               #$project_edittitle#
           <xar:else />
                   <a href="#$project_editurl#">#$project_edittitle#</a>
           </xar:if>
           |
           <xar:if condition="empty($project_deleteurl)">
               #$project_deletetitle#
           <xar:else />
                   <a href="#$project_deleteurl#">#$project_deletetitle#</a>
           </xar:if> ]
        </td>
  </tr>
    </xar:loop>

</table>
<br />
</div>
</div>
<div class="xar-mod-foot">
#$pager#
</div>
