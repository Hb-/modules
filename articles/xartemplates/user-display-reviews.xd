<xar:template file="publinks" type="module" />
<xar:categories-navigation layout="trails" showchildren="1" module="articles" itemtype="$ptid" itemid="$aid" cids="$cids" showcatcount="$showcatcount" showempty="0" />

<table border="0" cellpadding="3" cellspacing="0">
<tr>
  <td align="right">
    <xar:mlstring>Title:</xar:mlstring>
  </td>
  <td align="left">
    #$title#
    <xar:if condition="!empty($editurl)">
      [<a href="#$editurl#">#$edittitle#</a>]
    </xar:if>
    <br />
  </td>
</tr>
<xar:if condition="!empty($notes)">
<tr>
  <td align="right" valign="top">
    <xar:mlstring>Image:</xar:mlstring>
  </td>
  <td align="center">
    <img src="#$notes#" border="0" alt="#$title#" />
    &nbsp;
  </td>
</tr>
</xar:if>
<tr>
  <td align="right" valign="top">
    <xar:mlstring>Review:</xar:mlstring>
  </td>
  <td align="left">
    #$summary#
  </td>
</tr>
<tr>
  <td align="right">
    <xar:mlstring>Added on:</xar:mlstring>
  </td>
  <td align="left">
    #$date#
  </td>
</tr>
<tr>
  <td align="right">
    <xar:mlstring>By:</xar:mlstring>
  </td>
  <td align="left">
    <xar:if condition="!empty($profile)">
      <a href="#$profile#">#$author#</a>
    <xar:else />
      #$author#
    </xar:if>
  </td>
</tr>
<xar:if condition="!empty($body) or !empty($redirect)">
<tr>
  <td align="right">
    <xar:mlstring>Related Link:</xar:mlstring>
  </td>
  <td align="left">
    <xar:if condition="!empty($redirect)">
        <a href="#$redirect#">#$body#</a>
    <xar:else/>
        #$body#
    </xar:if>
    &nbsp;
  </td>
</tr>
</xar:if>
<xar:if condition="!empty($rating)">
<tr>
  <td align="right">
    <xar:mlstring>Rating:</xar:mlstring>
  </td>
  <td align="left">
    #$rating#
  </td>
</tr>
</xar:if>
<xar:if condition="!empty($counter)">
<tr>
  <td align="right">
    <xar:mlstring>Reads:</xar:mlstring>
  </td>
  <td align="left">
    #$counter#
  </td>
</tr>
</xar:if>
</table>

<xar:if condition="!empty($prevart) || !empty($nextart)">
<br />
<table border="0" width="95%">
<tr>
    <td align="left"><xar:if condition="!empty($prevart)"><a href="#$prevart#">&lt; <xar:mlstring>prev</xar:mlstring> </a></xar:if>&nbsp;</td>
    <td align="right">&nbsp;<xar:if condition="!empty($nextart)"> <a href="#$nextart#"><xar:mlstring>next</xar:mlstring> &gt;</a></xar:if></td>
</tr>
</table>
</xar:if>

<xar:if condition="!empty($hooks)">
<br />
<xar:foreach in="$hooks" key="$hookmodule">
#$hooks[$hookmodule]#
</xar:foreach>
</xar:if>

<br />
<xar:if condition="!empty($maplink) or !empty($archivelink)">
<table border="0" width="95%">
<tr>
    <xar:if condition="!empty($maplink)">
    <td align="left">
        <a href="#$maplink#">#$maplabel#</a>
    </td>
    </xar:if>
    <xar:if condition="!empty($archivelink)">
    <td align="right">
        <a href="#$archivelink#">#$archivelabel#</a>
    </td>
    </xar:if>
</tr>
</table>
</xar:if>

