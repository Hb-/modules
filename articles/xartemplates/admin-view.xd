<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Articles Administration</xar:mlstring></span></div>
<div class="xar-mod-body"><h2><xar:mlstring>View Articles</xar:mlstring></h2>
<div style="margin: auto;">
	<!-- Roles is a core module.  We should be able to count on that being there, although I believe that it should go in the base module -->
	<xar:if condition="xarTplAddStyleLink('roles', 'tabs')">
	<p>
		<div id="tabnav">
			<div class="help" title="#xarML('Click on a tab to display articles from that publication type')#"><xar:mlstring>Publication Type</xar:mlstring> :</div>
			<xar:foreach in="$pubfilters" value="$pubfilter">
				<xar:if condition="empty($pubfilter['plink'])">
					<div>
						<a href="#xarServerGetCurrentURL()#" title="#$pubfilter['ptitle']#" class="active">
							#$pubfilter['ptitle']#
						</a>
					</div>
				<xar:else />
					<div>
						<a href="#$pubfilter['plink']#" title="#$pubfilter['ptitle']#">
							#$pubfilter['ptitle']#
						</a>
					</div>
				</xar:if>
			</xar:foreach>
		</div>
	</p>
	</xar:if>
	<xar:if condition="!empty($labels['status'])">
		<xar:if condition="xarTplAddStyleLink('roles', 'tabs')">
		<p>
			<div id="tabnav">
				<div class="help" title="#xarML('Click on the status to filter results by status only')#"><xar:mlstring>Status</xar:mlstring> :</div>
				<xar:foreach in="$statusfilters" value="$statusfilter">
					<xar:if condition="empty($statusfilter['slink'])">
						<div>
							<a href="#xarServerGetCurrentURL()#" title="#$statusfilter['stitle']#" class="active">
								#$statusfilter['stitle']#
							</a>
						</div>
					<xar:else />
						<div>
							<a href="#$statusfilter['slink']#" title="#$statusfilter['stitle']#">
								#$statusfilter['stitle']#
							</a>
						</div>
					</xar:if>
				</xar:foreach>
			</div>
		</p>
		</xar:if>
	</xar:if>
	<p>
		<xar:categories-navigation layout="trails" showchildren="1" module="articles" type="admin" itemtype="$ptid" catid="$catid" />
	</p>
<xar:if condition="$showstatus">
<form method="post" action="#xarModURL('articles','admin','updatestatus')#">
<div>
<input type="hidden" name="ptid" id="ptid" value="#$ptid#" />
<input type="hidden" name="catid" id="catid" value="#$catid#" />
<input type="hidden" name="authid" id="authid" value="#xarSecGenAuthKey()#" />
</xar:if>
<xar:if condition="$shownewlink">
    <h3><a href="#$newurl#"><xar:mlstring>New Article</xar:mlstring></a></h3>
</xar:if>
<table width="100%" border="0" cellpadding="2" cellspacing="1" class="xar-accent">
    <tr>
        <th>#$labels['title']#</th>
        <xar:if condition="$showdate">
            <th>#$labels['pubdate']#</th>
        </xar:if>
        <xar:if condition="$showstatus">
            <th colspan="2">#$labels['status']#</th>
        </xar:if>
        <th><xar:mlstring>Options</xar:mlstring></th>
    </tr>
<xar:foreach in="$items" value="$item">
    <tr>
        <td class="xar-norm">#$item['title']#</td>
        <xar:if condition="$showdate">
            <td class="xar-norm">#xarLocaleFormatDate('%x %X %z',$item['pubdate'])#</td>
        </xar:if>
        <xar:if condition="$showstatus">
            <td class="xar-norm">
                <label for="aids[#$item['aid']#]">#$item['status']#</label>
            </td>
            <td class="xar-norm">
                <xar:if condition="!empty($item['editurl'])">
                    <input type="checkbox" name="aids[#$item['aid']#]" id="aids[#$item['aid']#]" value="1" #$item['selected']# />
                </xar:if>
            </td>
        </xar:if>
        <td style="text-align: center;" class="xar-norm">
            <xar:if condition="empty($item['viewurl'])">
                #$item['viewtitle']#
                <xar:else />
                    <a href="#$item['viewurl']#">#$item['viewtitle']#</a>
            </xar:if>
           |
            <xar:if condition="empty($item['editurl'])">
                #$item['edittitle']#
                <xar:else />
                    <a href="#$item['editurl']#">#$item['edittitle']#</a>
            </xar:if>
           |
            <xar:if condition="empty($item['deleteurl'])">
                #$item['deletetitle']#
                <xar:else />
                    <a href="#$item['deleteurl']#">#$item['deletetitle']#</a>
            </xar:if>
        </td>
    </tr>
</xar:foreach>
</table>
<xar:if condition="!empty($showstatus) and count($items) gt 0">
<p><label for="status"><xar:mlstring>Change checked article status to</xar:mlstring>:</label>&nbsp;
<select name="status" id="status">
    <option value="0"><xar:mlstring>Submitted</xar:mlstring></option>
    <option value="1"><xar:mlstring>Rejected</xar:mlstring></option>
    <option value="2" selected="selected"><xar:mlstring>Approved</xar:mlstring></option>
<xar:if condition="xarModGetVar('articles','defaultpubtype') eq $ptid or xarModGetVar('articles','defaultpubtype') eq ''">
    <option value="3"><xar:mlstring>Front Page</xar:mlstring></option>
</xar:if>
</select>
&nbsp;<input type="submit" value="#$changestatuslabel#" /></p>
</xar:if>
</div>
</form>

<br />
#$pager#
</div>
</div>
