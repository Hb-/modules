<xar:if condition="!empty($feature)">
    <xar:foreach in="$feature" value="$item">
        <xar:if condition="!empty($item['featuredlabel'])">
            <xar:if condition="!empty($item['alttitle'])">
                <a href="#$item['featuredlink']#">#$item['alttitle']#</a>
            <xar:else />
                <a href="#$item['featuredlink']#">#xarVarPrepForDisplay($item['featuredlabel'])#</a>
            </xar:if>
            <br />
            <xar:if condition="!empty($item['featureddesc'])">
                #xarVarPrepHTMLDisplay($item['featureddesc'])#
                <br />
            </xar:if>
        </xar:if>
    </xar:foreach>
</xar:if>

<xar:if condition="!empty($items)">
    <br />
    <div class="xar-block-title"><xar:mlstring>More Featured Headlines</xar:mlstring>:</div>
    <xar:foreach in="$items" value="$item">
        &bull;
        <xar:if condition="empty($item['link'])">
            #xarVarPrepForDisplay($item['label'])#
        <xar:else />
            <a href="#$item['link']#">#xarVarPrepForDisplay($item['label'])#</a>
        </xar:if>
        <xar:if condition="!empty($item['count'])">
            (#$item['count']#)
        </xar:if>
        <br />
        <xar:if condition="!empty($item['desc'])">
            #xarVarPrepHTMLDisplay($item['desc'])#
            <br />
        </xar:if>
    </xar:foreach>
</xar:if>