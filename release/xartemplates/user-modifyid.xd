<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Release Module</xar:mlstring></span></div>
<!-- common admin menu for this module - remove link to the current function -->
<div class="xar-mod-body">
<h2><xar:mlstring>Release Module :: Modify A Release ID</xar:mlstring></h2>

<div align="center">
	<br /><br />
	<form action="#xarModURL('release', 'user', 'modifyid')#" method="post" enctype="application/x-www-form-urlencoded">
		<input type="hidden" name="authid" id="authid" value="#$authid#" />
		<input type="hidden" name="phase" id="phase" value="update" />	
		<input type="hidden" name="rid" id="rid" value="#$rid#" />	
		<input type="hidden" name="certified" id="certified" value="#$certified#" />	
		<table border="0" cellpadding="5">
			<tr>
				<td align="left" valign="top" class="xar-norm">
					<xar:mlstring>Module or Theme ID</xar:mlstring>
				</td>
				<td align="left" valign="top" class="xar-norm">
					#$rid#
				</td>
			</tr>
			<tr>
				<td align="left" valign="top" class="xar-norm">
					<label for="name"><xar:mlstring>Module or Theme Name</xar:mlstring></label>
				</td>
				<td align="left" valign="top" class="xar-norm">
					<input type="text" name="name" id="name" value="#$name#" size="25" maxlength="60" tabindex="2" />
				</td>
			</tr>
			<tr>
				<td align="left" valign="top" class="xar-norm">
					<label for="name"><xar:mlstring>New owner User ID</xar:mlstring></label>
				</td>
				<td align="left" valign="top" class="xar-norm">
					<input type="text" name="uid" id="uid" value="#$uid#" size="5" maxlength="10" tabindex="2" />
				</td>
			</tr>
			<tr>
				<td align="left" valign="top" class="xar-norm">
					<label for="desc"><xar:mlstring>Description</xar:mlstring></label>
				</td>
				<td align="left" valign="top" class="xar-norm">
					<textarea name="desc" id="desc" tabindex="4" rows="10" cols="50" />#$desc#</textarea> 
				</td>
			</tr>
			<tr>
				<td align="left" valign="top" class="xar-norm">
					<xar:mlstring>Type</xar:mlstring>
				</td>
				<td align="left" valign="top" class="xar-norm">
					<select name="idtype">
						<xar:if condition="$type eq 'Module'">
						<option label="module" name="module" selected><xar:mlstring>Module</xar:mlstring></option>
						<option label="theme" name="theme"><xar:mlstring>Theme</xar:mlstring></option>
						<xar:else />
						<option label="module" name="module"><xar:mlstring>Module</xar:mlstring></option>
						<option label="theme" name="theme" selected><xar:mlstring>Theme</xar:mlstring></option>
						</xar:if>
					</select>
				</td>
			</tr>
			<tr>
				<td align="left" valign="top" class="xar-norm">
                    <label for="rstate" class="help" title="#xarML('Please enter the current development state of your extension.')#">
                        <xar:mlstring>Extension State:</xar:mlstring>
                    </label>&nbsp;&nbsp;
				</td>
				<td align="left" valign="top" class="xar-norm">
                    
	                <select name="rstate" id="rstate" size="1">
		            <xar:foreach in="$stateoptions" value="$v" key="$k">
		                <xar:if condition="$k eq $rstate">
			                <option value="#$k#" selected="selected">#$v#</option>
		                <xar:else />
			                <option value="#$k#">#$v#</option>
		                </xar:if>
		            </xar:foreach>
	                </select>
			    </td>
			</tr>
			<tr>
				<td align="left" valign="top" class="xar-norm" colspan="2">
                    #$cathook#
				</td>
			</tr>
		</table>			
		<br /><br />
		<input type="submit" value="Modify ID"  tabindex="6" />
	</form>
</div>
