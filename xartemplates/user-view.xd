<xar:style scope="module" />
<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Maxercalls</xar:mlstring></span></div>
    <div class="xar-mod-body">

		<div class="xar-maxercalls xar-maxercalls-user-view">
			
			<xar:template file="header" />
				
				<xar:if condition="!empty($status)">
					#$status#</b>
				</xar:if>
				<xar:if condition="xarModIsHooked('categories','maxercalls')">
				  <xar:categories-navigation layout="trails" showchildren="1" 
				  module="maxercalls" catid="$catid" />
				</xar:if>
				<div class="xar-maxercalls-contents">
				<table width="100%" border="1" cellspacing="0" cellpadding="4">
					<tr>
						<th>#$calldatelabel#</th>
						<th>#$calltimelabel#</th>
						<th>#$calltextlabel#</th>
						<th>#$remarkslabel#</th>
					</tr>
					<xar:foreach in="$items" value="$item">
					<tr>
						<td>
						<xar:if condition="empty($item['link'])">
							#$item['calldate']#
						<xar:else />
							<a href="#$item['link']#">#$item['calldate']#</a>
						</xar:if>		
						</td>
						<td>#$item['calltime']#</td>
						<td>#$item['calltext']#</td>
						<td>#$item['remarks']#</td>
					</tr>
					</xar:foreach>
				</table>
				</div>
				<br />
			</div>
		</div>
<!-- add the pager here -->
#$pager#

