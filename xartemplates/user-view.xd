<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Choose a report to generate</xar:mlstring>
    </span>
</div>

<div class="xar-mod-body">
  <table width="100%" cellspacing="1" cellpadding="1" border="0">
    <tr>
      <th><xar:mlstring>Report name</xar:mlstring></th>
      <th><xar:mlstring>Report description</xar:mlstring></th>
     </tr>
     <xar:loop name="$reportlist">
      <tr>
        <td>
          <a href="&xar-modurl-reports-user-generate;&amp;rep_id=#$loop:item['id']#">#$loop:item['name']#</a>
        </td>
        <td>#$loop:item['description']#</td>
      </tr>
    </xar:loop>
  </table>
</div>
  
    