<xar:comment> License: GPL http://www.gnu.org/copyleft/gpl.html </xar:comment>
<xar:if condition="!empty($status)">
    <strong>#$status#</strong>
</xar:if>

<div style="margin-left: 1em; margin-right: 1em; text-align:center;">
        <div class="xar-mod-head"><span class="xar-mod-title">
            #$linkme1# </span>
        </div>
        <div style="margin-left: 1em; margin-right: 1em; text-align:center;">
            <p>
                 #$linkme2#
            </p>
            <p>
                #$linkme3#
            </p>
        </div>

    <xar:foreach in="$items" value="$item" key="$key">
          <div class="xar-standard-box-padding">
             <!-- we only show a link if the item link variable is not empty -->
             <xar:if condition="empty($item)">
             <xar:else />
               <p class="xar-align-center">#$item#</p>
               <p class="xar-align-center"><img alt="#$alttxt#" src="#$imgpath#/#$item#" /></p>
               <xar:comment>Only show linking code if you allow direct linking</xar:comment>
               <xar:if condition="xarModGetVar('xarlinkme','allowlinking') eq true">
                   <p class="xar-align-center">
                        <textarea class="mceNoEditor" rows="6" name="L1" cols="60">&lt;!-- begin link --&gt;&lt;a href="#$siteurl#"  rel="external" title="#$alttxt#" &gt;&lt;img alt="#$alttxt#" src="#$imgpath#/#$item#" border="0" /&gt;&lt;/a&gt;&lt;!-- end link --&gt;</textarea>
                   </p>
               </xar:if>
            </xar:if>
            <hr />
         </div>
    </xar:foreach>
          <div class="xar-standard-box-padding">
             <p class="xar-align-center">#$textlink#</p>
         </div>
         <div class="xar-standard-box-padding">
           <a href="#$siteurl#" rel="external">#$go# #$sitename#</a><br />
            <p class="xar-align-center">
            <textarea class="mceNoEditor" rows="6" name="L2" cols="60">&lt;!-- begin link --&gt;&lt;a href="#$siteurl#" rel="external" title="#$alttxt#" &gt;#$go# #$sitename#&lt;/a&gt;&lt;!-- end link --&gt;</textarea></p>
            <hr />
          </div>

</div>
<p>
<!-- add the pager here -->
#$pager#
</p>