<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Newsletter Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2><xar:mlstring>New Issue</xar:mlstring></h2>
<xar:comment>
<script type="text/javascript">
function radio_input(redirect)
{
// Re-direct the browser to the modurl value
window.location.href = redirect;
}
</script>
</xar:comment>
    <form name="post" id="post" action="&xar-modurl-newsletter-admin-createissue;" method="post" enctype="application/x-www-form-urlencoded">
        <fieldset>
            <legend>
                <xar:mlstring>General settings</xar:mlstring>
            </legend>
            <input type="hidden" name="authid" id="authid" value="#$authid#" />
            <input type="hidden" name="display" id="display" value="#$display#" />
            <input type="hidden" name="publicationId" id="publicationId" value="#$publicationId#" />
            <div class="xar-form-input-wrapper">
                <label for="publication" title="#xarML('Publication')#" class="xar-form-label">
                    <xar:mlstring>Publication:</xar:mlstring>
                </label>
                <xar:if condition="$publicationId eq 0">
                    <select id="publication" name="publication" onchange="if(this.options[this.selectedIndex].value != 0) this.form.submit();" tabindex="1">
                        <option value="0">Choose Publication</option>
                        <xar:loop name="$publications">
                            <xar:if condition="$publicationId eq $loop:item['id']">
                                <option name="id" value="#$loop:item['id']#" selected="selected">#$loop:item['title']#</option>
                            <xar:else />
                                <option name="id" value="#$loop:item['id']#">#$loop:item['title']#</option>
                            </xar:if>
                        </xar:loop>
                    </select>
                <xar:else />
                    #$publication_title#
                </xar:if>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="ownerId" title="#xarML('Owner')#" class="xar-form-label">
                    <xar:mlstring>Choose Owner:</xar:mlstring>
                </label>
                <select id="ownerId" name="ownerId" tabindex="2">
                    <xar:loop name="$owners">
                        <xar:if condition="$loggeduser['uid'] eq $loop:item['id']">
                            <option name="id" value="#$loop:item['id']#" selected="selected">#$loop:item['name']#</option>
                        <xar:else />
                            <option name="id" value="#$loop:item['id']#">#$loop:item['name']#</option>
                        </xar:if>
                    </xar:loop>
                </select>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="title" title="#xarML('Title')#" class="xar-form-label">
                    <xar:mlstring>Title:</xar:mlstring>
                </label>
                <xar:if condition="empty($issue_title)">
                    <input type="text" name="title" id="title" size="50" maxlength="255" tabindex="2" />
                <xar:else />
                    <input type="text" name="title" id="title" size="50" maxlength="255" tabindex="2" value="#$issue_title#" />
                </xar:if>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="editorNote" title="#xarML('Editor Note')#" class="xar-form-label">
                    <xar:mlstring>Editor Note:</xar:mlstring>
                </label>
                <textarea id="editorNote" name="editorNote" rows="5" cols="50" tabindex="4"></textarea>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="external" title="#xarML('Show in Archives')#" class="xar-form-label">
                    <xar:mlstring>Show in Archives:</xar:mlstring>
                </label>
                <xar:if condition="$externalvalue eq 1">
                    <input type="checkbox" id="external" name="external" value="1" checked="checked" tabindex="6" />
                <xar:else />
                    <input type="checkbox" id="external" name="external" value="1" tabindex="9" />
                </xar:if>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="fromname" title="#xarML('Overrides the publication email from name')#" class="xar-form-label">
                    <xar:mlstring>Email From Name:</xar:mlstring>
                </label>
                <input type="text" name="fromname" id="fromname" size="50" maxlength="100" tabindex="10" value="#$fromname#" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="fromemail" title="#xarML('Overrides the publication email from address')#" class="xar-form-label">
                    <xar:mlstring>Email From Address:</xar:mlstring>
                </label>
                <input type="text" name="fromemail" id="fromemail" size="50" maxlength="100" tabindex="11" value="#$fromemail#" />
            </div>
        </fieldset>
        <div class="xar-form-input-wrapper-after">
            <input type="submit" value="#xarML('Add Iussue')#" tabindex="12" />
        </div>
    </form>
</div>
