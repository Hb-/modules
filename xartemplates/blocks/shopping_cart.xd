	<span class="xar-mod-title">
		<xar:mlstring>Cart</xar:mlstring>



<xar:if condition="$cart_empty">
	<table>
        <thead></thead>
        <tfoot></tfoot>
        <tbody>
            <tr>
                <td><xar:mlstring> You do not have any products in your shopping cart yet.</xar:mlstring></td>
            </tr>
	    </tbody>
	 </table>
<xar:else />
	<xar:mlstring>
		Your shopping cart contains:
	</xar:mlstring>
    <br />

	
        <table>
            <thead>
                <tr>
                    <td><a href="#$shopping_cart#">Shopping Cart</a></td>
                </tr>
            </thead>
            <tfoot>
                    <td> Sum : #$total#</td>
                    <td></td>
            </tfoot>
            <tbody>
                <xar:foreach in="$products" value="$prod">
                <tr>
                    <td>#$prod['quantity']# x #$prod['model']#</td>
                </tr>
                </xar:foreach>
    
            </tbody>
         </table>

 

</xar:if>

