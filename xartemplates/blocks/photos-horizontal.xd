<xar:if condition="count($files) gt 0">
<table width="100%">
<tr>
<xar:foreach in="$files" key="$photo_id" value="$photo">
<td>
    <xar:set name="path">$file_path . $photo['file']</xar:set>
    <xar:if condition="!empty($photo['summary'])">
        <xar:set name="label">$photo['summary']</xar:set>
    <xar:else />
        <xar:set name="label">'Gallery File'</xar:set>
    </xar:if>
    <a href="#$photo.link#">
        <xar:image-resize src="$path" width="125px" constrain="1" static="1" label="$label" />
    </a>
    <xar:var name="$photo.summary" />
</td>
</xar:foreach>
</tr>
</table>
</xar:if>