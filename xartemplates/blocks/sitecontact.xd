<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<xar:style module="sitecontact" file="contactblock" scope="block" />
<script type="text/javascript" src="modules/base/xartemplates/functions.js"></script>
<xar:if condition="isset($AntiBot_Available) AND $AntiBot_Available AND $useantibot">
    <script type="text/javascript">
    <!--
        // Enter name of mandatory fields
        var fieldRequired = Array("useremail", "usermessage","username","antibotcode");
        // Enter field description to appear in the dialog box
        var fieldDescription = Array("Your Email","Your message", "Your Name", "Anti-Bot Code");
    //-->
    </script>
<xar:else />
    <script type="text/javascript">
    <!--
        // Enter name of mandatory fields
        var fieldRequired = Array("useremail", "usermessage","username");
        // Enter field description to appear in the dialog box
        var fieldDescription = Array("Your Email","Your message", "Your Name");
    //-->
    </script>
</xar:if>

<xar:if condition="empty($customtitle)">
    <xar:set name="contacttitle"><xar:mlstring>Contact Form</xar:mlstring></xar:set>
<xar:else />
    <xar:set name="contacttitle">#$customtitle#</xar:set>
</xar:if>
<div class="contactblock">
    <xar:if id="title_condition" condition="isset($returnedform) and $returnedform eq '1'">
        <p style="text-align: center; padding:20px;">
             #$messagetext#
        </p>
    <xar:else />
        <p>
            #$customtext#
        </p>
        <form action="&xar-modurl-sitecontact-user-contactus;" method="post" enctype="multipart/form-data" onsubmit="return formCheck(this, fieldRequired, fieldDescription);">
            <fieldset>
            <div class="xar-blockform-input-wrapper">
                <label class="xar-blockform-label-short" for="username" title="#xarML('Enter your name')#">
                        <xar:mlstring>
                            Name:
                        </xar:mlstring>
                </label>

                <xar:if condition = "xarUserIsLoggedIn()">
                    <input type="hidden" name="username" id="username" value="#xarUserGetVar('name')#" />
                    #xarUserGetVar('name')#
                <xar:else />
                    <input type="text" name="username" id="username" value="" size="18" maxlength="30" />
                </xar:if>
            </div>
            <div class="xar-blockform-input-wrapper">
                <label for="useremail" class="xar-blockform-label-short" title="#xarML('Enter your email')#">
                        <xar:mlstring>
                            Email:
                        </xar:mlstring>
                </label>

                <xar:if condition = "xarUserIsLoggedIn()">
                   <input type="hidden" name="useremail" id="useremail" value="#xarUserGetVar('email')#" />
                       #xarUserGetVar('email')#
                <xar:else />
                    <input type="text" name="useremail" id="useremail" value="" size="18" maxlength="40" />
                </xar:if>
            </div>

            <div class="xar-blockform-input-wrapper">
                <label for="requesttext" class="xar-blockform-label-short" title="#xarML('Subject')#">
                        <xar:mlstring>
                            Subject:
                        </xar:mlstring>
                </label>

                <select class="xar-blockinput" id="requesttext" name="requesttext">
                <xar:foreach in="$optionitems" value="$optionrequest" key="$key" >

                    <xar:set name="optionKey">trim($optionrequest[0])</xar:set>
                    <xar:set name="optionValue">trim($optionrequest[0])</xar:set>
                    <xar:set name="optionSelected">trim($requesttext)</xar:set>

                    <xar:if condition="$optionValue eq $optionSelected">
                        <option value="#$optionValue#" selected="selected">#$optionKey#</option>
                    <xar:else />
                        <option value="#$optionValue#">#$optionKey#</option>
                    </xar:if>
                </xar:foreach>
                </select>
            </div>
            <div class="xar-blockform-input-wrapper">
                <label for="company" class="xar-blockform-label-short" title="#xarML('Please enter your organization name.')#">
                        <xar:mlstring>
                            Organization:
                        </xar:mlstring>
                </label>
                <xar:if condition="isset($company) AND !empty($company)">
                    <input type="text" name="company" id="company" size="25" value="#$company#" maxlength="128"  />
                <xar:else />
                    <input type="text" name="company" id="company" size="25" value="" maxlength="128"  />
                </xar:if>
            </div>
            <xar:if condition="$allowccs">
                <div class="xar-blockform-input-wrapper">
                    <label for="ccrecipients" class="xar-blockform-label-short" title="#xarML('CC recipient list')#">
                        <xar:mlstring>
                            CC:
                        </xar:mlstring>
                    </label>
                    <xar:data-input type="textbox" name="ccrecipients" id="ccrecipients" size="25" maxlength="150" value=""/>
                </div>
            </xar:if>

            <xar:if condition="$allowbccs">
                <div class="xar-blockform-input-wrapper">
                <label for="bccrecipients" class="xar-blockform-label-short" title="#xarML('Blind copy recipient list')#">
                        <xar:mlstring>
                            BCC:
                        </xar:mlstring>
                </label>
                    <xar:data-input type="textbox" name="bccrecipients" id="bccrecipients" size="25" maxlength="150" value=""/>

                </div>
            </xar:if>
            <xar:if condition="$allowbccs or $allowccs">
             <p class="xar-blockform-input-wrapper">
                    <xar:mlstring>
                    Separate email addresses by colons (;)</xar:mlstring>
             </p>
            </xar:if>
            <div class="xar-blockform-input-wrapper">
                <label for="usermessage" class="xar-blockform-label-short" title="#xarML('Type in your message')#">
                        <xar:mlstring>
                            Message:
                        </xar:mlstring>
                </label>
                <xar:if condition="isset($usermessage) AND !empty($usermessage)">
                    <textarea name="usermessage" id="usermessage" rows="4" cols="22">#$usermessage#</textarea>
                <xar:else />
                    <textarea name="usermessage" id="usermessage" rows="4" cols="22"></textarea>
                </xar:if>
            </div>

            <xar:if  condition="xarModIsAvailable('dynamicdata') and xarModIsHooked('dynamicdata','sitecontact',$scid) and $showdd" >
                <xar:data-getitem name="$properties" module="sitecontact" itemtype="$scid" itemid="$scid" />
                <xar:if condition="isset($properties) and count($properties) gt 0">
                    <xar:foreach in="$properties" key="$name">
                    <div class="xar-blockform-input-wrapper">
                        <label for="$properties[$name]" title="#$properties[$name]#">
                        #$properties[$name]:label#:
                        </label>
                        <xar:data-input property="$properties[$name]" />
                    </div>
                    </xar:foreach>
                </xar:if>
            </xar:if>
            <xar:if condition="($allowcopy eq 1 and xarUserIsLoggedIn()) or ($allowcopy eq 1 and $allowanoncopy eq 1)">
            <div class="xar-blockform-input-wrapper-after">
                 <input type="checkbox" name="sendcopy" id="sendcopy" value="1" checked="checked" />
                <label for="sendcopy" title="#xarML('Would you like to have a copy of the message sent to your email')#">
                        <xar:mlstring>
                            Copy email to you?
                        </xar:mlstring>
                </label>
            </div>
            </xar:if>
            <xar:if condition="$savedata and $permissioncheck">
                <div class="xar-blockform-input-wrapper-after">
                <xar:if condition="$permission">
                    <input type="checkbox" name="permission" id="permission" value="1" checked="checked" />
                <xar:else />
                    <input type="checkbox" name="permission" id="permission" value="1" />
                </xar:if>
                     <label for="permission" title="#xarML('May we save your response to this form?')#">
                        <xar:mlstring>
                            Save your response?
                        </xar:mlstring>
                    </label>
                </div>
                <xar:if condition="$termslink ne ''">
                    <div class="xar-blockform-input-wrapper">
                        <label for="termsurl" class="xar-blockform-label-short">
                            <xar:mlstring>Please review our privacy policy:</xar:mlstring>
                        </label>
                        <a href="#$termslink#"><xar:mlstring>Terms &amp; Privacy Policy</xar:mlstring></a>
                    </div>
                </xar:if>
            </xar:if>
            <xar:if condition="isset($AntiBot_Available) AND $AntiBot_Available eq TRUE AND $useantibot eq '1'">
                <div class="xar-blockform-input-wrapper">
                    <label for="useremail" class="xar-blockform-label-short" title="#xarML('Enter the value as seen in the image (if you can not read the image, click on it to load a new one).')#">
                            <xar:mlstring>
                                Anti-Bot Code
                            </xar:mlstring>
                    </label>
                    <div class="xar-blockform-container-after">
                        <xar:if condition="isset($antibotinvalid) AND $antibotinvalid">
                            <span class="xar-error">
                                <xar:mlstring>Anti-bot code entry was incorrect - please try again...</xar:mlstring>
                            </span>
                        </xar:if>
                        <image id="antibotimage" name="antibotimage"
                            src="#xarModURL('formantibot', 'user', 'image')#"
                            onclick="this.src = this.src + '?' + (new Date()).getTime(); return true;"
                        />
                        <br />
                        <input type="text" name="antibotcode" id="antibotcode" size="10" value="" maxlength="10"  />
                        <xar:mlstring>Please enter the Anti-Bot Code</xar:mlstring>
                        <p class="xar-blockform-input-after">
                            <xar:mlstring>Can't read it? Click the image to generate a new code.</xar:mlstring>
                        </p>
                    </div>
                </div>
               </xar:if>
           </fieldset>

        <div class="xar-blockform-input-wrapper">
                   <input type="hidden" name="useripaddress" value="#$useripaddress#" />
                   <input type="hidden" name="userreferer" value="#$userreferer#" />
                   <input type="hidden" name="authid" id="authid" value="#$authid#" />
                   <input type="hidden" name="scid" id="scid" value="#$scid#" />
                   <input type="hidden" name="savedata" id="savedata" value="#$savedata#" />
                   <input type="hidden" name="permissioncheck" id="permissioncheck" value="#$permissioncheck#" />
                   <input type="hidden" name="message" id="message" value="1" />
                   <input type="hidden" name="return_url" id="return_url" value="#$return_url#" />
                   <input type="submit" value="#xarML('Send')#" />
        </div>
      </form>
</xar:if>
</div>
</xar:template>
