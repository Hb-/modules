<xar:set name="mastername">xarModGetVar('legis','docname')</xar:set>
<div style="padding-bottom:10px;padding-top:10px;">
<p>
<xar:ml>
<xar:mlstring>Your Default Hall is #(1)</xar:mlstring>
<xar:mlvar>#$defaulthalldata['name']#</xar:mlvar>
</xar:ml>
</p>
<ul>
    <xar:sec mask="EditLegis" catch="false">
    <li>
        <xar:set name="viewurl">xarModURL('legis','admin','view',array('docstatus'=>2))</xar:set>
                <a href="#$viewurl#">
                <xar:mlstring>View Valid Documents</xar:mlstring>
                </a>
    </li>
    <li>
           <xar:set name="pendingurl">xarModURL('legis', 'admin', 'view', array('docstatus'=>1))</xar:set>
                <a href="#$pendingurl#">
                <xar:ml>
                <xar:mlstring>Pending #(1)</xar:mlstring>
                <xar:mlvar>#$mastername#</xar:mlvar>
                </xar:ml>
                </a>
    </li>
    </xar:sec>

    <xar:sec mask="DeleteLegis" catch="false">
    <li>
          <xar:set name="viewurl">xarModURL('legis','admin','view',array('docstatus'=>3))</xar:set>
                <a href="#$viewurl#">
                <xar:mlstring>Review Invalid For Delete</xar:mlstring>
                </a>
    </li>
    </xar:sec>
    <xar:if condition="$cansethall" >
    <li>
            <xar:set name="sethall">xarModURL('legis', 'admin', 'sethall',array('reset'=> 1))</xar:set>
                <a href="&xar-modurl-legis-admin-sethall;&amp;reset=1">
                    <xar:mlstring>
                        Set Your Default Hall
                    </xar:mlstring>
                </a>
    </li>
    </xar:if>
    <xar:sec mask="AdminLegis" catch="false">
    <li>
            <xar:set name="dolegisuser">xarModURL('legis', 'admin', 'manageusers')</xar:set>
                <a href="&xar-modurl-legis-admin-manageusers;">
                <xar:ml>
                <xar:mlstring>Manage #(1) Users</xar:mlstring>
                <xar:mlvar>#$mastername#</xar:mlvar>
                </xar:ml>

                </a>
    </li>
    <li>
            <xar:set name="doconfig">xarModURL('legis', 'admin', 'modifyconfig')</xar:set>
                <a href="&xar-modurl-legis-admin-modifyconfig;">
                <xar:ml>
                <xar:mlstring>#(1) Config</xar:mlstring>
                <xar:mlvar>#$mastername#</xar:mlvar>
                </xar:ml>
                </a>
    </li>
   
    </xar:sec>
</ul>

</div>
