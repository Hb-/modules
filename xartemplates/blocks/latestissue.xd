<div class="magblock-latestissue">
    <div class="magblock-latestissue-inner">
        <h4>#$issue.title#</h4>
        <xar:if condition="!empty($issue.cover_img_path)">
            <a href="#xarModAPIfunc('mag', 'user', 'url', array('func'=&gt;'current', 'mag'=&gt;$mag.ref))#">
                <img src="#$issue.cover_img_path#" />
            </a>
        </xar:if>
        <ul>
            <li><a href="#xarModAPIfunc('mag', 'user', 'url', array('func'=&gt;'current', 'mag'=&gt;$mag.ref))#">Latest Issue</a></li>
            <li><a href="#xarModAPIfunc('mag', 'user', 'url', array('func'=&gt;'archive', 'mag'=&gt;$mag.ref))#">Archive</a></li>
        </ul>
    </div>
</div>