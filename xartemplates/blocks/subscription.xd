<form action="&xar-modurl-ebulletin-user-subscribe;" method="post">
<input type="hidden" name="authid" id="authid" value="#$authid#" />

<p class="xar-margin-thick"><xar:mlstring>My Subscriptions:</xar:mlstring></p>

<xar:if condition="empty($pubs)">
    <xar:mlstring><em>No publications!</em></xar:mlstring>
<xar:else />
    <xar:foreach in="$pubs" value="$pub">
        <xar:if condition="!empty($pub['subscribed'])">
            <input type="checkbox" name="subscriptions[#$pub['id']#]" id="publication_#$pub['id']#" checked="checked" />
        <xar:else />
            <input type="checkbox" name="subscriptions[#$pub['id']#]" id="publication_#$pub['id']#" />
        </xar:if>
        <label for="publication_#$pub['id']#">
            <em>#$pub['name']#</em>
        </label><br />
    </xar:foreach>
</xar:if>
<xar:if condition="!$loggedin">
    <table class="xar-margin-thick">
    <tr><td>
        <xar:mlstring>Name:</xar:mlstring><br />
        <input type="text" name="name" id="name" value="#$ebulletin_name#" maxlength="255" size="12" />
    </td><td>
        <xar:mlstring>Email Address:</xar:mlstring><br />
        <input type="text" name="email" id="email" value="#$ebulletin_email#" maxlength="255" size="12" />
    </td></tr>
    </table>
</xar:if>

<div>
    <input type="submit" value="#xarML('Update')#" /> &nbsp; <a href="#$moreurl#">More Info...</a>
</div>



<xar:if condition="!empty($hidden)">
    <xar:foreach in="$hidden" value="$pub">
        <xar:if condition="!empty($pub['subscribed'])">
            <input type="hidden" name="subscriptions[#$pub['id']#]" id="publication_#$pub['id']#" />
        </xar:if>
    </xar:foreach>
</xar:if>

</form>
