<xar:style scope="module" module="twitter" />
<div class="twitter-block">
<xar:if condition="$showmodule">
    <span class="module">
        <xar:if condition="$showmyimage and $timeline ne 'public'">
            <span class="profile-image">
                <img src="#$userinfo.profile_image_url#" />
            </span>
            <h4 class="profile-image-after">
                <xar:if condition="$timeline eq 'user'">
                    <a class="url" href="#xarModURL('twitter', 'user', 'display', array('screen_name' => $userinfo['screen_name']))#">
                   #$userinfo.screen_name# <xar:mlstring>timeline</xar:mlstring>
                <xar:else />
                    <a class="url" href="#xarModURL('twitter', 'user', 'display', array('timeline' => 'public_timeline'))#">
                        <xar:mlstring>Public timeline</xar:mlstring>
                    </a>
                </xar:if>
            </a>
            </h4>
        <xar:else />
            <h4>
            <a class="url" href="#xarModURL('twitter', 'user', 'main', array('timeline' => $timeline))#">
                <xar:if condition="$timeline eq 'friends'">
                    #$username# <xar:mlstring>and friends</xar:mlstring>
                <xar:elseif condition="$timeline eq 'user'" />
                    #$username# <xar:mlstring>timeline</xar:mlstring>
                <xar:else />
                    <xar:mlstring>Public timeline</xar:mlstring>
                </xar:if>
            </a>
            </h4>
        </xar:if>
    </span>
</xar:if>
<xar:if condition="!empty($status_elements) && is_array($status_elements)">
    <ul class="statuses">
    <xar:foreach in="$status_elements" key="$key" value="$item">
        <li class="element">
            <xar:if condition="$showimages">
            <span class="profile-image">
                <a href="http://twitter.com/#$item.user.screen_name#" title="#$item.user.screen_name#">
                    <img src="#$item.user.profile_image_url#" alt="#xarML('profile image')#" title="#$item.user.screen_name#" />
                </a>
            </span>
            </xar:if>
            <span class="status-body">
                <strong>
                    <a class="url" href="http://twitter.com/#$item.user.screen_name#" title="#$item.user.screen_name#">#$item.user.screen_name#</a>
                </strong>
                #$item.text#
                <span class="status-info">
                    <xar:base-timesince stamp="$item['created_at']" /> <xar:mlstring>ago</xar:mlstring><xar:if condition="$showsource"><xar:mlstring>, via </xar:mlstring> #$item.source#</xar:if>
                </span>
            </span>
        </li>
    </xar:foreach>
    </ul>
</xar:if>
<xar:if condition="$showfollow">
    <p class="xar-align-right xar-sub">
        <a href="http://twitter.com/#$username#" rel="external">
            <xar:mlstring>Follow</xar:mlstring> #$username#
        </a>
    </p>
</xar:if>
</div>




