<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <xar:if condition="empty($alttitle) AND empty($alttext)">
        <xar:data-display object="$object" tplmodule="publications"/>
    <xar:else/>
        <h3>#$alttitle#</h3>
        <div>
            #$alttext#
        </div>
    </xar:if>    
</xar:template>