<xar:if condition="!empty($who)">
    <p>
        #xarML('Quote')# #$who#:
    </p>
    <div style="width: 90%; overflow: auto;">
        <blockquote>
            #$quote#
        </blockquote>
    </div>
<xar:else />
    <p>
        #xarML('Quote')#:
    </p>
    <div style="width: 90%; overflow: auto;">
        <blockquote>
            #$quote#
        </blockquote>
    </div>
</xar:if>