<div class="xar-mod-head">
  <span class="xar-mod-title"><xar:mlstring>LogConfig Administration</xar:mlstring></span>
</div>
<xar:template file="menu" />

<h2><xar:mlstring>Modify a Logger</xar:mlstring></h2>

<table width="100%" border="1" cellspacing="0" cellpadding="4">
  <tr>
    <td align="center">
      <b><xar:mlstring>Preview</xar:mlstring></b>
    </td>
  </tr>
  <tr>
    <td>
      <xar:data-display object="$object" />
    </td>
  </tr>
</table>
<br />

<form method="POST" action="#xarModURL('logconfig', 'admin', 'update')#">
  <input type="hidden" name="authid" id="authid" value="#xarSecGenAuthKey()#" />
  <input type="hidden" name="itemid" id="itemid" value="#$itemid#" />
  <input type="hidden" name="itemtype" id="itemtype" value="#$itemtype#" />
  
  <!-- this does most of the hard work :) -->
  <xar:data-form object="$object" />
  <input type="submit" name="preview" value="#xarML('Preview')#" />
  &nbsp;&nbsp;&nbsp;
  <input type="submit" value="#xarML('Update')#" />
  
</form>


