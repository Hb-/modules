<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Articles Management</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
      <xar:template type="module" file="user-menu" />
    <h2>
        <xar:mlstring>Delete Article</xar:mlstring>
    </h2>
    <div class="xar-align-center">
        <xar:comment>You can use different user-delete-[pubtype].xt templates for different pubtypes</xar:comment>
        <h3>
            <xar:mlstring>Delete this article?</xar:mlstring>
        </h3>
        <form method="post" action="#xarModURL('articles','user','delete')#">
            <div>
                <input type="hidden" name="authid" id="authid" value="#$authid#" />
                <input type="hidden" name="confirm" id="confirm" value="true" />
                <input type="hidden" name="aid" id="aid" value="#$aid#" />
                <input type="hidden" name="return_url" value="#$return_url#" />
                <input type="submit" value="#$confirmlabel#" />
            </div>
        </form>
        <br />
        <a href="#xarModURL('articles','user','viewlist')#">
            <xar:mlstring>Cancel Delete</xar:mlstring>
        </a>
        <br />
    </div>
    <xar:if condition="!empty($preview)">
        <div class="xar-fullwidth xar-standard-box-padding">#$preview#</div>
    </xar:if>
</div>
