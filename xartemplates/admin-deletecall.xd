<!-- common admin menu for this module - remove link to the current function -->
<!-- the variables used in this menu come from maxercalls_admin_menu() -->
<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Maxercalls Administration</xar:mlstring></span></div>
<div class="xar-mod-body"><h2>#$menutitle#</h2><br />
<div style="margin: auto;">

<!-- the specific template for the current admin function comes here -->


<div align="center">#$confirmtext#</div><br />
<form method="post" action="&xar-modurl-maxercalls-admin-deletecall;">
    <input type="hidden" name="authid" id="authid" value="#$authid#" />
    <input type="hidden" name="confirm" id="confirm" value="true" />
    <input type="hidden" name="callid" id="callid" value="#$callid#" />

    <table border="0" width="300">
        <tr>
            <td>
                #$itemid#:
            </td>
            <td>
                #$callid#
            </td>
        </tr>
        <tr>
            <td>
                #$calldatelabel#:
            </td>
            <td>
                #$calldate#
            </td>
        </tr>
        <tr>
            <td>
                #$calltimelabel#:
            </td>
            <td>
                #$calltime#
            </td>
        </tr>
        <tr>
            <td>
                #$enteredbylabel#:
            </td>
            <td>
                #$enteruid#
            </td>
        </tr>		
        <tr>
            <td colspan="3" align="center"><br />
                    <input type="submit" value="#$confirmbutton#"  />
            </td>
        </tr>
    </table>
</form>
</div>
</div>
