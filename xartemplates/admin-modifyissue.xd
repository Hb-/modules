<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Newsletter Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2><xar:mlstring>Modify Issue</xar:mlstring></h2>
<xar:comment>
<script type="text/javascript">
function radio_input(redirect)
{
// Re-direct the browser to the modurl value
window.location.href = redirect;
}
</script>
</xar:comment>
    <form name="post" id="post" action="&xar-modurl-newsletter-admin-modifyissue;" method="post" enctype="application/x-www-form-urlencoded">
    <fieldset>
        <legend>
            <xar:mlstring>General settings</xar:mlstring>
        </legend>
        <input type="hidden" name="display" id="display" value="#$display#" />
        <input type="hidden" name="id" id="id" value="#$issue['id']#" />
        <div class="xar-form-input-wrapper">
            <label for="publication" title="#xarML('Publication')#" class="xar-form-label">
                <xar:mlstring>Publication:</xar:mlstring>
            </label>
            <select id="publication" name="publication" onchange="if(this.options[this.selectedIndex].value != 0) this.form.submit();" tabindex="1">
                <option value="0">Choose Publication</option>
                <xar:loop name="$issue['publications']">
                    <xar:if condition="$publication eq $loop:item['id']">
                        <option name="id" value="#$loop:item['id']#" selected="selected">#xarVarPrepForDisplay($loop:item['title'])#</option>
                    <xar:else />
                        <option name="id" value="#$loop:item['id']#">#xarVarPrepForDisplay($loop:item['title'])#</option>
                    </xar:if>
                </xar:loop>
            </select>
        </div>
    </form>
    <form name="post2" id="post2" action="&xar-modurl-newsletter-admin-updateissue;" method="post" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="authid" id="authid" value="#$authid#" />
        <input type="hidden" name="id" id="id" value="#$issue['id']#" />
        <input type="hidden" name="display" id="display" value="#$display#" />
        <input type="hidden" name="publication" id="publication" value="#$publication#" />
        <div class="xar-form-input-wrapper">
            <label for="ownerId" title="#xarML('Owner Name')#" class="xar-form-label">
                <xar:mlstring>Owner Name:</xar:mlstring>
            </label>
            <select id="ownerId" name="ownerId" tabindex="2">
                <xar:loop name="$issue['owners']">
                    <xar:if condition="$loop:item['id'] eq $issue['ownerId']">
                        <option name="id" value="#$loop:item['id']#" selected="selected">#$loop:item['name']#</option>
                    <xar:else />
                        <option name="id" value="#$loop:item['id']#">#$loop:item['name']#</option>
                    </xar:if>
                </xar:loop>
            </select>
        </div>
        <div class="xar-form-input-wrapper">
            <label for="title" title="#xarML('Title')#" class="xar-form-label">
                <xar:mlstring>Title:</xar:mlstring>
            </label>
            <input type="text" name="title" id="title" value="#xarVarPrepForDisplay($issue['title'])#" size="50" maxlength="255" tabindex="3" />
        </div>
        <div class="xar-form-input-wrapper">
            <label for="editorNote" title="#xarML('Editor Note')#" class="xar-form-label">
                <xar:mlstring>Editor Note:</xar:mlstring>
            </label>
            <textarea id="editorNote" name="editorNote" rows="5" cols="50" tabindex="4">#xarVarPrepForDisplay($issue['editorNote'])#</textarea>
        </div>
        <div class="xar-form-input-wrapper">
            <label for="external" title="#xarML('Show in Archives')#" class="xar-form-label">
                <xar:mlstring>Show in Archives:</xar:mlstring>
            </label>
            <xar:if condition="$issue['external'] eq 1">
                <input type="checkbox" id="external" name="external" value="1" checked="checked" tabindex="9" />
            <xar:else />
                <input type="checkbox" id="external" name="external" value="1" tabindex="9" />
            </xar:if>
        </div>
        <div class="xar-form-input-wrapper">
            <label for="fromname" title="#xarML('Overrides the publication email from name')#" class="xar-form-label">
                <xar:mlstring>Email From Name:</xar:mlstring>
            </label>
            <input type="text" name="fromname" id="fromname" size="50" maxlength="100" tabindex="10" value="#$issue['fromname']#" />
        </div>
        <div class="xar-form-input-wrapper">
            <label for="fromemail" title="#xarML('Overrides the publication email from address')#" class="xar-form-label">
                <xar:mlstring>Email From Address:</xar:mlstring>
            </label>
            <input type="text" name="fromemail" id="fromemail" size="50" maxlength="100" tabindex="11" value="#$issue['fromemail']#" />
        </div>
        <div class="xar-form-input-wrapper">
            <label for="datePublishedMon" title="#xarML('Remove date to unpublish issue')#" class="xar-form-label">
                <xar:mlstring>Date Published:</xar:mlstring>
            </label>
            <input type="text" name="datePublishedMon" id="datePublishedMon" value="#$issue['datePublished']['mon']#" size="2" maxlength="2" tabindex="12" />
            &nbsp;-&nbsp;
            <input type="text" name="datePublishedDay" id="datePublishedDay" value="#$issue['datePublished']['day']#" size="2" maxlength="2" tabindex="13" />
            &nbsp;-&nbsp;
            <input type="text" name="datePublishedYear" id="datePublishedYear" value="#$issue['datePublished']['year']#" size="4" maxlength="4" tabindex="14" />
            &nbsp;&nbsp;
            (mm-dd-yyyy)
        </div>
    </fieldset>
    <div class="xar-form-input-wrapper-after">
        <input type="submit" value="#xarML('Update Iussue')#"  tabindex="15" />
    </div>
    </form>
</div>
