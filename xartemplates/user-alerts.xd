<div class="xar-julian xar-julian-user-alerts">
    <xar:template file="header" />

    <div class="xar-julian-contents">
        <form action="&xar-modurl-julian-user-alerts;" method="post" enctype="application/x-www-form-urlencoded">
            <fieldset>
                <legend>
                    <xar:mlstring>
                        Select the categories you wish to receive email alerts for.
                    </xar:mlstring>
                </legend>

                <xar:foreach in="$categories" key="$cat_id" value="$info">
                    <div class="xar-form-input-wrapper">
                        <label for="xar-julian-cat-#$cat_id#" class="xar-form-label" title="#xarML('Select the categories you wish to receive email alerts for.')#">
                             #$info['name']#
                        </label>
                        <xar:if condition="$info['checked']">
                            <input type="checkbox" name="cats[]" id="xar-julian-cat-#$cat_id#" value="#$cat_id#" checked="checked" />
                        <xar:else />
                            <input type="checkbox" name="cats[]" id="xar-julian-cat-#$cat_id#" value="#$cat_id#" />
                        </xar:if>
                    </div>
                </xar:foreach>
            </fieldset>
            <input type="hidden" name="action" value="update" />
            <input type="submit" value="#xarML('Submit')#" />
        </form>
    </div>
</div>
