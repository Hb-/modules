<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Newsletter Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2><xar:mlstring>Modify Subscription</xar:mlstring></h2>
        <form name="post" id="post" action="&xar-modurl-newsletter-admin-updatealtsubscription;" method="post" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="authid" id="authid" value="#$authid#" /> 
        <input type="hidden" name="id" id="id" value="#$subscription['id']#" />
<fieldset>
            <legend>
                <xar:mlstring>Subscriber User</xar:mlstring>
            </legend>
            <div class="xar-form-input-wrapper">
                <label for="name" class="xar-form-label">
					<xar:mlstring>Name:</xar:mlstring>
					
				</label>
                    <input type="text" name="name" id="name" value="#xarVarPrepForDisplay($subscription['name'])#" size="50" maxlength="100" tabindex="1" />
</div>
<div class="xar-form-input-wrapper">
                <label for="email" class="xar-form-label">
                    <xar:mlstring>Email:</xar:mlstring>
</label>
                    <input type="text" name="email" id="email" value="#xarVarPrepForDisplay($subscription['email'])#" size="50" maxlength="255" tabindex="2" />
</div>
<div class="xar-form-input-wrapper">
                <label for="email" class="xar-form-label">
                    <xar:mlstring>Use HTML Mail</xar:mlstring>
                </label>
                    <xar:if condition="$subscription['htmlmail'] eq 1">
                        <input type="checkbox" name="htmlmail" id="htmlmail" value="1" checked="checked" />
                    <xar:else />
                        <input type="checkbox" name="htmlmail" id="htmlmail" value="1" />
                    </xar:if>
                    </div>
                    </fieldset>
 <fieldset>
            <legend>
                <xar:mlstring>Publications</xar:mlstring>
            </legend>
            <div class="xar-form-input-wrapper">
                <span class="xar-title">
                    <xar:mlstring>Choose which publication(s) to modify subscription:</xar:mlstring>
                </span>
            </div>
            <xar:loop name="$subscription['publications']">
<div class="xar-form-input-wrapper">
                    <label for="pids[]" class="xar-form-label">
                        <b>#$loop:item['title']#</b>
</label>
                        <xar:if condition="$loop:item['checked'] == 'checked'">
                          <input type="checkbox" name="pids[]" id="pids[]" value="#$loop:item['id']#" checked="checked" />
                          <xar:else/>
                          <input type="checkbox" name="pids[]" id="pids[]" value="#$loop:item['id']#" />
                        </xar:if>
</div>
            </xar:loop>
   </fieldset>
<div class="xar-form-input-wrapper-after">
                    <input type="submit" value="#xarML('Update subscription')#"  tabindex="3" />
</div>
        </form>
    </div>
