<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>XarLDAP Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <fieldset>
        <legend>
            #$title#
        </legend>  
        <xar:if condition="$result">
            <div class="xar-standard-box-padding ">
                <h3><xar:mlstring>Success!</xar:mlstring></h3>
                <xar:if condition="$search eq 'user'">
                    <xar:mlstring>Found user</xar:mlstring>:
                    &nbsp;<strong>#$value#</strong>
            <xar:comment>       #$dn#
                   #$mail#</xar:comment>


                </xar:if>
            </div>
        </fieldset>
        <fieldset>
            <legend>
                <xar:mlstring>Details</xar:mlstring>:
            </legend>  
            <div class="xar-standard-box-padding ">
                <p>#$result#</p>
            </div>
        <xar:else />
            <div class="xar-standard-box-padding ">
                <h3><xar:mlstring>Failure!</xar:mlstring></h3>
                    <xar:if condition="$search eq 'user'">
                        <xar:mlstring>Could not find user</xar:mlstring>:
                        &nbsp;<strong>#$value#</strong>
                    </xar:if>            
            </div>
        </xar:if>
    </fieldset>
    <div class="xar-form-input-wrapper-after">
        <a href="#xarModURL('xarldap', 'admin', 'usersearch')#">
            Search for another user.
        </a>  
    </div>
</div>
