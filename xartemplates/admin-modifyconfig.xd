
<xar:template type="module" file="menu" />

<div class="xar-mod-body"><h2>#$menutitle#</h2><br />
    <div style="margin: auto;">
        <table width="100%" border="0" cellspacing="1" cellpadding="8">
            <form method="post" action="&xar-modurl-subitems-admin-updateconfig;">
                <input type="hidden" name="authid" id="authid" value="#$authid#" />
                <tr>
                    <td><label for="shorturls">#$shorturlslabel#</label></td>
                    <td>
                        <xar:if condition="$shorturlschecked">
                            <input type="checkbox" name="shorturls" id="shorturls" value="1" checked="checked"/>
                        <xar:else/>
                            <input type="checkbox" name="shorturls" id="shorturls" value="1" />
                        </xar:if>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        #$hooks#
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <input type="submit" value="#$updatebutton#" />
                    </td>
                </tr>
            </form>
        </table>
        <br />
    </div>
</div>
