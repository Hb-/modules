<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Site Search Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    
    <h2><xar:mlstring>Modify Configuration</xar:mlstring></h2>
    
    <form method="post" action="#xarModURL('sitesearch', 'admin', 'updateconfig')#">
        <input type="hidden" name="authid" id="authid" value="#$authid#" />

        <fieldset>
            <legend><xar:mlstring>GUI Options</xar:mlstring></legend>
            
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label"><xar:mlstring>Items Per Page:</xar:mlstring></label>
                <input type="text" name="itemsperpage" size="3" maxlength="3" value="#$ItemsPerPage#" class="xar-form-textlong" />
            </div>
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label"><xar:mlstring>Beginning Highlight Marker:</xar:mlstring></label>
                <input type="text" name="hlbeg" value="#$HLBeg#"  class="xar-form-textlong"  />
            </div>
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label"><xar:mlstring>Ending Highlight Marker:</xar:mlstring></label>
                <input type="text" name="hlend" value="#$HLEnd#"  class="xar-form-textlong"  />
            </div>
        </fieldset>
            
        <fieldset>
            <legend><xar:mlstring>Engine Options</xar:mlstring></legend>
            
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label"><xar:mlstring>Enable Query Tracking:</xar:mlstring></label>
                <xar:if condition="$QTrack == 1">
                    <input type="checkbox" name="qtrack" value="1" checked="checked" class="xar-form-textshort" />
                <xar:else />
                    <input type="checkbox" name="qtrack" value="1" class="xar-form-textshort" />
                </xar:if>
            </div>
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label"><xar:mlstring>Enable Query Caching:</xar:mlstring></label>
                <xar:if condition="$QCache == 1">
                    <input type="checkbox" name="qcache" value="1" checked="checked" class="xar-form-textshort" />
                <xar:else />
                    <input type="checkbox" name="qcache" value="1" class="xar-form-textshort" />
                </xar:if>
            </div>
        </fieldset>
            
        <fieldset>
            <legend><xar:mlstring>Database Options</xar:mlstring></legend>
            
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label"><xar:mlstring>Databases Path:</xar:mlstring></label>
                <input type="text" name="database_path" size="20" value="#$database_path#" class="xar-form-textlong" /> <strong>Example:</strong> var/sitesearch/databases/
            </div>
        </fieldset>

        <fieldset>
            <legend><xar:mlstring>Actions</xar:mlstring></legend>
            
            <div class="xar-form-input-wrapper-after">
                <input type="submit" value="#$updatebutton#" />
            </div>
        </fieldset>
    </form>
</div>
