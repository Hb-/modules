<xar:style scope="module" module="base" file="navtabs" />
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Gmaps Administration 
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2>
        <xar:mlstring>
            Modify Configuration 
        </xar:mlstring>
    </h2>
    <div>
        <xar:template file="headerconfig" type="module"/>
    </div>
    <xar:comment>
         - - - - - - - - - - - - - - - - - - - Begin General Options  - - - - - - - - - - - - - - - - - - - 
    </xar:comment>
    <form method="post" action="&xar-modurl-gmaps-admin-modifyconfig;" enctype="application/x-www-form-urlencoded">
    <xar:if condition="$tab eq 'gmaps_general'">
            <h3>
                <xar:mlstring>
                    General Options 
                </xar:mlstring>
            </h3>
            <fieldset>
                <legend>
                    <xar:mlstring>
                        Key 
                    </xar:mlstring>
                </legend>
                <div class="xar-form-input-wrapper">
                    <label for="latitude" title="#xarML('Site key to use Google Maps')#" class="xar-form-label">
                        <xar:mlstring>
                            Google Maps Key: 
                        </xar:mlstring>
                    </label>
                    <textarea name="gmapskey" id="gmapskey">#xarModVars::get('gmaps', 'gmapskey')#</textarea>
                </div>
            </fieldset>
        <xar:else />
            <h3>
                <xar:set name="ucname">UCFirst($tabmodule)</xar:set>
                <xar:ml>
                    <xar:mlstring>
                        Module Defaults for #(1)
                    </xar:mlstring>
                    <xar:mlvar>#$ucname#</xar:mlvar>
                </xar:ml>
            </h3>
        </xar:if>
        <fieldset>
            <legend>
                <xar:mlstring>
                    Map Layout  
                </xar:mlstring>
            </legend>
            <xar:template file="layout" />
        </fieldset>
        <fieldset>
            <legend>
                <xar:mlstring>
                    Controls 
                </xar:mlstring>
            </legend>
            <xar:template file="controls" />
        </fieldset>
        <fieldset>
            <div class="xar-form-input-wrapper-after">
                <input type="hidden" name="authid" id="authid" value="#$authid#" />
                <input type="hidden" name="phase" id="phase" value="update" />
                <input type="hidden" name="tab" id="tab" value="#$tab#" />
                <input type="hidden" name="tabmodule" id="tabmodule" value="#$tabmodule#" />
                <input type="submit" value="#xarML('Update Gmaps Configuration')#" />
            </div>
        </fieldset>
    </form>
</div>
