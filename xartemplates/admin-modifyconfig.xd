<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Recommend Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <form class="xar-formwidget" name="post" id="post" action="&xar-modurl-recommend-admin-modifyconfig;" method="post" enctype="application/x-www-form-urlencoded">
        <fieldset class="formelements xar-norm">
            <legend>
                <xar:mlstring>
                    Statistic
                </xar:mlstring>
            </legend>
            <p><xar:mlstring>Number of emails the Recommend module has sent:</xar:mlstring>&nbsp;&nbsp; #$numbersent# </p>
            <p><xar:mlstring>Last Email sent to:</xar:mlstring>&nbsp;&nbsp; <a href="mailto:#$lastemailaddy#">#$lastemailname#</a></p>
            <p><xar:mlstring>Last Email sent From:</xar:mlstring>&nbsp;&nbsp; #$username#</p>
            <p><xar:mlstring>Date last sent:</xar:mlstring>&nbsp;&nbsp;#xarLocaleGetFormattedDate('long',$date)#</p>
        </fieldset>
        <fieldset class="formelements xar-norm">
            <legend>
                <xar:mlstring>
                    Modify Configuration
                </xar:mlstring>
            </legend>
    <input type="hidden" name="authid" id="authid" value="#$authid#" />
    <input type="hidden" name="phase" id="phase" value="update" />
       <p class="param">
            <label for="shorturls" class="xar-form-label">
                <span class="help" title="#xarML('Support Short URLs')#">
                    <xar:mlstring>Support Short URLs</xar:mlstring>
                </span>
            </label>
            <xar:if condition="xarModGetVar('recommend', 'SupportShortURLs')">
                <input type="checkbox" name="shorturls" id="shorturls" value="1" checked="checked" />
            <xar:else />
                <input type="checkbox" name="shorturls" id="shorturls" value="1" />
            </xar:if>
       </p>
       <p class="param">
            <label for="usernote" class="xar-form-label">
                <span class="help" title="#xarML('Support Short URLs')#">
                      <xar:mlstring>Allow Users to Send Notes?</xar:mlstring>
                </span>
            </label>
            <xar:if condition="xarModGetVar('recommend', 'usernote')">
                <input type="checkbox" name="usernote" id="usernote" value="1" checked="checked" />
            <xar:else />
                <input type="checkbox" name="usernote" id="usernote" value="1" />
            </xar:if>
       </p>
       <p class="param">
            <label for="usernote" class="xar-form-label">
                <span class="help" title="#xarML('Email Subject')#">
                    <xar:mlstring>Email Subject</xar:mlstring>
                </span>
            </label>
            <input type="text" name="title" id="title" value="#$title#" size="35" maxlength="100" />
        </p>

       <p class="param">
            <label for="template" class="xar-form-label">
                <span class="help" title="#xarML('Email Template')#">
                    <xar:mlstring>Email Template</xar:mlstring>
                </span>
            </label>
            <textarea rows="20" cols="40" name="template" id="template" tabindex="1">#$template#</textarea>
       </p>
       <p class="xar-form-input-wrapper-after">
            <xar:mlstring>This is the template for the mail to be sent.  If you have HTML mail enabled in your Mail Module, then HTML tags are usable.</xar:mlstring>
       </p>
    </fieldset>
    <div class="xar-clear-both xar-align-center">
        <input type="submit" value="#xarML('Save config')#" />
    </div>
    </form>
</div>
