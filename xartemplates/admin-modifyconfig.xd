<xar:template type="module" file="admin-header" />
<div class="xar-mod-body">

    <h2><xar:mlstring>Modify Configuration</xar:mlstring></h2>

    <form method="post" id="post" action="&xar-modurl-ebulletin-admin-updateconfig;">
        <fieldset>
            <legend><xar:mlstring>Display Options</xar:mlstring></legend>
            <div class="xar-form-input-wrapper">
                <label for="msglimit" class="xar-form-label" title="#xarML('Items per page on admin screens')#">
                    <xar:mlstring>Issues per page</xar:mlstring>
                </label>
                <input type="text" name="admin_issuesperpage" id="admin_issuesperpage" value="#$admin_issues#" maxlength="3" size="3" class="xar-form-textshort" />
            </div>

            <div class="xar-form-input-wrapper">
                <label for="admin_subsperpage" class="xar-form-label" title="#xarML('Subscribers per page on admin screens')#">
                    <xar:mlstring>Subscribers per page</xar:mlstring>
                </label>
                <input type="text" name="admin_subsperpage" id="admin_subsperpage" value="#$admin_subs#" maxlength="6" size="3" class="xar-form-textshort" />
            </div>

        </fieldset>

        <fieldset>
            <legend><xar:mlstring>System Options</xar:mlstring></legend>

            <div class="xar-form-input-wrapper">
                <label for="supportshorturls" class="xar-form-label" title="#xarML('Enable short URLS?')#">
                    <xar:mlstring>Enable short URLs?</xar:mlstring>
                </label>
                <xar:if condition="$supportshorturls">
                    <input type="checkbox" name="supportshorturls" id="supportshorturls" value="1" checked="checked" />
                <xar:else/>
                    <input type="checkbox" name="supportshorturls" id="supportshorturls" value="1" />
                </xar:if>
            </div>

            <div class="xar-form-input-wrapper">
                <label for="usemodulealias" class="xar-form-label" title="#xarML('Use an alias instead of the module name')#">
                    <xar:mlstring>Use a module alias?</xar:mlstring>
                </label>
                <xar:if condition="$usemodulealias">
                    <input type="checkbox" name="usemodulealias" id="usemodulealias" value="1" checked="checked" />
                <xar:else />
                    <input type="checkbox" name="usemodulealias" id="usemodulealias" value="1" />
                </xar:if>
            </div>

            <div class="xar-form-input-wrapper">
                <label for="aliasname" class="xar-form-label" title="#xarML('The name of module alias to be used.')#">
                    <xar:mlstring>Module Alias Name</xar:mlstring>
                </label>
                <input type="text" name="aliasname" id="aliasname" value="#xarModGetVar('ebulletin', 'aliasname')#" size="32" maxlength="100" />
            </div>

        </fieldset>

        <fieldset>
            <legend><xar:mlstring>Security Options</xar:mlstring></legend>

            <div class="xar-form-input-wrapper-after">
                <xar:if condition="$requirevalidation">
                    <input type="checkbox" name="requirevalidation" id="requirevalidation" value="1" checked="checked" />
                <xar:else/>
                    <input type="checkbox" name="requirevalidation" id="requirevalidation" value="1" />
                </xar:if>
                <label for="requirevalidation" title="#xarML('Require unregistered users to validate?')#">
                    <xar:mlstring>Require unregistered users to validate their email addresses.</xar:mlstring>
                </label>
            </div>

            <xar:if condition="xarModIsAvailable('scheduler')">
                <div class="xar-form-input-wrapper">
                    <label for="msglimit" class="xar-form-label" title="#xarML('Limit the emails sent per unit of time')#">
                        <xar:mlstring>Message Throttling</xar:mlstring>
                    </label>
                    <xar:mlstring>Send no more than </xar:mlstring>
                    <input type="text" name="msglimit" id="msglimit" value="#$msglimit#" maxlength="6" size="3" />
                    <xar:mlstring>messages per </xar:mlstring>
                    <select name="msgunit">
                        <xar:foreach in="$msgunits" key="$value" value="$label">
                            <xar:if condition="$msgunit eq $value">
                                <option value="#$value#" selected="true">#$label#</option>
                            <xar:else />
                                <option value="#$value#">#$label#</option>
                            </xar:if>
                        </xar:foreach>
                    </select>
                </div>
            <xar:else />
                <div class="xar-form-input-wrapper xar-sub">
                    <xar:mlstring>To enable limiting the rate at which messages are sent, please
                    activate the Scheduler module.</xar:mlstring>
                </div>
            </xar:if>
        </fieldset>

        <fieldset>
            <legend><xar:mlstring>Enabled Hooks</xar:mlstring></legend>
            <xar:if condition="!empty($hookoutput)">
            <xar:foreach in="$hookoutput" key="$hookmodule">
                #$hookoutput[$hookmodule]#
            </xar:foreach>
            </xar:if>
        </fieldset>

        <div class="xar-form-input-wrapper-after">
            <input type="hidden" name="authid" id="authid" value="#$authid#" />
            <input type="submit" value="#xarML('Update Configuration')#" />
        </div>
    </form>
</div>
