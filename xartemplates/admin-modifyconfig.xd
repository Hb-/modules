<xar:if condition="xarTplAddStyleLink('bbcode', 'forms')"></xar:if>
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            BBCode Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2>
        <xar:mlstring>
            Modify Configuration
        </xar:mlstring>
    </h2>
    <form class="xar-formwidget" method="post" action="#xarModURL('bbcode', 'admin', 'modifyconfig')#" method="post" enctype="application/x-www-form-urlencoded" />
        <fieldset class="formelements xar-norm">
            <legend>
                <strong>
                    <xar:mlstring>
                        Settings
                    </xar:mlstring>
                </strong>
            </legend>
            <input type="hidden" name="authid" id="authid" value="#$authid#" />
            <input type="hidden" name="phase" id="phase" value="update" />
            <p class="param">
                <label for="dolinebreak">
                    <span class="help" title="#xarML('Check this if you would like the BBCode module to provide linebreaks on content.')#">
                        <xar:mlstring>
                            Transform Linebreaks
                        </xar:mlstring>
                    </span>
                </label>
                <xar:if condition="xarModGetVar('bbcode', 'dolinebreak')">
                    <input type="checkbox" name="dolinebreak" id="dolinebreak" value="1" checked="checked" />
                <xar:else />
                    <input type="checkbox" name="dolinebreak" id="dolinebreak" value="1" />
                </xar:if>
            </p>
            <xar:if condition="xarModGetVar('bbcode', 'dolinebreak')">
            <p class="param">
                <label for="transformtype">
                    <span class="help" title="#xarML('Transform linebreaks as either paragraphs or linebreaks.')#">
                        <xar:mlstring>
                            Type of linebreak transform
                        </xar:mlstring>
                    </span>
                </label>
                <select name="transformtype" id="transformtype" size="1">
                    <xar:if condition="xarModGetVar('bbcode', 'transformtype') eq '1'">
                        <option label="Linebreaks" value="1" selected="selected">Linebreaks</option>
                        <option label="Paragraphs" value="2">Paragraphs</option>
                    <xar:elseif condition="xarModGetVar('bbcode', 'transformtype') eq '2'" />
                        <option label="Linebreaks" value="1">Linebreaks</option>
                        <option label="Paragraphs" value="2" selected="selected">Paragraphs</option>
                    </xar:if>                                    
                </select>
            </p>
            </xar:if>
            <p class="param">
                <label for="advancedbbcode">
                    <span class="help" title="#xarML('Admin defined bbcode for advanced users.')#">
                        <xar:mlstring>
                            Use Advanced BBCode
                        </xar:mlstring>
                    </span>
                </label>
                <xar:if condition="xarModGetVar('bbcode', 'useadvanced')">
                  <input type="checkbox" name="advancedbbcode" id="advancedbbcode" value="1" checked="checked" />
                <xar:else />
                  <input type="checkbox" name="advancedbbcode" id="advancedbbcode" value="1" />
                </xar:if>
            </p>
        <xar:if condition="!empty($hooks)">
        </fieldset>
        <fieldset class="formelements xar-norm">
            <legend>
                <strong>
                    <xar:mlstring>
                        Hooked Module Configuration
                    </xar:mlstring>
                </strong>
            </legend>
            <xar:foreach in="$hooks" key="$hookmodule">
                #$hooks[$hookmodule]#
            </xar:foreach>
        </xar:if>
            <p class="param">
                <input type="submit" value="#xarML('Submit')#" />
                <input type="reset" value="#xarML('Reset')#" />
            </p>
        </fieldset>
    </form>
</div>