<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Ratings Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <xar:template type="module" module="ratings" file="admin-menu" />

    <form id="post" action="&xar-modurl-ratings-admin-updateconfig;" method="post" enctype="application/x-www-form-urlencoded">
        <fieldset>
                <legend>
                    <xar:mlstring>Modify Configuration</xar:mlstring>
                </legend>

    <xar:foreach in="$settings" key="$modname" value="$config">
            <div class="xar-form-input-wrapper">
                <p>
                    <strong>#$config['label']#</strong>
                </p>
                <label for="ratstyle" class="xar-form-label">
                    <xar:mlstring>Rating Style</xar:mlstring>:
                </label>
                <select name="style[#$modname#]" id="style[#$modname#]">
                <xar:foreach in="$styleoptions" value="$option">
                    <xar:if condition="$option['id'] eq $config['style']">
                        <option value="#$option['id']#" selected="selected">#$option['name']#</option>
                    <xar:else />
                        <option value="#$option['id']#">#$option['name']#</option>
                    </xar:if>
                </xar:foreach>
                </select>
            </div>
            <div class="xar-form-input-wrapper">
              <label for="seclev" class="xar-form-label">
                    <xar:mlstring>Security Level</xar:mlstring>:
                </label>
                <select name="seclevel[#$modname#]" id="seclevel[#$modname#]">
                <xar:foreach in="$secleveloptions" value="$option">
                    <xar:if condition="$option['id'] eq $config['seclevel']">
                        <option value="#$option['id']#" selected="selected">#$option['name']#</option>
                    <xar:else />
                        <option value="#$option['id']#">#$option['name']#</option>
                    </xar:if>
                </xar:foreach>
                </select>
            </div>
    </xar:foreach>
        </fieldset>
        <div class="xar-form-input-after">
           <input type="hidden" name="authid" id="authid" value="#$authid#" />
           <input type="submit" value="#xarML('Save config')#" />
        </div>
    </form>
</div>
