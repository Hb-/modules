<xar:set name="modulesettings">xarModGetVar('accessmethods','modulesettings')</xar:set>
<xar:data-getitem name="$properties" module="modules" itemtype="732" itemid="0" />

<xar:template type="module" file="admin-menu" />

<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Modify Module Configuration</xar:mlstring></span></div>

<div class="xar-mod-body">
    
    <form method="post" action="#xarModURL('accessmethods','admin','updateconfig')#">
    <input type="hidden" name="authid" value="#$authid#" />
<xar:comment>Unsuccessful attempt to use hooks to store modvars
    <input type="hidden" name="modid" value="#xarModGetIDFromName('modules')#" />
    <input type="hidden" name="itemtype" value="#xarModGetIDFromName('accessmethods')#" />
    <input type="hidden" name="itemid" value="1" />
    <input type="hidden" name="return_url" value="#xarServerGetCurrentURL()#" />
    
    <xar:data-form module="modules" itemtype="66" itemtype="732" itemid="$modulesettings" />
</xar:comment>

    <div class="xar-form-input-wrapper">
        <label for="webmastergroup" class="xar-form-label">
            <xar:data-label property="$properties['webmastergroup']" />
        </label>
        <xar:data-input property="$properties['webmastergroup']" name="webmastergroup" value="$webmastergroup" />
    </div>

    <div class="xar-form-input-wrapper">
        <label for="itemsperpage" class="xar-form-label">
            <xar:mlstring>Items per page</xar:mlstring>
        </label>
        <input type="text" id="itemsperpage" name="itemsperpage" value="#$itemsperpage#" maxlength="3" class="xar-form-textshort" />
    </div>
    
    <br />
    #$hooks#
    
    <br />
    <input type="submit" value="#$submitlabel#" />
    </form>
</div>

