<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Weather</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body" style="display:block;">
    <h2><xar:mlstring>Modify Config</xar:mlstring></h2>
    
    <div style="border-width: 1px; border-style: solid; border-color: #B3B3B3; padding: 1px;">
        <div style="float: right; text-align:right; display:block;padding:10px;">
            <a href="http://www.weather.com"><img 
                src="modules/weather/xarimages/TWClogo_64px.png" border="0" 
                alt="weather.com&reg;" width="86" height="64" /></a>
        </div>
        <div style="margin-left: 1em; margin-right: 1em; margin-top: 2em; text-align:left;">
        <form name="Weather" action="#xarModURL('weather','admin','updateconfig')#" method="post">
        <table border="0" cellpadding="2" cellspacing="2">
            <tr>
                <td><xar:mlstring>Partner ID</xar:mlstring> : </td>
                <td><input size="25" type="text" name="partner_id" value="#$partner_id#" /></td>
            </tr><tr>
                <td><xar:mlstring>License Key</xar:mlstring> : </td>
                <td><input size="25" type="text" name="license_key" value="#$license_key#" /></td>
            </tr><tr>
                <td><xar:mlstring>Default Location</xar:mlstring> : </td>
                <td><input size="25" type="text" name="default_location" value="#$default_location#" /></td>
            </tr><tr>
                <td><xar:mlstring>Number of Days for Extended Forecasts</xar:mlstring> : </td>
                <td>
                    <select name="extdays">
                        <xar:for start="$i = 1" test="$i le 10" iter="$i++">
                            <xar:if condition="$extdays eq $i">
                                <option value="#$i#" selected="selected">#$i#</option>
                            <xar:else />
                                <option value="#$i#">#$i#</option>
                            </xar:if>
                        </xar:for>
                    </select>
                </td>
            </tr><tr>
                <td><xar:mlstring>Measurement Units</xar:mlstring> : </td>
                <td>
                    <select name="units">
                        <xar:set name="$StandardUnits"><xar:mlstring>Standard</xar:mlstring></xar:set>
                        <xar:set name="$MetricUnits"><xar:mlstring>Metric</xar:mlstring></xar:set>
                        <xar:if condition="$units eq 's'">
                            <option value="s" selected="selected">#$StandardUnits#</option>
                        <xar:else />
                            <option value="s">#$StandardUnits#</option>
                        </xar:if>
                        <xar:if condition="$units eq 'm'">
                            <option value="m" selected="selected">#$MetricUnits#</option>
                        <xar:else />
                            <option value="m">#$MetricUnits#</option>
                        </xar:if>
                    </select>
                </td>
            </tr><tr>
                <td><xar:mlstring>Current Conditions Cache Time</xar:mlstring> : </td>
                <td><input type="text" name="cc_cache_time" value="#$cc_cache_time#" /> in minutes (minimum = 30)</td>
            </tr><tr>
                <td><xar:mlstring>Extended Forecast Cache Time</xar:mlstring> : </td>
                <td><input type="text" name="ext_cache_time" value="#$ext_cache_time#" /> in hours (minimum = 2)</td>
            </tr><tr>
                <td><label for="shorturls"><xar:mlstring>Enable Short URLs</xar:mlstring> : </label></td>
                <td>
                    <xar:if condition="xarModGetVar('weather','SupportShortURLs') eq 1">
                        <input type="checkbox" id="shorturls" name="shorturls" value="1" checked="checked" />
                    <xar:else />
                        <input type="checkbox" id="shorturls" name="shorturls" value="1" />
                    </xar:if>
                </td>
            </tr>
        </table>
        <p><input type="submit" name="submit" value="#xarML('Modify Config')#" /></p>
        </form>           
        </div>
    </div>
</div>
