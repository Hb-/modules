<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Helpdesk Modify Configuration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
<form action="#xarModURL('helpdesk', 'admin', 'updateconfig')#" method="post">
<div align="center">
    <table border="1" width="75%">
        <tr>
            <th colspan="2"><xar:mlstring>Global Settings</xar:mlstring></th>
        </tr>
        <tr>
            <td><xar:mlstring>Module Website</xar:mlstring></td>
            <td><a href="http://www.envisionnet.net/">Envision Net, Inc.</a></td>
        </tr>
        <tr>
            <td><xar:mlstring>Enforce Form Authorization</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'EnforceAuthKey')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="enforceauthkey" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Allow Users to check status</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'User can check status')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="usercancheckstatus" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Allow Techs to see ALL tickets</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'Techs see all tickets')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="techsseealltickets" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Enable Images</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'Enable Images')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="enableimages" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Enable HyperLinks in Stats</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'EnableMyStatsHyperLink')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="enablemystatshyperlink" value="1" #$checked# /></td>
        </tr>
        
        
        <!-- New Ticket Options -->
        <tr>
            <th colspan="2"><xar:mlstring>New Ticket Options</xar:mlstring></th>
        </tr>
        <tr>
            <td><xar:mlstring>Allow Anonymous to submit tickets</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'Anonymous can Submit')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="anonymouscansubmit" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Allow Users to submit tickets</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'User can Submit')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="usercansubmit" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Allow Users to change ticket status on submit</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'AllowStatusChangeOnSubmit')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="allowstatuschangeonsubmit" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Allow closing tickets on submit</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'AllowCloseOnSubmit')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="allowcloseonsubmit" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Default to Logged in Tech ID for Opened By</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'OpenedByDefaultToLoggedIn')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="openedbydefaulttologgedin" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Default the AssignedTo field to the currently logged in user</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'AssignedToDefaultToLoggedIn')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="assignedtodefaulttologgedin" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Allow Usage of Domain Names</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'AllowDomainName')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="allowdomainname" value="1" #$checked# /></td>
        </tr>

        <!-- New Ticket Options -->
        <tr>
            <th colspan="2"><xar:mlstring>View Ticket Results Settings</xar:mlstring></th>
        </tr>
        <tr>
            <td><xar:mlstring>Rows per page(0 for all)</xar:mlstring></td>
            <xar:set name="$value">xarModGetVar('helpdesk', 'Default rows per page')</xar:set>
            <td><input type="text" name="rowsperpage" value="#$value#" /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Max result page count (ie: 1 2 3 4 )</xar:mlstring></td>
            <xar:set name="$value">xarModGetVar('helpdesk', 'Page Count Limit')</xar:set>
            <td><input type="text" name="pagecountlimit" value="#$value#" /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Show Status in view Ticket List</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'ShowStatusInSummary')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="showstatusinsummary" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Show Priority in view Ticket List</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'ShowPriorityInSummary')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="showpriorityinsummary" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Show Date Entered in view Ticket List</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'ShowDateEnteredInSummary')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="showdateenteredinsummary" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Show Last Modified in view Ticket List</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'ShowLastModifiedInSummary')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="showlastmodifiedinsummary" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Show Opened By in Ticket List</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'ShowOpenedByInSummary')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="showopenbyinsummary" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Show Assigned To in Ticket List</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'ShowAssignedToInSummary')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="showassignedtoinsummary" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td><xar:mlstring>Show Closed By To in Ticket List</xar:mlstring></td>
            <xar:if condition="xarModGetVar('helpdesk', 'ShowClosedByInSummary')">
                <xar:set name="$checked">'checked="checked"'</xar:set>
            <xar:else />
                <xar:set name="$checked">''</xar:set>
            </xar:if>
            <td><input type="checkbox" name="showclosedbyinsummary" value="1" #$checked# /></td>
        </tr>
        <tr>
            <td colspan="2">
                #$hooks#
            </td>
        </tr>                        
        <tr>
            <td colspan="2">
                <input type="hidden" name="authid" id="authid" value="#$authid#" />
                <input type="submit" name="submit" value="#xarML('Update Config')#" />            
            </td>
        </tr>
    </table>        
</div>
</form> 
</div>