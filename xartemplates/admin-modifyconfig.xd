<xar:base-include-javascript module="base" filename="formcheck.js" position="head" />
<script type="text/javascript">
<!--
    // Enter name of mandatory fields
    var fieldRequired = Array("replace", "itemsperpage");
    // Enter field description to appear in the dialog box
    var fieldDescription = Array("Replace String", "Items Per Page");
//-->
</script>

<xar:if condition="xarTplAddStyleLink('censor', 'forms')"></xar:if>

<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Censor Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2>
        <xar:mlstring>
            Configure Censor
        </xar:mlstring>
    </h2>
    <form class="xar-formwidget" name="post" id="post" action="&xar-modurl-censor-admin-updateconfig;" method="post" onsubmit="return formCheck(this, fieldRequired, fieldDescription);" enctype="application/x-www-form-urlencoded">
        <fieldset class="formelements xar-norm">
            <legend>
                <strong>
                    <xar:mlstring>
                        Modify Configuration
                    </xar:mlstring>
                </strong>
            </legend>
        <input type="hidden" name="authid" id="authid" value="#xarSecGenAuthKey()#" />
            <p class="param">
                <label for="replace">
                    <span class="help" title="#xarML('This is what will the replacement for the keywords that you specify.')#">
                        <xar:mlstring>
                            Replace String
                        </xar:mlstring>
        </span>
                </label>
      <input type="text" name="replace" id="replace" value="#$replace#" size="32" maxlength="100" />
            </p>
            <p class="param">
                <label for="numitems">
                    <span class="help" title="#xarML('This is the number of items shown on the individual admin view page.')#">
                        <xar:mlstring>
                            Items Per Page
                        </xar:mlstring>
        </span>
                </label>
      <input type="text" name="itemsperpage" id="itemsperpage" size="3" maxlength="3" value="#$itemsperpage#" />
            </p>
        </fieldset>
        <p class="param">
            <input type="submit" value="#xarML('Save config')#" />
        </p>
    </form>
    </div>
