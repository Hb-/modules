<h2><xar:mlstring>Your SIGMA Information</xar:mlstring></h2>
<form action="&xar-modurl-sigmapersonnel-user-usermenu;"
      method="post"
      enctype="application/x-www-form-urlencoded">
      <xar:if condition="!empty($persondata)">
        <fieldset>
            <legend>
                <xar:mlstring>Name and address</xar:mlstring>
            </legend>
            <div class="xar-form-input-wrapper">
                <label for="firstname" class="xar-form-label required">
                    <span class="help" title="#xarML('Your first name.')#">
                    <xar:mlstring>First Name</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="firstname" type="2" value="$persondata['firstname']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="lastname" class="xar-form-label required">
                    <span class="help" title="#xarML('Enter your familyname.')#">
                    <xar:mlstring>Last Name</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="lastname" type="2" value="$persondata['lastname']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="tussenvgsl" class="xar-form-label">
                    <span class="help" title="#xarML('Enter your tussenvoegsel.')#">
                    <xar:mlstring>Tussenvoegsel</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="tussenvgsl" type="2" value="$persondata['tussenvgsl']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="initials" class="xar-form-label">
                    <span class="help" title="#xarML('Enter your initials.')#">
                    <xar:mlstring>Initials</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="initials" type="2" value="$persondata['initials']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="sex" class="xar-form-label">
                    <span class="help" title="#xarML('Choose your sexe.')#">
                    <xar:mlstring>Sexe</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="sex" type="2" value="$persondata['sex']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="title" class="xar-form-label">
                    <span class="help" title="#xarML('Enter your title, if any.')#">
                    <xar:mlstring>Title</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="title" type="2" value="$persondata['title']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="street" class="xar-form-label">
                    <span class="help" title="#xarML('Enter your street, including number.')#">
                    <xar:mlstring>Street</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="street" type="2" value="$persondata['street']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="zip" class="xar-form-label">
                    <span class="help" title="#xarML('Enter your zipcode.')#">
                    <xar:mlstring>Zip</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="zip" type="2" value="$persondata['zip']" />
            </div>
            <div class="xar-form-input-wrapper">
              <label for="cityid" class="xar-form-label">
                 <span class="help" title="#xarML('Choose the city/town')#">
                    <xar:mlstring>City</xar:mlstring>
                 </span>
              </label>
                <select name="cityid">
                <xar:loop name="$cities">
                    <option value="#$loop:item['cityid']#">#$loop:item['city']#</option>
                </xar:loop>
                </select>
            </div>

            <div class="xar-form-input-wrapper">
                <label for="phonehome" class="xar-form-label">
                    <span class="help" title="#xarML('Enter your phonenumber at home.')#">
                    <xar:mlstring>Phone number at home</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="phonehome" type="2" value="$persondata['phonehome']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="mobile" class="xar-form-label">
                    <span class="help" title="#xarML('Enter your mobile phonenumber.')#">
                    <xar:mlstring>Mobile phone number</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="mobile" type="2" value="$persondata['mobile']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="phonework" class="xar-form-label">
                    <span class="help" title="#xarML('Enter your phonenumber at work.')#">
                    <xar:mlstring>Phone at work</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="phonework" type="2" value="$persondata['phonework']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="email" class="xar-form-label">
                    <span class="help" title="#xarML('Enter your email address.')#">
                    <xar:mlstring>Email address</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="email" type="2" value="$persondata['email']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="birthdate" class="xar-form-label">
                    <span class="help" title="#xarML('Enter the date of birth of the person.')#">
                    <xar:mlstring>Birthdate</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="birthdate" type="calendar" value="$persondata['birthdate']" />
              <xar:if condition="!empty($invalid['birthdate'])">
                <span style="color: red"><xar:mlstring>ERROR! This is not a valid birthdate</xar:mlstring></span>
              </xar:if>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="birthplace" class="xar-form-label">
                    <span class="help" title="#xarML('Enter the place of birth of this person.')#">
                    <xar:mlstring>Place of birth</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="birthplace" type="textbox" value="$persondata['birthplace']" />
              <xar:if condition="!empty($invalid['birthplace'])">
                <span style="color: red"><xar:mlstring>ERROR! This is not a valid place of birth</xar:mlstring></span>
              </xar:if>
            </div>

        </fieldset>

       <fieldset>
            <legend>
                <strong><xar:mlstring>Your Privacy Options</xar:mlstring></strong>
            </legend>
            <p><xar:mlstring>Choose the parameters you do not want to show on the internal list</xar:mlstring></p>
            <div class="xar-form-input-wrapper">
                <label for="privphonehome" class="xar-form-label">
                    <span class="help" title="#xarML('Your home telephone number.')#">
                    #$privphonehomelabel#
                    </span>
                </label>
                <xar:data-input name="privphonehome" type="checkbox" value="$persondata['privphonehome']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="privwork" class="xar-form-label">
                    <span class="help" title="#xarML('privwork.')#">
                    #$privworklabel#
                    </span>
                </label>
                <xar:data-input name="privwork" type="checkbox" value="$persondata['privwork']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="privemail" class="xar-form-label">
                    <span class="help" title="#xarML('privemail.')#">
                    #$privemaillabel#
                    </span>
                </label>
                <xar:data-input name="privemail" type="checkbox" value="$persondata['privemail']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="privbirthdate" class="xar-form-label">
                    <span class="help" title="#xarML('privbirthdate.')#">
                    <xar:mlstring>Birthdate private?</xar:mlstring>
                    </span>
                </label>
                <xar:data-input name="privbirthdate" type="checkbox" value="$persondata['privbirthdate']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="privaddress" class="xar-form-label">
                    <span class="help" title="#xarML('privaddress.')#">
                    #$privaddresslabel#
                    </span>
                </label>
                <xar:data-input name="privaddress" type="checkbox" value="$persondata['privaddress']" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="privphonework" class="xar-form-label">
                    <span class="help" title="#xarML('privphonework.')#">
                    #$privphoneworklabel#
                    </span>
                </label>
                <xar:data-input name="privphonework" type="checkbox" value="$persondata['privphonework']" />
            </div>
       </fieldset>
           <input type="hidden" name="personid" id="personid" value="#$persondata['personid']#" />
    </xar:if>
    <fieldset>
        <div class="xar-form-input-wrapper">
            <label for="itemsperpage" class="xar-form-label">
                <span class="help" title="#xarML('The number of items per page you will see.')#">
                <xar:mlstring>Items per page</xar:mlstring>
                </span>
            </label>
            <input type="text" name="itemsperpage" id="itemsperpage" size="3" maxlength="3" value="#$itemsperpage#" />
        </div>
    </fieldset>
    <input type="hidden" name="authid" id="authid" value="#$authid#" />

    <input type="hidden" name="uid" id="uid" value="#$uid#" />
    <input type="hidden" name="phase" id="phase" value="update" />
    <input type="submit" value="Modify Your Information"  tabindex="2" />
</form>