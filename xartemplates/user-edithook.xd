<script language="Javascript" src="modules/julian/xarjavascript/utilities_lite.js"></script>
<script language="Javascript" src="modules/julian/xarjavascript/fieldval.js"></script>

<fieldset>
    <legend>
        <strong><xar:mlstring>Event Description</xar:mlstring></strong>
    </legend>
    <div class="xar-form-input-wrapper">
        <label for="event_summary" class="required xar-form-label">
            <span class="help" title="#xarML('This title will be displayed in the Julian calendar.')#">
                <xar:mlstring>Title to display:</xar:mlstring>
            </span>
        </label>
        <input type="text" name="event_summary" id="event_summary" maxlength="80" value="#$event_summary#" />
    </div>
  <xar:template file="modify-datetime" />
