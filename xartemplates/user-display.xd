<xar:style scope="module" file="gallery"  />

<a id="gallery-display"></a>
<div class="xar-mod-head">
    <span class="xar-mod-title">Gallery</span>
</div>

<div class="xar-mod-body xar-gallery">

    <xar:if condition="!empty($album)">
        <h3 class="xar-align-center"><a href="#$back_link#"><xar:var name="album.display_name" /></a></h3>
    </xar:if>
    <h4 class="xar-align-center"><xar:var name="file.name" /></h4>

    <table class="xar-gallery-display xar-align-center">
        <tr>
            <td valign="top" class="xar-gallery-display-prev">
                <xar:if condition="!empty($prev_link)">
                    <a href="#$prev_link###gallery-display">
                    <xar:set name="path">$files_path.$prev['file']</xar:set>
                    <xar:set name="params">array('w' => 80,'q' => 90, 'ace' => true)</xar:set>
                    <xar:image-resize src="$path" static="1" label="Previous" params="$params" />
                    <p>&lt;&lt; <xar:mlstring>Previous</xar:mlstring></a></p>
                </xar:if>
            </td>
            <td><xar:template file="display-main-image" /></td>
            <td valign="top" class="xar-gallery-display-next">
                <xar:if condition="!empty($next_link)">
                    <a href="#$next_link###gallery-display">
                    <xar:set name="path">$files_path.$next['file']</xar:set>
                    <xar:set name="params">array('w' => 80,'q' => 90, 'ace' => true)</xar:set>
                    <xar:image-resize src="$path" static="1" label="Previous" params="$params" />
                    <p><xar:mlstring>Next</xar:mlstring> &gt;&gt;</p>
                    </a>
                </xar:if>
            </td>
        </tr>
    </table>

</div>

<div class="xar-clearboth">&nbsp;</div>
<xar:foreach in="$hooks" key="$module" value="$hook">
    <xar:var name="hook" />
</xar:foreach>