<!-- the variables used in this menu come from example_admin_menu() -->
<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Courses Administration</xar:mlstring></span></div>
<div class="xar-mod-body"><h2>#$menutitle#</h2><br />
<div style="margin: auto;">

<div class="xar-mod-statusmsg">#xarSessionGetVar('statusmsg')#</div>

<xar:if condition="xarModIsHooked('categories','courses')">
  <xar:categories-navigation layout="trails" showchildren="1" module="courses" catid="$catid" />
</xar:if>

<table width="100%" border="1" cellspacing="0" cellpadding="4">
    <tr>
        <xar:if condition="$snamelink != ''">
            <th><a href="#$snamelink#">#$namelabel#</a></th>
        <xar:else />
            <th>#$namelabel#</th>
        </xar:if>
        <xar:if condition="$snumberlink != ''">
            <th><a href="#$snumberlink#">#$numberlabel#</a></th>
        <xar:else />
            <th>#$numberlabel#</th>
        </xar:if>
        <th>Hidden?</th>
        <th>#$optionslabel#</th>
    </tr>
    <xar:foreach in="$items" value="$item">
    <tr>
        <td>
           <xar:if condition="empty($item['displayurl'])">
              #$item['name']#
           <xar:else />
              <a href="#$item['displayurl']#">#$item['name']#</a>
           </xar:if>
        </td>
        <td>#$item['number']#</td>
		<xar:if condition="$item['hidecourse'] eq 1">
			<td class="coursehidden">&nbsp;</td>
		<xar:else />
			<td>&nbsp; </td>		
		</xar:if>

        <td>
           <xar:if condition="empty($item['planurl'])">
               #$item['plantitle']#
           <xar:else />
               <a href="#$item['planurl']#">#$item['plantitle']#</a>
           </xar:if>
           |
           <xar:if condition="empty($item['editurl'])">
               #$item['edittitle']#
           <xar:else />
               <a href="#$item['editurl']#">#$item['edittitle']#</a>
           </xar:if>
           |
           <xar:if condition="empty($item['deleteurl'])">
               #$item['deletetitle']#
           <xar:else />
               <a href="#$item['deleteurl']#">#$item['deletetitle']#</a>
           </xar:if>
        </td>
    </tr>
    </xar:foreach>
</table>
<br />

<!-- add the pager here -->
#$pager#
</div>
</div>
