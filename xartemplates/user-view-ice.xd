<div class="xar-mod-body">
    <fieldset>
        <legend>
            <xar:ml>
                <xar:mlstring>
                    #(1) List 
                </xar:mlstring>
                <xar:mlvar>
                    #$itemtypename#
                </xar:mlvar>
            </xar:ml>
        </legend>
        <xar:if condition="!empty($message)">
            <p>#xarVarPrepForDisplay($message)#</p>
        <xar:else />
            <xar:data-list module="27" itemtype="1001" fieldlist="id,name,description,url,modified" tplmodule="vendors" extend="true" />
            <!-- add the pager here -->
            <div class="xar-align-center">#$pager#</div>
        </xar:if>
    </fieldset>
</div>
