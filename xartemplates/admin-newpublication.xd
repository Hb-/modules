<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Newsletter Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2><xar:mlstring>New Publication</xar:mlstring></h2>
    <form name="post" id="post" action="&xar-modurl-newsletter-admin-createpublication;" method="post" enctype="application/x-www-form-urlencoded">
        <fieldset>
            <legend>
                <xar:mlstring>General settings</xar:mlstring>
            </legend>
            <input type="hidden" name="authid" id="authid" value="#$authid#" />
            <div class="xar-form-input-wrapper">
                <label for="ownerId" title="#xarML('The name of the owner of the pubblication')#" class="xar-form-label">
                    <xar:mlstring>Choose Owner:</xar:mlstring>
                </label>
                <select id="ownerId" name="ownerId" tabindex="1">
                    <xar:loop name="$owners">
                        <xar:if condition="$loggeduser['uid'] eq $loop:item['id']">
                            <option name="id" value="#$loop:item['id']#" selected="selected">#$loop:item['name']#</option>
                        <xar:else />
                            <option name="id" value="#$loop:item['id']#">#$loop:item['name']#</option>
                        </xar:if>
                    </xar:loop>
                </select>
            </div>
            <div class="xar-form-input-wrapper">
                <xar:if condition="$number_of_categories != 0">
                    <label for="categoryId" title="#xarML('Pubblication category')#" class="xar-form-label">
                        <xar:mlstring>Publication Category:</xar:mlstring>
                    </label>
                    <select id="categoryId" name="categoryId" tabindex="2">
                        <xar:loop name="$categories">
                            <option name="cid" value="#$loop:item['cid']#">#$loop:item['name']#</option>
                        </xar:loop>
                    </select>
                </div>
                <div class="xar-form-input-wrapper">
                    <label for="altcids[]" title="#xarML('Alternative categories')#" class="xar-form-label">
                        <xar:mlstring>Alternative Categories:</xar:mlstring>
                    </label>
                    <select id="altcids[]" name="altcids[]" tabindex="3" multiple="multiple" size="5">
                        <xar:loop name="$altcategories">
                            <option name="cid" value="#$loop:item['cid']#">#$loop:item['name']#</option>
                        </xar:loop>
                    </select>
                <xar:else />
                    <input type="hidden" name="categoryId" id="categoryId" value="0" />
                    <input type="hidden" name="altcids[]" id="altcids" value="0" />
                </xar:if>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="title" title="#xarML('Publication title')#" class="xar-form-label">
                    <xar:mlstring>Title:</xar:mlstring>
                </label>
                <input type="text" name="title" id="title" size="50" maxlength="255" tabindex="4" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="introduction" title="#xarML('Publication introduction')#" class="xar-form-label">
                    <xar:mlstring>Introduction:</xar:mlstring>
                </label>
                <textarea id="introduction" name="introduction" rows="10" cols="50" tabindex="5"></textarea>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="templateHTML" title="#xarML('HTML Publication template')#" class="xar-form-label">
                    <xar:mlstring>HTML Template:</xar:mlstring>
                </label>
                <input type="text" name="templateHTML" id="templateHTML" size="50" maxlength="50" tabindex="6" value="#$templateHTML#"/>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="templateText" title="#xarML('Text Pubblication template')#" class="xar-form-label">
                    <xar:mlstring>Text Template:</xar:mlstring>
                </label>
                <input type="text" name="templateText" id="templateText" size="50" maxlength="50" tabindex="7" value="#$templateText#"/>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="fromname" title="#xarML('Default is owners name')#" class="xar-form-label">
                    <xar:mlstring>Email From Name:</xar:mlstring>
                </label>
                <input type="text" name="fromname" id="fromname" size="50" maxlength="100" tabindex="8" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="fromemail" title="#xarML('Default is owners email address')#" class="xar-form-label">
                    <xar:mlstring>Email From Address:</xar:mlstring>
                </label>
                <input type="text" name="fromemail" id="fromemail" size="50" maxlength="100" tabindex="9" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="subject" title="#xarML('Subject line in sent email')#" class="xar-form-label">
                    <xar:mlstring>Email Subject:</xar:mlstring>
                </label>
                <select id="subject" name="subject" tabindex="10">
                    <option name="id" value="0">Issue Title</option>
                    <option name="id" value="1">Publication Title</option>
                    <option name="id" value="2">Publication and Issue Title</option>
                </select>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="logo" title="#xarML('For example: http://my.site.com/logo.gif')#" class="xar-form-label">
                    <xar:mlstring>Logo URL:</xar:mlstring>
                </label>
                <input type="text" name="logo" id="logo" size="50" maxlength="255" tabindex="11" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="linkExpiration" title="#xarML('0 = link never expires')#" class="xar-form-label">
                    <xar:mlstring>Default Number of Days before Link Expires:</xar:mlstring>
                </label>
                <input type="text" name="linkExpiration" id="linkExpiration" value="#$linkExpiration#" size="4" maxlength="4" tabindex="12" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="linkRegistration" title="#xarML('0 = link never expires')#" class="xar-form-label">
                    <xar:mlstring>Text for Link Registration:</xar:mlstring>
                </label>
                <textarea id="linkRegistration" name="linkRegistration" rows="3" cols="50" tabindex="13">#$linkRegistration#</textarea>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="private" title="#xarML('Private Publication')#" class="xar-form-label">
                    <xar:mlstring>Private Publication:</xar:mlstring>
                </label>
                <xar:if condition="$private eq 1">
                    <input type="checkbox" id="private" name="private" value="1" checked="checked" tabindex="14" />
                <xar:else />
                    <input type="checkbox" id="private" name="private" value="1" tabindex="15" />
                </xar:if>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="disclaimerId" title="#xarML('Private Publication')#" class="xar-form-label">
                    <xar:mlstring>Disclaimer:</xar:mlstring>
                </label>
                <xar:if condition="!empty($disclaimers)">
                    <select id="disclaimerId" name="disclaimerId" tabindex="16">
                        <option value="0">Choose Disclaimer</option>
                        <xar:loop name="$disclaimers">
                            <option name="id" value="#$loop:item['id']#">#$loop:item['title']#</option>
                        </xar:loop>
                    </select>
                </xar:if>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="newdisclaimer" title="#xarML('Private Publication')#" class="xar-form-label">
                    <xar:mlstring>Add a new disclaimer:</xar:mlstring>
                </label>
                <textarea id="newdisclaimer" name="newdisclaimer" rows="3" cols="50" tabindex="17"></textarea>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="description" title="#xarML('Shown on subscription page')#" class="xar-form-label">
                    <xar:mlstring>Description:</xar:mlstring>
                </label>
                <textarea id="description" name="description" rows="10" cols="50" tabindex="18"></textarea>
            </div>
        </fieldset>
        <div class="xar-form-input-wrapper-after">
            <input type="submit" value="#xarML('Add Publication')#" tabindex="19" />
        </div>
    </form>
</div>
