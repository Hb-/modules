<xar:set name="worklog_objectid">xarModGetVar('xtasks','worklog_objectid')</xar:set>
<xar:data-getitem name="$properties" module="xtasks" itemtype="2" itemid="$worklog_objectid" />
<xar:set name="projects_objectid">xarModGetVar('xproject','projects_objectid')</xar:set>
<xar:data-getitem name="$xproject_properties" module="xproject" itemtype="1" itemid="$projects_objectid" />
    
<xar:template type="module" file="admin-menu" />
<div class="xar-mod-body">
    <h2 style="text-align: center;">Work Log</h2>

    <div style="width: 700px;">
        <div>
            <div class="xar-title" style="float: left; width: 150px;"><xar:mlstring>Client</xar:mlstring></div>
            <div class="xar-title" style="float: left; width: 150px;"><xar:mlstring>Project</xar:mlstring></div>
            <div class="xar-title" style="float: left; width: 120px;"><xar:mlstring>Date Worked</xar:mlstring></div>
            <div class="xar-title" style="float: left; width: 120px;"><xar:mlstring>Performed By</xar:mlstring></div>
            <div class="xar-title" style="float: left; width: 50px;"><xar:mlstring>Hours</xar:mlstring></div>
            <div class="xar-title" style="float: right; width: 50px;"><xar:mlstring>Options</xar:mlstring></div>
            <div style="clear: both;"></div>
        </div>
        <xar:foreach in="$worklog" value="$workdetails">
            <div>
                <div class="xar-norm" style="float: left; width: 150px;"><xar:if condition="$workdetails.clientid gt 0"><a href="&xar-modurl-addressbook-user-viewdetail;&amp;id=#$workdetails['clientid']#"><xar:data-output property="$xproject_properties['clientid']" value="$workdetails['clientid']" /></a></xar:if>&nbsp;</div>
                <div class="xar-norm" style="float: left; width: 150px;"><xar:if condition="$workdetails.projectid gt 0"><a href="&xar-modurl-xproject-admin-display;&amp;projectid=#$workdetails['projectid']#"><xar:data-output property="$xproject_properties['project_name']" value="$workdetails['project_name']" /></a></xar:if>&nbsp;</div>
                <div class="xar-norm" style="float: left; width: 120px;"><xar:data-output property="$properties['eventdate']" value="$workdetails['eventdate']" dateformat="%d-%b-%Y" />&nbsp;</div>
                <div class="xar-norm" style="float: left; width: 120px;"><xar:data-output property="$properties['ownerid']" value="$workdetails['ownerid']" />&nbsp;</div>
                <div class="xar-norm" style="float: left; width: 50px;"><xar:data-output property="$properties['hours']" value="$workdetails['hours']" />&nbsp;hrs</div>
                <div class="xar-norm" style="float: right; width: 50px; text-align: right;"><a href="&xar-modurl-xtasks-worklog-modify;&amp;worklogid=#$workdetails['worklogid']#"><img src="modules/xtasks/xarimages/button.edit.gif" border="0" align="bottom"></a>&nbsp;<a href="&xar-modurl-xtasks-worklog-delete;&amp;worklogid=#$workdetails['worklogid']#"><img src="modules/xtasks/xarimages/button.delete.gif" border="0" align="bottom"></a></div>
                <div style="clear: both;"></div>
            </div>
            <div class="xar-tiny" style="margin-left: 50px;"><xar:mlstring>Task</xar:mlstring>: #$workdetails['taskname']#</div>
            <div class="xar-tiny" style="margin-left: 50px;"><em><xar:data-output property="$properties['notes']" value="$workdetails['notes']" /></em></div>
        </xar:foreach>
    </div>

</div>