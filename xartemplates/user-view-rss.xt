            <description>#xarVarTransform(xarVarPrepForDisplay($topic['tdesc']), 'HTML', 'XML')#</description>
            <guid isPermaLink="true">#xarVarTransform($topic['viewtopicurl'], 'HTML', 'XML')#</guid>
        </item>
    </xar:foreach>
</xar:if>
</xar:template>