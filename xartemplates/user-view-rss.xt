            <description>#xarVarTransform(xarVarPrepForDisplay($sticky['tdesc']), 'HTML', 'XML')#</description>
            <guid isPermaLink="true">#xarVarTransform($sticky['viewtopicurl'], 'HTML', 'XML')#</guid>
        </item>
    </xar:foreach>
</xar:if>
<xar:if condition="!empty($faqs)">
    <xar:foreach in="$faqs" value="$faq">
        <item>
            <title>#xarVarTransform($faq['ttitle'], 'HTML', 'XML')#</title>
            <link>#xarVarTransform($faq['viewtopicurl'], 'HTML', 'XML')#</link>
            <author>#xarVarTransform($posterlist[$faq['towner']]['name'], 'HTML', 'XML')#</author>
