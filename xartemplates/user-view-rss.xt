            <content:encoded><![CDATA[ #xarVarTransform(xarVarPrepHTMLDisplay($faq['tdesc']), 'HTML', 'XML')# ]]></content:encoded>
            <description>#xarVarTransform(xarVarPrepForDisplay($faq['tdesc']), 'HTML', 'XML')#</description>
            <guid isPermaLink="true">#xarVarTransform($faq['viewtopicurl'], 'HTML', 'XML')#</guid>
        </item>
    </xar:foreach>
</xar:if>
<xar:if condition="!empty($topics)">
    <xar:foreach in="$topics" value="$topic">
        <item>
            <title>#xarVarTransform($topic['ttitle'], 'HTML', 'XML')#</title>
            <link>#xarVarTransform($topic['viewtopicurl'], 'HTML', 'XML')#</link>
            <author>#xarVarTransform($posterlist[$topic['towner']]['name'], 'HTML', 'XML')#</author>
            <pubDate>#xarLocaleFormatUTCDate("%a, %d %b %Y %H:%M:%S GMT",$topic['ptime'])#</pubDate>
