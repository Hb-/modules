<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->

    <xar:set name="pagename">#$wData.observStation#</xar:set>
    <xar:set name="dummy">#xarTplSetPageTitle($pagename)#</xar:set>

    <div class="xar-mod-head">
        <span class="xar-mod-title">
            Weather Forecast
        </span>
    </div>

    <div class="xar-mod-body">

        <xar:template type="module" module="weather" file="user-menu"/>

        <!-- Uncomment next line if you want a search form in the main page -->
        <!--<xar:template file="weatherdotcomsearch"/> -->

        <!-- the weather.com links are required -->
        <a href="http://www.weather.com"><img src="#xarTplGetImage('TWClogo_64px.png','weather')#" class="xar-module-icon" alt="weather.com&#174;"/></a>

        <div id="currentweather">

            <h2>
                #$pagename#<br />
                <xar:ml>
                    Forecast for #(1), #(2)
                    <xar:mlvar>#$eData[$day]['wkday']#</xar:mlvar>
                    <xar:mlvar>#$eData[$day]['date']#</xar:mlvar>
                </xar:ml>
            </h2>

            <table>
                <tr>
                    <th>Today</th>
                    <th>Tonight</th>
                </tr>
                <tr>
                    <td valign="top" align="center">
                        <img src="#xarTplGetImage('icons/default/32/'.$eData.$day.part.d.icon.'.png','weather')#" alt="#$eData.$day.part.d.icon#"/><br />
                        <strong>#$eData[$day]['part']['d']['cond']#</strong><br />
                    </td>
                    <td valign="top" align="center">
                        <img src="#xarTplGetImage('icons/default/32/'.$eData.$day.part.n.icon.'.png','weather')#" alt="#$eData.$day.part.d.icon#"/><br />
                        <strong>#$eData[$day]['part']['n']['cond']#</strong><br />
                    </td>
                </tr>
                <tr>
                    <th>Daytime High  (&#176;#$eData[0]['unitsTemp']#)</th>
                    <th>Overnight Low  (&#176;#$eData[0]['unitsTemp']#)</th>
                </tr>
                <tr>
                    <td valign="top" align="center">
                        <strong style="color:red;">#$eData[$day]['hi']#&#176;</strong>
                    </td>
                    <td valign="top" align="center">
                        <strong style="color:blue;">#$eData[$day]['lo']#&#176;</strong>
                    </td>
                </tr>
                <tr>
                    <th>Sunrise</th>
                    <th>Sunset</th>
                </tr>
                <tr>
                    <td valign="top" align="center">
                        <strong>#$eData[$day]['sunr']#</strong>
                    </td>
                    <td valign="top" align="center">
                        <strong>#$eData[$day]['suns']#</strong>
                    </td>
                </tr>
                <tr style="border-top: solid 1px black;">
                    <td>
                        <table>
                            <tr>
                                <td><strong>Wind Speed : </strong></td>
                                <td>#$eData[$day]['part']['d']['windspeed']#&#160;#$eData[0]['unitsSpeed']#</td>
                            </tr>
                            <tr>
                                <td><strong>Wind Gusts : </strong></td>
                                <td>#$eData[$day]['part']['d']['windgust']# &#160;#$eData[0]['unitsSpeed']#</td>
                            </tr>
                            <tr>
                                <td><strong>Wind Direction : </strong></td>
                                <td>#$eData[$day]['part']['d']['winddir']#</td>
                            </tr>
                            <tr>
                                <td><strong>Precipitation : </strong></td>
                                <td>#$eData[$day]['part']['d']['ppcp']#&#160;#$eData[0]['unitsPrecip']#</td>
                            </tr>
                            <tr>
                                <td><strong>Humidity : </strong></td>
                                <td>#$eData[$day]['part']['d']['humid']#%</td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <table>
                            <tr>
                                <td><strong>Wind Speed : </strong></td>
                                <td>#$eData[$day]['part']['n']['windspeed']#&#160;#$eData[0]['unitsSpeed']#</td>
                            </tr>
                            <tr>
                                <td><strong>Wind Gusts : </strong></td>
                                <td>#$eData[$day]['part']['n']['windgust']#&#160;#$eData[0]['unitsSpeed']#</td>
                            </tr>
                            <tr>
                                <td><strong>Wind Direction : </strong></td>
                                <td>#$eData[$day]['part']['n']['winddir']#</td>
                            </tr>
                            <tr>
                                <td><strong>Precipitation : </strong></td>
                                <td>#$eData[$day]['part']['n']['ppcp']#&#160;#$eData[0]['unitsPrecip']#</td>
                            </tr>
                            <tr>
                                <td><strong>Humidity : </strong></td>
                                <td>#$eData[$day]['part']['n']['humid']#%</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <br />
        </div>
    </div>

    <div class="xar-mod-foot">
        <!-- the weather.com links are required -->
        <xar:template file="weatherdotcomfooter"/>
    </div>
</xar:template>