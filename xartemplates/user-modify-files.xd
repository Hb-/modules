<xar:style scope="module" file="gallery"  />
<div class="xar-mod-head">
    <span class="xar-mod-title"><xar:mlstring>Modify Photo</xar:mlstring></span>
</div>

<form action="#xarModURL('gallery', 'user', 'modify')#" method="POST" enctype="multipart/form-data">

<xar:template file="admin-files-form" />


<fieldset>
    <legend><xar:mlstring>Gallery Links</xar:mlstring></legend>

    <xar:foreach in="$albums" key="$album_id" value="$album">
    <div class="xar-form-input-wrapper xar-clearboth">
        <label name="" class="xar-form-label"><xar:var name="album.display_name" /></label>
        <xar:if condition="isset($file.album_ids.$album_id)">
        <input type="checkbox" name="links[#$album_id#]" value="#$album.name#" class="xar-form-text" checked="checked" />
        <xar:else />
        <input type="checkbox" name="links[#$album_id#]" value="#$album.name#" class="xar-form-text" />
        </xar:if>
    </div>
    </xar:foreach>

</fieldset>

<xar:foreach in="$hooks" value="$hook">
    <xar:var name="hook" />
</xar:foreach>

<fieldset>
    <legend><xar:mlstring>Actions</xar:mlstring></legend>

    <div class="xar-form-input-wrapper-after">
        <xar:if condition="isset($file_id)">
        <input type="hidden" name="file_id" value="#$file_id#" />
        </xar:if>
        <xar:if condition="isset($redirecturl)">
        <input type="hidden" name="redirecturl" value="#$redirecturl#" />
        </xar:if>
        <input type="hidden" name="returnurl" value="#xarServerGetVar('HTTP_REFERER')#" />
        <input type="hidden" name="authid" value="#$authid#" />
        <input type="hidden" name="what" value="files" />
        <input type="submit" name="submit" value="#$submit_text#" class="xar-form-text" />
    </div>

</fieldset>

</form>