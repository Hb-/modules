<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <div class="xar-mod-head"><span class="xar-mod-title">File Uploads Administration</span></div>
    <!-- common admin menu for this module - remove link to the current function -->
    <div class="xar-mod-body">
       <xar:template type="module" file="admin-menu"/>
        <h2>Uploads Module Overview</h2>

            <form action="#xarModURL('uploads','admin','approvefinal')#" method="post">
            <fieldset>
                <legend>
                    Approval
                </legend>
                    <div class="xar-form-input-wrapper">
                        <label for="approval" class="xar-form-label">
                            Are you sure?
                        </label>
                        <xar:set name="MLApprove">Approve</xar:set> 
                    </div>
            </fieldset>

            <div class="xar-form-input-wrapper">
                <input type="hidden" name="authid" value="#$authid#"/>
                <input type="hidden" name="ulid" value="#$ulid#"/>
                <input type="hidden" name="ulhash" value="#$ulhash#"/>


            <input type="submit" value="#$MLApprove#"/>
            </div>
            </form>
    </div>
</xar:template >