

    <xar:template xmlns:xar="dd" xmlns="http://www.w3.org/TR/xhtml1/strict" file="header" type="module"/>
    <div xmlns="http://www.w3.org/TR/xhtml1/strict" xmlns:xar="dd" class="xar-mod-body">
    <div style="padding: 1px;" class="xar-norm-outline">

	<xar:if condition="isset($itemtype) AND ($itemtype != 0)">
		<h3>#$common['itemtype_array'][$itemtype]['name']# Configuration</h3>
	<xar:else />
		<h3>HookBridge Base Configuration</h3>
	</xar:if>
<form method="post" action="#$action#">

    <input type="hidden" name="authid" id="authid" value="#$authid#"/>

    <table width="100%" cellspacing="0" cellpadding="8" border="0">

        <colgroup>
            <col width="30%"/>
            <col/>
        </colgroup>

		<xar:if condition="isset($itemtype) AND ($itemtype != 0)">
			<tr>
				<td><label for="supportshorturls"><xar:mlstring>Enable</xar:mlstring> #$common['itemtype_array'][$itemtype]['name']#</label></td>
				<td xmlns:xar="http://www.w3.org/TR/xhtml1/strict">
					<xar:data-input id="hookenabled" type="checkbox" name="hookenabled" value="$hookenabled"/>
				</td>
			</tr>
	
			<tr>
				<td><label for="supportshorturls">#$common['itemtype_array'][$itemtype]['name']# <xar:mlstring>Functions</xar:mlstring></label></td>
				<td xmlns:xar="http://www.w3.org/TR/xhtml1/strict">
					<xar:data-input id="hookfunctions" type="checkboxlist" name="hookfunctions" value="$hookfunctions" validation="$available_hook_functions"/>
				</td>
			</tr>
		<xar:else />
			<tr>
				<td><label for="supportshorturls"><xar:mlstring>Short URL Support</xar:mlstring></label></td>
				<td xmlns:xar="http://www.w3.org/TR/xhtml1/strict">
					<xar:data-input id="supportshorturls" type="checkbox" name="supportshorturls" value="$supportshorturls"/>
				</td>
			</tr>
	
			<tr>
				<td><label for="supportshorturls"><xar:mlstring>Path to HookBridge Functions</xar:mlstring></label></td>
				<td xmlns:xar="http://www.w3.org/TR/xhtml1/strict">
					<xar:data-input id="hookbridge_functionpath" type="textbox" name="hookbridge_functionpath" value="$hookbridge_functionpath"/>
				</td>
			</tr>
		</xar:if>

    

        <tr>
            <td colspan="2" align="center">
                <input type="hidden" name="itemtype" value="#$itemtype#"/>
                <input type="submit" value="#xarML('Modify')#"/>
                <input type="submit" name="cancel" value="#xarML('Cancel')#"/>
            </td>
        </tr>

    </table>
</form>
</div>
</div>


