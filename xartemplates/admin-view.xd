<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Sitecontact Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
      <xar:template type="module" file="admin-menu" />
    <h2>
        <xar:mlstring>
            Review Responses
        </xar:mlstring>
    </h2>
        <xar:template file="navviewtabs" type="module" />
        <xar:if condition="is_array($responses)">
            <table width="100%" border="0" cellpadding="2" cellspacing="1" class="xar-accent">
                    <tr>
                        <th>
                            <xar:mlstring>Response ID</xar:mlstring>
                        </th>
                        <th>
                           <xar:mlstring>Name</xar:mlstring>
                        </th>
                        <th>
                           <xar:mlstring>Email</xar:mlstring>
                        </th>
                        <th>
                            <xar:mlstring>
                                Options
                            </xar:mlstring>
                        </th>
                    </tr>

                    <xar:foreach in="$responses" value="$response">
 
                        <tr>
                            <td class="xar-norm">
                                #$response['scrid']#
                            </td>
                            <td class="xar-norm">
                                #$response['username']#
                            </td>
                            <td class="xar-norm">
                                #$response['useremail']#
                            </td>
     
                            <td class="xar-align-center xar-norm">
                                <xar:if condition="empty($response['viewurl'])">
                                    #$viewtitle# 
                                    <xar:else />
                                    <a href="#$response['viewurl']#">
                                        #$viewtitle#
                                    </a>
                                </xar:if>
                                <xar:comment>
                                | 
                                <xar:if condition="empty($response['editurl'])">
                                    #$edittitle# 
                                    <xar:else />
                                    <a href="#$response['editurl']#">
                                        #$edittitle#
                                    </a>
                                </xar:if>
                                </xar:comment>
                                | 
                                <xar:if condition="empty($response['deleteurl'])">
                                    #$deletetitle# 
                                    <xar:else />
                                    <a href="#$response['deleteurl']#">
                                        #$deletetitle#
                                    </a>
                                </xar:if>
                            </td>
                        </tr>
                    </xar:foreach>
                </table>
        <xar:else />
            <xar:mlstring>No saved responses for this form</xar:mlstring>
        </xar:if>
        #$pager# 
</div>
</xar:template>
