<div class="xar-mod-head"><span class="xar-mod-title">#$menutitle#</span></div>
<div class="xar-mod-body"><h2><xar:mlstring>View Publications</xar:mlstring></h2>
<div style="margin: auto;"><xar:template file="statusmsg" type="module" />

<xar:if condition="$showaddlink">
    <p><a href="#xarModURL('ebulletin', 'admin', 'new')#"><xar:mlstring>New Publication</xar:mlstring></a></p>
</xar:if>

<table class="xar-fullwidth">
    <tr>
        <th><xar:mlstring>Name</xar:mlstring></th>
        <th><xar:mlstring>Description</xar:mlstring></th>
        <th><xar:mlstring>Options</xar:mlstring></th>
    </tr>
    <xar:foreach in="$pubs" value="$pub">
    <tr>
        <td>#$pub['name']#</td>
        <td>#$pub['desc']#</td>
        <td>
            <xar:loop name="$pub['urls']">
                <a href="#$loop:item.url#" title="#$loop:item.title#">
                    #$loop:item.label#
                </a>
                <xar:if condition="$loop:index+1 lt count($pub['urls'])">|</xar:if>
            </xar:loop>
        </td>
    </tr>
    </xar:foreach>
</table>

</div>
</div>
