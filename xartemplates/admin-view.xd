<xar:style scope="module" file="accessmethods" module="accessmethods" />

<xar:if condition="!$inline">
    <xar:template type="module" file="admin-menu" />
</xar:if>
<xar:data-getitem name="$properties" module="accessmethods" itemtype="1" itemid="0" />

<xar:set name="subdata">array('q' => $q, 'accesstype' => $accesstype)</xar:set>
<xar:template type="module" file="searchform" subdata="$subdata" />

<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Access Method List</xar:mlstring></span></div>
<div class="xar-mod-body">

<table border="0" cellpadding="2" cellspacing="1" style="width: 99%;">
    <tr>

        <th><xar:data-label property="$properties['site_name']" /></th>
        <th><xar:data-label property="$properties['accesstype']" /></th>
        <th><xar:data-label property="$properties['accesslogin']" /></th>
        <th><xar:data-label property="$properties['accesspwd']" /></th>
        <th><xar:data-label property="$properties['url']" /></th>
        <th><xar:data-label property="$properties['sla']" /></th>
        <xar:if condition="!$inline">
            <th><xar:mlstring>Options</xar:mlstring></th>
        </xar:if>
    </tr>
    <xar:set name="i">0</xar:set>
    <xar:foreach in="$items" value="$item">
        <xar:if condition="$i % 2">
            <tr>
        <xar:else />
            <tr class="xar-accent">
        </xar:if>
        <xar:set name="i">$i + 1</xar:set>
            <td class="xar-access-items">
                <xar:if condition="empty($item['link'])">
                    <xar:data-output property="$properties['site_name']" value="$item['site_name']" />
                <xar:else />
                    <a href="#$item['link']#">
                        <xar:data-output property="$properties['site_name']" value="$item['site_name']" />
                    </a>
                </xar:if>
            </td>
        
            <td class="xar-access-items"><xar:data-output property="$properties['accesstype']" value="$item['accesstype']" /></td>
            
            <td class="xar-access-items"><xar:data-output property="$properties['accesslogin']" value="$item['accesslogin']" /></td>
        
            <td class="xar-access-items"><xar:data-output property="$properties['accesspwd']" value="$item['accesspwd']" /></td>
            
            <td class="xar-access-items xar-overflow-hidden"><a href="#$item['url']#" target="_blank"><xar:data-output property="$properties['url']" value="$item['url']" /></a></td>
        
            <td class="xar-access-items"><xar:data-output property="$properties['sla']" value="$item['sla']" /></td>
        
            <xar:if condition="!$inline">
                <td style="text-align: center;" class="xar-access-items"><xar:if condition="empty($item['editurl'])"><img src="modules/accessmethods/xarimages/button.edit.gif"><xar:else /><a href="#$item['editurl']#"><img src="modules/accessmethods/xarimages/button.edit.gif"></a></xar:if><xar:if condition="empty($item['deleteurl'])"><img src="modules/accessmethods/xarimages/button.delete.gif"><xar:else /><a href="#$item['deleteurl']#"><img src="modules/accessmethods/xarimages/button.delete.gif"></a></xar:if></td>
            </xar:if>    
        </tr>
            
    </xar:foreach>
    
</table>

<br />

</div>
<div class="xar-mod-foot"><div style="text-align: center;">#$pager#</div></div>