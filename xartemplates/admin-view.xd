<div class="xar-mod-head"><span class="xar-mod-title">#$menutitle#</span></div>
<div class="xar-mod-body"><h2><xar:mlstring>View Texts</xar:mlstring></h2>
<div style="margin: auto;"><xar:template file="admin-menu" type="module" />

<p><a href="#$scanurl#"><xar:mlstring>Re-scan text directory</xar:mlstring></a></p>

<xar:if condition="!empty($pager)"><div class="xar-align-center xar-margin-thick">#$pager#</div></xar:if>

<table class="xar-fullwidth">
    <tr>
        <th><xar:mlstring>ID</xar:mlstring></th>
        <th><xar:mlstring>Short Name</xar:mlstring></th>
        <th><xar:mlstring>Long Name</xar:mlstring></th>
        <th><xar:mlstring>State</xar:mlstring></th>
        <th><xar:mlstring>Options</xar:mlstring></th>
    </tr>

    <xar:foreach in="$texts" value="$text">
    <tr>
        <td>#$text['tid']#</td>
        <td>#$text['sname']#</td>
        <td>#$text['lname']#</td>
        <td>#$text['state']#</td>
        <td>
            <xar:for start="$i = 0" test="$i lt count($text['links'])" iter="$i++">
                <xar:if condition="isset($text['links'][$i][1])">
                   <a href="#$text['links'][$i][1]#">#$text['links'][$i][0]#</a>
                <xar:else />
                    #$text['links'][$i][0]#
                </xar:if>
                <xar:if condition="$i lt count($text['links'])-1">|</xar:if>
            </xar:for>
        </td>
    </tr>
    </xar:foreach>
</table>
<br />

<xar:if condition="!empty($pager)"><div class="xar-align-center xar-margin-thick">#$pager#</div></xar:if>
</div>
</div>
