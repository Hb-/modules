
<!-- common admin menu for this module - remove link to the current function -->

<table border="0" width="100%" cellspacing="1" cellpadding="8">

    <!-- the variables used in this menu come from events_admin_menu() -->

    <tr>
        <th align="center">#$menutitle#</th>
    </tr>
</table>
<br />

<!-- the specific template for the current admin function comes here -->

<!-- some status given by the function using this template -->

<b>#$status#</b>

<table width="100%" border="1" cellspacing="0" cellpadding="4">
    <tr>
        <th>#$namelabel#</th>
        <th>#$numberlabel#</th>
        <th>#$optionslabel#</th>
    </tr>
    <xar:loop name="$items">
    <tr>
        <td>#$name#</td>
        <td>#$number#</td>
        <td>
           <xar:if condition="empty($editurl)">
               #$edittitle#
               <xar:else />
                   <a href="#$editurl#">#$edittitle#</a>
           </xar:if>
           |
           <xar:if condition="empty($deleteurl)">
               #$deletetitle#
               <xar:else />
                   <a href="#$deleteurl#">#$deletetitle#</a>
           </xar:if>
        </td>
    </tr>
    </xar:loop>
</table>
<br />

<!-- add the pager here -->
#$pager#

