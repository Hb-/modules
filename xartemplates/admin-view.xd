<xar:if condition="xarTplAddStyleLink('polls', 'forms')"></xar:if>
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Censor Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2>
        <xar:mlstring>
            View censored word
        </xar:mlstring>
    </h2>
    <form class="xar-formwidget" name="post" id="post" action="&xar-modurl-censor-admin-settings;" method="post" enctype="application/x-www-form-urlencoded">
        <fieldset class="formelements xar-norm">
            <legend>
                <strong>
                    <xar:mlstring>
                        Select style
                    </xar:mlstring>
                </strong>
            </legend>
            <p class="param">
                <label for="filter">
                    <xar:mlstring>
                        Style
                    </xar:mlstring>
                </label>
                  <select name="selstyle" id="selstyle" onchange="this.form.submit()">
                    <xar:foreach in="$style" key="$key" value="$value">
                      <xar:if condition="$key eq $selstyle">
                        <option value="#$key#" selected="selected">#$value#</option>
                      <xar:else />
                        <option value="#$key#">#$value#</option>
                      </xar:if>
                    </xar:foreach>
                  </select>
            </p>
        </fieldset>
        <fieldset class="formelements xar-norm">
            <legend>
                <strong>
                    <xar:mlstring>
                        Censored words
                    </xar:mlstring>
                </strong>
            </legend>
            <xar:if condition="!isset($items)">
                <p class="param">
                    <xar:mlstring>
                        There are no censored words in database
                    </xar:mlstring>
                </p>
            <xar:else/>
        <xar:if condition="$selstyle eq 'compact'">
            <xar:template file="compact" type="module"/>
       <xar:elseif condition="$selstyle eq 'plain'"/>
        <xar:template file="plain" type="module"/>
    <xar:else/>
        <xar:template file="icons" type="module"/>    
    </xar:if>
            </xar:if>
        </fieldset>
    </form>
    #$pager#
</div>
