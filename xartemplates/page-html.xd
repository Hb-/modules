
<xar:set name="dummy">#xarTplSetPageTitle($current_page.desc)#</xar:set>

<xar:comment><xar:set name="dummy">var_dump($ancestors)</xar:set></xar:comment>

<div>
    You are here:
    <xar:loop name="$ancestors">
        &gt;&gt; <a href="#xarModURL('xarpages','user','display',array('pid'=&gt;$loop:item.pid))#">#$loop:item.desc#</a>
    </xar:loop>
</div>

<xar:if condition="isset($current_page.children)">
    <div>
        See Also:
        <xar:loop name="$current_page.children">
            &gt;&gt; <a href="#xarModURL('xarpages','user','display',array('pid'=&gt;$loop:item))#">#$loop:item#</a>
        </xar:loop>
    </div>
</xar:if>

<xar:if condition="isset($current_page.dd.body)">
    <div>#$current_page.dd.body#</div>
<xar:else />
    <div><xar:mlstring>Please create a DD item 'body'</xar:mlstring></div>
</xar:if>
