<xar:style scope="module" file="gallery"  />
<div class="xar-mod-head">
    <span class="xar-mod-title"><xar:mlstring>New File</xar:mlstring></span>
</div>

<div class="xar-mod-body">
    <form action="#xarModURL('gallery', 'user', 'new_files')#" method="POST" enctype="multipart/form-data">

    <fieldset>
        <legend>
            <xar:mlstring>Main</xar:mlstring>
        </legend>

        <div class="xar-form-input-wrapper">
            <label name="" class="xar-form-label"><xar:mlstring>Number of Photos</xar:mlstring></label>
            <input type="text" name="numitems" value="#$numitems#" class="xar-form-text" />
            <input type="submit" name="reload" value="Reload" class="xar-form-text" />
        </div>
        <xar:for start="$i = 1" test="$i < $numitems+1" iter="$i++">
        <div class="xar-form-input-wrapper">
            <label name="" class="xar-form-label xar-padding-thickends">
                <u><xar:mlstring>Photo</xar:mlstring> <xar:var name="$i" /></u>
            </label>
            <div class="xar-form-input-wrapper xar-clearleft">
                <label class="xar-form-label" style="text-indent: 2em;">
                    <xar:mlstring>Select Photo</xar:mlstring>
                </label>
                <input type="file" name="file[#$i#]" value="" class="xar-form-text" />
            </div>
            <div class="xar-form-input-wrapper xar-clearleft">
                <label class="xar-form-label" style="text-indent: 2em;"><xar:mlstring>Title (optional)</xar:mlstring></label>
                <input type="text" name="title[#$i#]" value="" class="xar-form-text" />
            </div>
        </div>
        </xar:for>
    </fieldset>

    <fieldset>
        <legend><xar:mlstring>Album Links</xar:mlstring></legend>

        <xar:foreach in="$albums" key="$key" value="$album">
        <div class="xar-form-input-wrapper xar-clearboth">
            <label name="" class="xar-form-label"><xar:var name="album.display_name" /></label>
            <xar:if condition="$key eq $album_id">
            <input type="checkbox" name="links[#$key#]" value="#$album.name#" class="xar-form-text" checked="checked" />
            <xar:else />
            <input type="checkbox" name="links[#$key#]" value="#$album.name#" class="xar-form-text" />
            </xar:if>
        </div>
        </xar:foreach>

    </fieldset>

    <xar:foreach in="$hooks" value="$hook">
        <xar:var name="hook" />
    </xar:foreach>

    <fieldset>
        <legend><xar:mlstring>Actions</xar:mlstring></legend>

        <div class="xar-form-input-wrapper-after">
            <xar:if condition="isset($file_id)">
            <input type="hidden" name="file_id" value="#$file_id#" class="xar-form-text" />
            </xar:if>
            <xar:if condition="isset($album_id)">
            <input type="hidden" name="album_id" value="#$album_id#" class="xar-form-text" />
            </xar:if>
            <input type="hidden" name="authid" value="#$authid#" />
            <input type="hidden" name="returnurl" value="#$returnurl#" />
            <input type="submit" name="submit" value="#$submit_text#" />
        </div>

    </fieldset>

    </form>
</div>