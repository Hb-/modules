<div class="xar-mod-head"><span class="xar-mod-title">#$menutitle#</span></div>
<div class="xar-mod-body"><h2><xar:mlstring>Send Test</xar:mlstring></h2>
<div style="margin: auto;"><xar:template file="statusmsg" type="module" />

<form method="post" action="&xar-modurl-ebulletin-admin-sendtest;">

        <fieldset>
            <legend><xar:mlstring>Issue details</xar:mlstring></legend>

            <div class="xar-form-input-wrapper">
             <label for="itemid" class="xar-form-label" title="#xarML('Issue ID')#">
                <xar:mlstring>ID:</xar:mlstring>
             </label>
              #$id#
            </div>

            <div class="xar-form-input-wrapper">
                <label for="itemname"  class="xar-form-label"  title="#xarML('Parent Publication')#">
                    <xar:mlstring>Parent Publication:</xar:mlstring>
                </label>
                 #$issue['pubname']#
            </div>

            <div class="xar-form-input-wrapper">
                <label for="itemname"  class="xar-form-label"  title="#xarML('Issue Date')#">
                    <xar:mlstring>Issue Date:</xar:mlstring>
                </label>
                 #$issue['issuedate']#
            </div>

        </fieldset>

        <fieldset>
            <legend><xar:mlstring>Addressing</xar:mlstring></legend>

            <div class="xar-form-input-wrapper">
                <label for="from"  class="xar-form-label"  title="#xarML('From')#">
                    <xar:mlstring>From:</xar:mlstring>
                </label>
                #$pub['from']#
                <xar:if condition="!empty($pub['fromname'])">&lt;#$pub['fromname']#&gt;</xar:if>
            </div>

            <div class="xar-form-input-wrapper">
                <label for="replyto"  class="xar-form-label"  title="#xarML('Reply To')#">
                    <xar:mlstring>Reply To:</xar:mlstring>
                </label>
                <xar:if condition="empty($pub['replyto'])">
                    <xar:mlstring>None</xar:mlstring>
                <xar:else />
                    #$pub['replyto']#
                    <xar:if condition="!empty($pub['replytoname'])">&lt;#$pub['replytoname']#&gt;</xar:if>
                </xar:if>
            </div>

            <div class="xar-form-input-wrapper">
                <label for="to"  class="xar-form-label"  title="#xarML('To')#">
                    <xar:mlstring>To:</xar:mlstring>
                </label>
                <xar:mlstring>Name (optional): </xar:mlstring>
                <input type="text" name="toname" class="xar-form-textmedium" />
                &nbsp;
                <xar:mlstring>Email: </xar:mlstring>
                <input type="text" name="to" class="xar-form-textmedium" />
            </div>

        </fieldset>

        <fieldset>
            <legend><xar:mlstring>Message details</xar:mlstring></legend>

            <div class="xar-form-input-wrapper">
                <label for="itemname"  class="xar-form-label"  title="#xarML('Subject')#">
                    <xar:mlstring>Subject:</xar:mlstring>
                </label>
                 #$issue['subject']#
            </div>

            <div class="xar-form-input-wrapper">
                <label for="body_html"  class="xar-form-label"  title="#xarML('HTML Body')#">
                    <xar:mlstring>HTML Body:</xar:mlstring>
                </label>
                <xar:if condition="empty($issue['body_html'])">
                    <xar:mlstring>None</xar:mlstring>
                <xar:else />
                    #$htmlsize#
                </xar:if>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="body_txt"  class="xar-form-label"  title="#xarML('TXT Body')#">
                    <xar:mlstring>TXT Body:</xar:mlstring>
                </label>
                <xar:if condition="empty($issue['body_txt'])">
                    <xar:mlstring>None</xar:mlstring>
                <xar:else />
                    #$txtsize#
                </xar:if>
            </div>

        </fieldset>

        <fieldset>
            <div class="xar-form-input-wrapper-after">
                <input type="hidden" name="authid" id="authid" value="#$authid#" />
                <input type="hidden" name="confirm" id="confirm" value="true" />
                <input type="hidden" name="id" id="id" value="#$id#" />
                <input type="submit" name="send" value="#xarML('Test Send')#" />

            </div>

            <div class="xar-form-input-wrapper-before">
             <a href="&xar-modurl-ebulletin-admin-viewissues;">
                 <xar:mlstring>Cancel and Return</xar:mlstring>
             </a>
             </div>
        </fieldset>

</form>
</div>
</div>
