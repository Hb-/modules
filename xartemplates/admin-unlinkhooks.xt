<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>crispBB Administration</xar:mlstring></span></div>
<div class="xar-mod-body">
<xar:template type="module" file="admin-menu" />
<h2><xar:mlstring>Delete Topic Associations</xar:mlstring></h2>
<form method="post" action="&xar-modurl-crispbb-admin-unlinkhooks;">
    <input type="hidden" name="authid" id="authid" value="#$authid#" />
    <input type="hidden" name="modid" id="modid" value="#$modid#" />
    <input type="hidden" name="itemtype" id="itemtype" value="#$itemtype#" />
    <input type="hidden" name="itemid" id="itemid" value="#$itemid#" />
    <fieldset>
        <legend>
            <xar:mlstring>Confirm deletion</xar:mlstring>
     </legend>
    <div class="xar-form-input-wrapper-before">
<xar:if condition="empty($modname)">
        <xar:mlstring>Confirm deleting all topic associations ?</xar:mlstring>
<xar:elseif condition="empty($itemid)"/>
        <xar:ml>
            <xar:mlstring>Confirm deleting all topic associations for module <strong>#(1)</strong> ?</xar:mlstring>
            <xar:mlvar>#$modname#</xar:mlvar>
        </xar:ml>
<xar:else/>
    <xar:ml><xar:mlstring>Are you sure you want to delete topic association for module <strong>#(1)</strong> item <strong>#(2)</strong> ?</xar:mlstring><xar:mlvar>#$modname#</xar:mlvar><xar:mlvar>#$itemid#</xar:mlvar></xar:ml>
</xar:if>
    </div>
    </fieldset>
    <div class="xar-form-input-wrapper-after">
        <input type="submit" name="confirm" id="confirm" value="#$confirmbutton#"  />
    </div>
</form>
</div>
