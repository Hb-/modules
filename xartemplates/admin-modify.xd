<xar:if condition="xarTplAddStyleLink('polls', 'forms')"></xar:if>
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Polls Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2>
        <xar:mlstring>
            Modify Poll
        </xar:mlstring>
    </h2>
    <form class="xar-formwidget" name="post" id="post" action="&xar-modurl-polls-admin-update;" method="post" enctype="application/x-www-form-urlencoded">
        <fieldset class="formelements xar-norm">
            <legend>
                <strong>
                    <xar:mlstring>
                        Modify main poll settings
                    </xar:mlstring>
                </strong>
            </legend>
            <input type="hidden" name="authid" value="#$authid#">
            <input type="hidden" name="pid" value="#$pid#">
            <p class="param">
                    <label for="title">
                    <span class="help" title="#xarML('The name of the new poll')#">
                        <xar:mlstring>
                            Poll title
                        </xar:mlstring>
                </span>
                </label>
                    <input type="text" name="title" id="title" size="50" maxlength="100" value="#$polltitle#">
            </p>
            <p class="param">
                <label for="type">
                    <span class="help" title="#xarML('The type of the new poll')#">
                    <xar:mlstring>
                        Poll type
                    </xar:mlstring>:
                </span>
                </label>
                    <xar:if condition="$polltype eq 'single'">
                        <input type="radio" name="polltype" value="single" checked="checked" />
                    <xar:else />
                        <input type="radio" name="polltype" value="single" />
                    </xar:if>
                    &nbsp;
                    <xar:mlstring>
                        Single Choice
                    </xar:mlstring>
                    <xar:if condition="$polltype eq 'multi'">
                        <input type="radio" name="polltype" value="multi" checked="checked" />
                    <xar:else />
                        <input type="radio" name="polltype" value="multi" />
                    </xar:if>
                    &nbsp;
                    <xar:mlstring>
                        Multiple Choice
                    </xar:mlstring>
            </p>
            <p class="param">
                    <label for="private">
                    <span class="help" title="#xarML('who can view the new poll')#">
                        <xar:mlstring>
                            Private
                        </xar:mlstring>
                </span>
                </label>
                    <xar:if condition="$private">
                        <input type="checkbox" name="private" id="private" value="1" checked="checked" />
                    <xar:else />
                        <input type="checkbox" name="private" id="private" value="1" />
                    </xar:if>
            </p>
        </fieldset>
        <fieldset class="formelements xar-norm">
            <legend>
                <strong>
                        <xar:mlstring>
                            Edit options
                        </xar:mlstring>
                </strong>
            </legend>
            <a href="&xar-modurl-polls-admin-display;&amp;pid=#$pid#">
                <xar:mlstring>
                    Edit
                </xar:mlstring>
                    </a>
        </fieldset>
        <xar:if condition="!empty($hooks)">
            <fieldset class="formelements xar-norm">
                <legend>
                    <strong>
                        <xar:mlstring>
                            Configure hooks
                        </xar:mlstring>
                    </strong>
                </legend>
                <p class="param">
                    #$hooks#
                </p>
            </fieldset>
        </xar:if>
        <p class="param">
            <input type="submit" value="#xarML('Modify Poll')#" />
        </p>
        </form>
    </div>
