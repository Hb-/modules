<div class="xar-mod-head">
    <span class="xar-mod-title"><xar:mlstring>Courses Administration</xar:mlstring></span>
</div>
<div class="xar-mod-body">
    <h2><xar:mlstring>Modify Course Parameter</xar:mlstring></h2>

    <xar:if condition="!empty($menu)">
    #$menu#
    </xar:if>
    <xar:if condition="!empty($preview)">
    <strong><xar:mlstring>Preview</xar:mlstring></strong>
            <xar:data-display object="$object" tplmodule="courses"/>
    </xar:if>


        <form method="POST" action="&xar-modurl-courses-admin-update;">
    <fieldset>
        <legend>
            <xar:mlstring>Parameter to modify</xar:mlstring>
        </legend>
        <div class="xar-form-input-wrapper">
            <xar:data-form object="$object" tplmodule="courses"/>
        </div>
    </fieldset>
    <div class="xar-form-input-wrapper-after">
            <input type="hidden" name="authid" id="authid" value="#$authid#" />
            <input type="hidden" name="itemid" id="itemid" value="#$itemid#" />
            <input type="hidden" name="itemtype" id="itemtype" value="#$itemtype#" />
                        <input type="submit" name="preview" value="#xarML('Preview')#" />
                        &nbsp;&nbsp;&nbsp;
                        <input type="submit" value="#xarML('Update')#" />
        </form>
    </div>
</div>