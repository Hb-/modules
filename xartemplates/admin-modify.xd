<xar:set name="accessmethods_objectid">xarModGetVar('accessmethods','accessmethods_objectid')</xar:set>
<xar:data-getitem name="$properties" module="accessmethods" itemtype="1" itemid="$accessmethods_objectid" />

<xar:template type="module" file="admin-menu" />

<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Modify Access Method</xar:mlstring></span></div>
<div class="xar-mod-body">
<div align="center">

<form method="post" action="&xar-modurl-accessmethods-admin-update;">

<input type="hidden" name="authid" value="#$authid#" />
<input type="hidden" name="siteid" value="#$siteid#" />

<table width="100%" border="0" cellspacing="0" cellpadding="2">
    <tr>
        <td><xar:data-label property="$properties['site_name']" /></td>
        <td><xar:data-input property="$properties['site_name']" name="site_name" value="$item['site_name']" /></td>
    </tr>
    <tr>
        <td><xar:data-label property="$properties['clientid']" /></td>
        <td><xar:data-input property="$properties['clientid']" name="clientid" value="$item['clientid']" /></td>
    </tr>
    <tr>
        <td><xar:data-label property="$properties['webmasterid']" /></td>
        <xar:set name="webmastergroup">xarModGetVar('accessmethods', 'webmastergroup')</xar:set>
        <xar:if condition="empty($webmastergroup)">
            <td><xar:data-input property="$properties['webmasterid']" name="webmasterid" value="$item['webmasterid']" /></td>
        <xar:else />
            <td><xar:data-input property="$properties['webmasterid']" name="webmasterid" value="$item['webmasterid']" /></td>
        </xar:if>
    </tr>
    <tr>
        <td><xar:data-label property="$properties['url']" /></td>
        <td><xar:data-input property="$properties['url']" name="url" value="$item['url']" /></td>
    </tr>
    <tr>
        <td><xar:data-label property="$properties['accesstype']" /></td>
        <td><xar:data-input property="$properties['accesstype']" name="accesstype" value="$item['accesstype']" /></td>
    </tr>
    <tr>
        <td><xar:data-label property="$properties['sla']" /></td>
        <td><xar:data-input property="$properties['sla']" name="sla" value="$item['sla']" /></td>
    </tr>
    <tr>
        <td><xar:data-label property="$properties['accesslogin']" /></td>
        <td><xar:data-input property="$properties['accesslogin']" name="accesslogin" value="$item['accesslogin']" /></td>
    </tr>
    <tr>
        <td><xar:data-label property="$properties['accesspwd']" /></td>
        <td><xar:data-input property="$properties['accesspwd']" name="accesspwd" value="$item['accesspwd']" /></td>
    </tr>
    <tr>
        <td><xar:data-label property="$properties['description']" /></td>
        <td><xar:data-input property="$properties['description']" name="description" value="$item['description']" /></td>
    </tr>
    <tr>
        <td><xar:data-label property="$properties['related_sites']" /></td>
        <td><xar:data-input property="$properties['related_sites']" name="related_sites" value="$item['related_sites']" /></td>
    </tr>
    <tr>
        <xar:set name="updatebtn"><xar:mlstring>Modify Access Method</xar:mlstring></xar:set>
        <td colspan=2 align="center"><br /><input type="submit" name="submit" value="#$updatebtn#"></td>
    </tr>
</table>

<input type="hidden" name="authid" id="authid" value="#xarSecGenAuthKey('accessmethods')#" />

</form>
</div>
</div>
<div class="xar-mod-foot">#$hooks#</div>
