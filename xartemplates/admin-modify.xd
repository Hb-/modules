<script type="text/javascript" src="modules/base/xartemplates/functions.js"></script>
<script type="text/javascript">
<!--
    // Enter name of mandatory fields
    var fieldRequired = Array("name");
    // Enter field description to appear in the dialog box
    var fieldDescription = Array("Name");
//-->
</script>
<xar:style scope="module" module="bbcode" file="forms" />
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            BBCode Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2>
        <xar:mlstring>
            Modify BBCode
        </xar:mlstring>
    </h2>
    <form class="xar-formwidget" action="#xarModURL('bbcode', 'admin', 'modify')#" method="post" onsubmit="return formCheck(this, fieldRequired, fieldDescription);" enctype="application/x-www-form-urlencoded" >
        <fieldset class="formelements xar-norm">
            <legend>
                <strong>
                    <xar:mlstring>
                        Settings
                    </xar:mlstring>
                </strong>
            </legend>
            <input type="hidden" name="authid" id="authid" value="#$authid#" />
            <input type="hidden" name="phase" id="phase" value="update" />
            <input type="hidden" name="id" id="id" value="#$id#" />
            <p class="param">
                <label for="name" class="required">
                    <span class="help" title="#xarML('The long name for the bbcode.')#">
                        <xar:mlstring>
                            Name
                        </xar:mlstring>
                    </span>
                </label>
                <input type="text" name="name" id="name" value="#$name#" size="32" maxlength="255" />
            </p>
            <p class="param">
                <label for="code" class="required">
                    <span class="help" title="#xarML('The tag for the bbcode.')#">
                        <xar:mlstring>
                            Tag
                        </xar:mlstring>
                    </span>
                </label>
                <input type="text" name="code" id="code" value="#$tag#" size="32" maxlength="255" />
            </p>
            <p class="param">
                <input type="submit" value="#xarML('Submit')#" />
                <input type="reset" value="#xarML('Reset')#" />
            </p>
        </fieldset>
    </form>
</div>
