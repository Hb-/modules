<div class="xar-mod-head"><span class="xar-mod-title">#$menutitle#</span></div>
<div class="xar-mod-body"><h2><xar:mlstring>Modify Text</xar:mlstring></h2>
<div style="margin: auto;"><xar:template file="admin-menu" type="module" />


<form method="post" action="&xar-modurl-bible-admin-update;">

    <fieldset>
        <legend><xar:mlstring>Display Options</xar:mlstring></legend>

        <div class="xar-form-input-wrapper">
            <label for="sname"  class="xar-form-label" title="#xarML('Text Name')#">
                <xar:mlstring>Name:</xar:mlstring>
            </label>
            <xar:if condition="$type eq 2">
                #$sname#
            <xar:else />
                <input type="text" name="sname" id="sname" value="#$sname#" maxlength="32" class="xar-form-textshort" />
                <span class="xar-error">*</span>
                <xar:if condition="!empty($invalid['sname'])">
                    <div class="xar-error">
                        <xar:mlstring>ERROR! Name cannot be blank.</xar:mlstring>
                    </div>
                </xar:if>
            </xar:if>
        </div>

        <div class="xar-form-input-wrapper">
            <label for="lname"  class="xar-form-label" title="#xarML('Description')#">
                <xar:mlstring>Description:</xar:mlstring>
            </label>
            <input type="text" name="lname" id="lname" value="#$lname#" maxlength="128" class="xar-form-textlong" />
        </div>
    </fieldset>

    <xar:if condition="!empty($hookoutput)">
        <fieldset>
            <legend><xar:mlstring>Hooked content</xar:mlstring></legend>
                <xar:foreach in="$hookoutput" key="$hookmodule" value="$hook">
                    #$hook#
                </xar:foreach>
        </fieldset>
    </xar:if>
    <div class="xar-form-input-wrapper-after">
        <input type="hidden" name="authid" id="authid" value="#$authid#" />
        <input type="hidden" name="return" id="return" value="#$return#" />
        <input type="hidden" name="tid" id="tid" value="#$id#" />
        <input type="submit" value="#xarML('Update')#" />
    </div>

</form>

</div>
</div>
