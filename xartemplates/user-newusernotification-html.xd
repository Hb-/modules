<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<p>
<xar:ml>
    <xar:mlstring>Dear #(1)</xar:mlstring>
    <xar:mlvar>#$adminname#</xar:mlvar>
</xar:ml>
</p>
<p>
    <xar:mlstring>A user with the following details has registered at: </xar:mlstring> #$sitename#
</p>
<p>
    <xar:mlstring>Status: </xar:mlstring>#$values['state']#<br />
    <xar:mlstring>User ID: </xar:mlstring>#$values['id']#<br />
    <xar:mlstring>Display Name: </xar:mlstring>#$values['name']#<br />
    <xar:mlstring>User Name: </xar:mlstring>#$values['user_name']#<br />
    <xar:mlstring>User Email: </xar:mlstring>#$values['email']#<br />
</p>

<xar:if condition="!empty($terms)">
    <p>#$terms#</p>
</xar:if>

<p>
    <xar:mlstring>When logged in, you can access this user account at </xar:mlstring> <a href="#$rolelink#">#$rolelink#</a>
</p>
</xar:template>
