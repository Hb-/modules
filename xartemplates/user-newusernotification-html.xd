<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<p>
<xar:ml>
    <xar:mlstring>Dear #(1)</xar:mlstring>
    <xar:mlvar>#$adminname#</xar:mlvar>
</xar:ml>
</p>
<p>
    <xar:mlstring>A user with the following details has registered at: </xar:mlstring> #$sitename#
</p>
<table>
    <xar:data-getitem name="$properties" object="$object" />
    <xar:foreach in="$properties" key="$field">
   <tr style="valign: top;">
       <td>
           <xar:data-label property="$properties[$field]" />:
       </td>
       <td>
           <xar:data-output property="$properties[$field]" />
       </td>
   </tr>
</xar:foreach>
</table>

<xar:if condition="!empty($terms)">
    <p>#$terms#</p>
</xar:if>

<p>
    <xar:mlstring>When logged in, you can access this user account at </xar:mlstring> <a href="#$rolelink#">#$rolelink#</a>
</p>
</xar:template>
