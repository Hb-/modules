  <xar:template file="monitor_bar" type="module"/>
  
  <div class="xar-mod-body">
      
    <xar:template file="help"/>

    <div style="margin: auto;">

      <h3><xar:mlstring>Workitem information</xar:mlstring></h3>
      <div class="xar-norm-outline" style="padding-left: 1em;">
        <table style="border-collapse:separate; width: 99%">
          <tr>
            <th>Id</th><th>Number</th><th>Process</th><th>Activity</th><th>User</th><th>Started</th><th>Duration</th>
          </tr>
          <tr>
            <td>#$wi['itemId']#</td>
            <td>#$wi['orderId']#</td>
            <td>#$wi['procname']#&nbsp;#$wi['version']#</td>
            <td>#$wi['type']#&nbsp;#$wi['name']#</td>
            <td>#$wi['user']#</td>
            <td>#xarLocaleGetFormattedDate('long',$wi['started'])#&nbsp;#xarLocaleGetFormattedTime('long',$wi['started'])#</td>
            <td>#$wi['duration']#</td>
          </tr>
        </table>
      </div>

      <h3><xar:mlstring>Properties</xar:mlstring></h3>
      <div class="xar-norm-outline" style="padding-left: 1em;">
        <table style="border-collapse: separate;">
          <tr>
            <th><xar:mlstring>Property</xar:mlstring></th>
            <th><xar:mlstring>Value</xar:mlstring></th>
          </tr>
          <xar:loop name="$wi['properties']">
            <xar:set name="rowclass">'xar-norm'</xar:set>
            <xar:if condition="$loop:index % 2">
              <xar:set name="rowclass">'xar-alt'</xar:set>
            </xar:if>
            <tr class="#$rowclass#"><td>#$loop:key#</td><td>#$loop:item#</td></tr>
          </xar:loop>
        </table>
      </div>
      
      <xar:template file="monitor_stats"/>
      <xar:template file="galaxfooter"/>
    </div>
  </div>
  