<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <xar:style scope="module" module="messages" file="messages" />
    <xar:if condition="!isset($error)">
        <xar:comment>
        <!-- <xar:mlstring>Message-Posting-Host:</xar:mlstring> #$replymessage['posting-host']# -->
        </xar:comment>
        <xar:comment>
        Psspl: Added the template for reply messages view.
        </xar:comment>
        <div class="xar-form-input-wrapper">
            <span class="xar-form-label">
                <xar:mlstring>From:</xar:mlstring>
            </span>
            <!--Psspl:Modified the code for anonymous message-->
            <xar:set name="itemid">$message['user_link']</xar:set>
            <xar:set name="is_sendtouser">
                xarModAPIFunc('messages','user','is_sendtouser', 
                    array(
                        'sendtouser' => $itemid,
                    )
                )
            </xar:set>
            <xar:if condition="$replymessage['postanon'] eq 0 AND $is_sendtouser">
                <a href="#$replymessage['user_link']#" title="#xarML('View user info')#">#$replymessage['sender']#</a>
            <xar:else/>
                <xar:mlstring>Anonymous</xar:mlstring>
            </xar:if>
        </div>

        <div class="xar-form-input-wrapper">
            <span class="xar-form-label">
                <xar:mlstring>To:</xar:mlstring>
            </span>
            #$replymessage['recipient']#
        </div>

        <div class="xar-form-input-wrapper">
            <span class="xar-form-label">
                <xar:mlstring>Date:</xar:mlstring>
            </span>
            #xarLocaleFormatDate('%A, %B %d @ %H:%M:%S', $replymessage['raw_date'])#
        </div>

        <div class="xar-form-input-wrapper">
            <span class="xar-form-label">
                <xar:mlstring>Subject:</xar:mlstring>
            </span>
            #xarVarPrepForDisplay($replymessage['subject'])#
        </div>

        <hr class="xar-clearboth" />
        <div>
            #xarVarPrepHTMLDisplay($replymessage['body'])#
        </div>
        <xar:comment>Psspl:Added the code for folder type</xar:comment>
        <div class="xar-form-input-wrapper">
            <xar:if condition="isset($folder)">
                <input type="hidden" value="#$folder#" name="folder" id="folder" />    
            </xar:if>
        </div>
        <xar:if condition="isset($action) and $action ne 'preview' and $action ne 'check' and $action ne 'modify' and $action ne 'prev_reply'">
            <div class="xar-margin-thicktop">
                <xar:if condition="$action ne 'viewsent'">
                    <xar:if condition="!isset($replymessage['postanon'])">
                    <a href="#$replymessage['reply_link']#" title="#xarML('Reply to Message')#"><xar:mlstring>Reply</xar:mlstring></a> |
                    <xar:else/>
                    <!--Psspl:Added the code for anonymoys messages -->
                        <!--<xar:mlstring>Reply</xar:mlstring>-->
                    <a href="#$replymessage['reply_link']#" title="#xarML('Reply to Message')#"><xar:mlstring>Reply</xar:mlstring></a> |                                   </xar:if>
                </xar:if>
                <xar:if condition="xarSecurityCheck('DeleteMessages', 0)">
                    <a href="#$replymessage['delete_link']#" title="#xarML('Delete Message')#"><xar:mlstring>Delete</xar:mlstring></a>
                <xar:else/>
                    <xar:mlstring>Delete</xar:mlstring>
                </xar:if>
            </div>
        </xar:if>
    <xar:else />
        <br />
        <div class="xar-norm">
            #$error#
        </div>
    </xar:if>
</xar:template>