<xar:style scope="module" module="base" file="navtabs" />
<xar:if condition="!empty($account)">
    <div>
        <dl class="xar-tabs">
            <dt title="#xarML('View/manage account')#" class="xar-tabs-label help">
                @#$account.screen_name#
            </dt>
            <xar:set name="activeclass">'active'</xar:set>
            <xar:set name="inactiveclass">''</xar:set>
            <xar:set name="activetab">empty($tab)?$activeclass:$inactiveclass</xar:set>
            <dd class="#$activetab#">
                <a href="#xarServerGetCurrentUrl(array('tab' => null, 'method' => null, 'rt' => null))#" title="#xarML('Home Timeline')#" >
                    <xar:mlstring>Home</xar:mlstring>
                </a>
            </dd>
            <xar:set name="activetab">$tab=='profile'?$activeclass:$inactiveclass</xar:set>
            <dd class="#$activetab#">
                <a href="#xarServerGetCurrentUrl(array('tab' => 'profile', 'method' => null, 'rt' => null))#" title="#xarML('Profile')#" >
                    <xar:mlstring>Profile</xar:mlstring>
                </a>
            </dd>
            <xar:set name="activetab">$tab=='messages'?$activeclass:$inactiveclass</xar:set>
            <dd class="#$activetab#">
                <a href="#xarServerGetCurrentUrl(array('tab' => 'messages', 'method' => null, 'rt' => null))#" title="#xarML('Messages')#" >
                    <xar:mlstring>Messages</xar:mlstring>
                </a>
            </dd>    
        </dl>
    </div>
</xar:if>