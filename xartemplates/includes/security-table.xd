<xar:set name="width">100/(count($sec_levels)+1)</xar:set>
<table width="100%" class="xar-norm-outline">
    <tr>
        <th>User</th>
        <xar:foreach in="$sec_levels" key="$key" value="$level">
            <th width="#$width#%">#$level.label#</th>
        </xar:foreach>
    </tr>
    <xar:set name="count">0</xar:set>
    <xar:if condition="$levels ne null">
    <xar:foreach in="$levels" key="$role_id" value="$user_sec">
        <xar:if condition="$count % 2 eq 0">
            <xar:set name="class">'xar-norm'</xar:set>
        <xar:else />
            <xar:set name="class">'xar-alt'</xar:set>
        </xar:if>
        <tr class="#$class#">
            <xar:if condition="$role_id eq '0'">
                <td><xar:mlstring>All Roles</xar:mlstring></td>
            <xar:elseif condition="intval($role_id) eq 0" />
                <td><xar:mlstring>User</xar:mlstring></td>
            <xar:else />
                <td>#$all_groups[$role_id]['name']#</td>
            </xar:if>
            <xar:foreach in="$user_sec" key="$key" value="$level">
                <td>
                <xar:if condition="$level eq 0">
                    <input type="checkbox" name="#$name#[#$role_id#][#$key#]" value="1" />
                <xar:else />
                    <input type="checkbox" name="#$name#[#$role_id#][#$key#]" value="1" checked="checked" />
                </xar:if>
                </td>
            </xar:foreach>
        </tr>
        <xar:set name="count">$count+1</xar:set>
    </xar:foreach>
    </xar:if>
    <xar:if condition="!empty($all_groups)">
    <tr>
        <td>
            <select name="#$name#_group" onchange="return xar_security_changeInputName('#$name#', this.form, this.value)">
                <option value="-1">Add group to security table.</option>
                <xar:foreach in="$all_groups" key="$key" value="$group">
                    <option value="#$key#"><xar:var name="group.name" /></option>
                </xar:foreach>
            </select>
        </td>
        <td><input type="checkbox" id="#$name#_xoverview" name="#$name#_xoverview" value="1" /></td>
        <td><input type="checkbox" id="#$name#_xread" name="#$name#_xread" value="1" /></td>
        <td><input type="checkbox" id="#$name#_xcomment" name="#$name#_xcomment" value="1" /></td>
        <td><input type="checkbox" id="#$name#_xwrite" name="#$name#_xmanage" value="1" /></td>
        <td><input type="checkbox" id="#$name#_xmanage" name="#$name#_xmanage" value="1" /></td>
        <td><input type="checkbox" id="#$name#_xadmin" name="#$name#_xadmin" value="1" /></td>
    </tr>
    </xar:if>
</table>