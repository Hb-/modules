<xar:style scope="module" file="navtabs" module="base" />
<dl class="xar-tabs">
    <dt class="help">
        <xar:mlstring>Actions</xar:mlstring>:
    </dt>

    <xar:set name="activetab">$_bl_module_func</xar:set>

    <xar:set name="tabclass">($activetab == 'display') ? 'active' : ''</xar:set>
    <dd class="#$tabclass#">
        <a href="#xarModURL('files', 'user', 'display', array('path' => $item['urlpath']))#" title="#xarML('Details for this file')#"><xar:mlstring>Details</xar:mlstring></a>
    </dd>

	<xar:if condition="!empty($options['view'])">

        <xar:set name="tabclass">($activetab == 'view') ? 'active' : ''</xar:set>
        <dd class="#$tabclass#">
            <a href="#xarModURL('files', 'user', 'view', array('path' => $item['urlpath']))#" title="#xarML('Preview this file')#"><xar:mlstring>Preview</xar:mlstring></a>
        </dd>

        <xar:set name="tabclass">($activetab == 'download') ? 'active' : ''</xar:set>
        <dd class="#$tabclass#">
            <a href="#xarModURL('files', 'user', 'download', array('path' => $item['urlpath']))#" title="#xarML('Download this file')#"><xar:mlstring>Download</xar:mlstring></a>
        </dd>
	</xar:if>

	<xar:if condition="!empty($options['edit'])">

        <xar:set name="tabclass">($activetab == 'modify') ? 'active' : ''</xar:set>
        <dd class="#$tabclass#">
            <a href="#xarModURL('files', 'user', 'modify', array('path' => $item['urlpath']))#" title="#xarML('Edit this file')#"><xar:mlstring>Edit</xar:mlstring></a>
		</dd>
	</xar:if>

	<xar:if condition="!empty($options['delete'])">

        <xar:set name="tabclass">($activetab == 'rename') ? 'active' : ''</xar:set>
        <dd class="#$tabclass#">
			<xar:if condition="$item['is_dir']">
				<a href="#xarModURL('files', 'user', 'rename', array('path' => $item['urlpath'], 'itemtype' => 'folder'))#" title="#xarML('Rename')#"><xar:mlstring>Rename</xar:mlstring></a>
			<xar:else />
				<a href="#xarModURL('files', 'user', 'rename', array('path' => $item['urlpath'], 'itemtype' => 'file'))#" title="#xarML('Rename')#"><xar:mlstring>Rename</xar:mlstring></a>
			</xar:if>
		</dd>

        <xar:set name="tabclass">($activetab == 'delete') ? 'active' : ''</xar:set>
        <dd class="#$tabclass#">
            <a href="#xarModURL('files', 'user', 'delete', array('path' => $item['urlpath']))#" title="#xarML('Delete')#"><xar:mlstring>Delete</xar:mlstring></a>
		</dd>
	</xar:if>

</dl>

