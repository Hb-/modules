<xar:if condition="xarTplAddStyleLink('bible', 'navtabs')"></xar:if>
<dl class="xar-tabs">
    <dt class="help">
        <xar:mlstring>Actions</xar:mlstring>:
    </dt>

    <xar:if condition="!empty($menulinks)">
    <xar:foreach in="$menulinks" key="$action" value="$link">
        <xar:if condition="$func eq $action">
            <dd class="active"><a href="#$link.url#" title="#$link.title#">#$link.label#</a></dd>
        <xar:else />
            <dd><a href="#$link.url#" title="#$link.title#">#$link.label#</a></dd>
        </xar:if>
    </xar:foreach>
    </xar:if>
</dl>

<xar:if condition="!empty($statusmsg)">
    <p class="xar-align-center xar-alt">#$statusmsg#</p>
</xar:if>