<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <xar:if condition="$tabmodule ne 'mailer'">
        <xar:set name="regid">xarMod::getRegID($tabmodule)</xar:set>
    <xar:else />
        <xar:set name="regid">0</xar:set>
    </xar:if>
    <div class="xar-form-input-wrapper">
        <label for="savetodb" title="#xarML('Whether to save a copy of the sent emails to the database')#" class="xar-form-label">
            <xar:mlstring>
                Save to Database:
            </xar:mlstring>
        </label>
        <xar:set name="value">xarModItemVars::get('mailer', 'savetodb', $regid)</xar:set>
        <xar:data-input type="checkbox" name="savetodb" value="$value" />
    </div>
    <div class="xar-form-input-wrapper">
        <label for="defaultredirect" title="#xarML('Whether all mails of this module should be redirected')#" class="xar-form-label">
            <xar:mlstring>
                Redirect:
            </xar:mlstring>
        </label>
        <xar:set name="value">xarModItemVars::get('mailer', 'defaultredirect', $regid)</xar:set>
        <xar:data-input type="checkbox" name="defaultredirect" value="$value" />
    </div>
    <div class="xar-form-input-wrapper">
        <label for="defaultredirectaddress" title="#xarML('The address to where all mails of this module will be redirected')#" class="xar-form-label">
            <xar:mlstring>
                Redirect Address
            </xar:mlstring>
        </label>
        <xar:set name="value">xarModItemVars::get('mailer', 'defaultredirectaddress', $regid)</xar:set>
        <xar:data-input type="textbox" name="defaultredirectaddress" value="$value" />
    </div>
</xar:template>