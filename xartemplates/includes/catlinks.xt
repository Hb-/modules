<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<xar:if condition="!empty($preview)">
    <xar:set name="dummy">xarVarFetch('hookedcategories_categories', 'isset', $categories, array(), XARVAR_NOT_REQUIRED)</xar:set>
    <xar:if condition="!empty($categories)">
        <xar:set name="cids">$categories</xar:set>
    </xar:if>
</xar:if>
<xar:data-output type="categorynavigation" layout="trails" showchildren="1" module="articles" itemtype="$ptid" itemid="$aid" cids="$cids" showcatcount="$showcatcount" showempty="0" />
</xar:template>
