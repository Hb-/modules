<xar:comment>Common Administration menu</xar:comment>
<xar:style scope="module" module="base" file="navtabs" />

<xar:set name="activetab">$_bl_module_func</xar:set>
<div>
  <dl class="xar-tabs">
    <dt class="help" title="#xarML('Choose an action to perform')#">
      <xar:mlstring>Actions:</xar:mlstring>
    </dt>
    <xar:sec mask="AdminUserpoints" catch="false">
        <xar:set name="tabclass">$activetab=='newrank'?'active':''</xar:set>
        <dd class="#$tabclass#">
          <a href="&xar-modurl-userpoints-admin-newrank;">
            <xar:mlstring>Add a New Rank</xar:mlstring>
          </a>
        </dd>
    </xar:sec>
    <xar:sec mask="AdminUserpoints" catch="false">
        <xar:if condition="$activetab eq 'viewrank' or $activetab eq 'modifyrank' or $activetab eq 'deleterank'">
            <xar:set name="tabclass">'active'</xar:set>
        <xar:else />
            <xar:set name="tabclass">''</xar:set>
        </xar:if>
        <dd class="#$tabclass#">
            <a href="&xar-modurl-userpoints-admin-viewrank;" >
                <xar:mlstring>View All Ranks</xar:mlstring>
            </a>
        </dd>
    </xar:sec>
    <xar:sec mask="AdminUserpoints" catch="false">
        <xar:set name="tabclass">$activetab=='modifyconfig'?'active':''</xar:set>
        <dd class="#$tabclass#">
          <a href="&xar-modurl-userpoints-admin-modifyconfig;">
            <xar:mlstring>Modify Config</xar:mlstring>
          </a>
        </dd>
    </xar:sec>

    <xar:sec mask="AdminUserpoints" catch="false">
    <xar:set name="tabclass">$activetab=='main'?'active':''</xar:set>
    <dd class="#$tabclass#">
      <a href="&xar-modurl-userpoints-admin-overview;">
        <xar:mlstring>Overview</xar:mlstring>
      </a>
    </dd>
    </xar:sec>
  </dl>
</div>
