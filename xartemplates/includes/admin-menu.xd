<xar:style scope="module" module="base" file="navtabs" />
<xar:set name="request">xarRequestGetInfo()</xar:set>
<xar:set name="activetab">#$request.2#</xar:set>

<div>
  <dl class="xar-tabs">
    <dt class="help" title="xarML('Choose an action to perform')">
      <xar:mlstring>Actions:</xar:mlstring>
    </dt>
    <xar:sec mask="AdminNetquery" catch="false">

      <xar:set name="tabclass">$activetab=='config'?'active':''</xar:set>
      <dd class="#$tabclass#">
        <a href="&xar-modurl-netquery-admin-config;" >
          <xar:mlstring>Configure</xar:mlstring>
        </a>
      </dd>

      <xar:if condition="$activetab eq 'wiview' or $activetab eq 'winew' or $activetab eq 'wimodify' or $activetab eq 'widelete'">
          <xar:set name="tabclass">'active'</xar:set>
      <xar:else />
          <xar:set name="tabclass">''</xar:set>
      </xar:if>
      <dd class="#$tabclass#">
        <a href="&xar-modurl-netquery-admin-wiview;">
          <xar:mlstring>Whois</xar:mlstring>
        </a>
      </dd>

      <xar:if condition="$activetab eq 'ptview' or $activetab eq 'ptnew' or $activetab eq 'ptmodify' or $activetab eq 'ptdelete'">
          <xar:set name="tabclass">'active'</xar:set>
      <xar:else />
          <xar:set name="tabclass">''</xar:set>
      </xar:if>
      <dd class="#$tabclass#">
        <a href="&xar-modurl-netquery-admin-ptview;">
          <xar:mlstring>Ports</xar:mlstring>
        </a>
      </dd>

      <xar:if condition="$activetab eq 'flview' or $activetab eq 'flnew' or $activetab eq 'flmodify' or $activetab eq 'fldelete'">
          <xar:set name="tabclass">'active'</xar:set>
      <xar:else />
          <xar:set name="tabclass">''</xar:set>
      </xar:if>
      <dd class="#$tabclass#">
        <a href="&xar-modurl-netquery-admin-flview;">
          <xar:mlstring>Flags</xar:mlstring>
        </a>
      </dd>

      <xar:if condition="$activetab eq 'lgview' or $activetab eq 'lgnew' or $activetab eq 'lgmodify' or $activetab eq 'lgdelete'">
          <xar:set name="tabclass">'active'</xar:set>
      <xar:else />
          <xar:set name="tabclass">''</xar:set>
      </xar:if>
      <dd class="#$tabclass#">
        <a href="&xar-modurl-netquery-admin-lgview;">
          <xar:mlstring>LG Routers</xar:mlstring>
        </a>
      </dd>

      <xar:if condition="$activetab eq 'bblogedit' or $activetab eq 'bbdelid' or $activetab eq 'bbdelete'">
          <xar:set name="tabclass">'active'</xar:set>
      <xar:else />
          <xar:set name="tabclass">''</xar:set>
      </xar:if>
      <dd class="#$tabclass#">
        <a href="&xar-modurl-netquery-admin-bblogedit;">
          <xar:mlstring>Access Log</xar:mlstring>
        </a>
      </dd>

     <xar:set name="tabclass">($activetab=='main' or $activetab=='overview')?'active':''</xar:set>
        <dd class="#$tabclass#">
        <a href="&xar-modurl-netquery-admin-overview;">
          <xar:mlstring>Overview</xar:mlstring>
        </a>
      </dd>

    </xar:sec>
  </dl>
</div>
