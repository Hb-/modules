<xar:if condition="xarTplAddStyleLink('base', 'navtabs')"></xar:if>

<xar:set name="$navITSPUrl">#xarModURL('itsp','user','itsp',array('itspid'=>$itspid))#</xar:set>

<!-- the variables used in this menu come from itsp_user_menu() -->
<div class="xar-itsp-usermenu">
    <xar:set name="$null">#xarVarFetch('func','str:1:',$whatFunc)#</xar:set>
    <dl class="xar-tabs">
        <dt class="help"><xar:mlstring>View types</xar:mlstring>:</dt>
        <xar:if condition="$whatFunc eq 'itsp'">
            <dd class="active"><a href="#$navITSPUrl#"><xar:mlstring>ITSP</xar:mlstring></a></dd>
        <xar:else />
            <dd><a href="#$navITSPUrl#"><xar:mlstring>ITSP</xar:mlstring></a></dd>
        </xar:if>

        <xar:if condition="!xarUserIsLoggedIn()">
            <dd><a href="&xar-modurl-roles-user-account;"><xar:mlstring>Login</xar:mlstring></a></dd>
        </xar:if>
    </dl>

</div>