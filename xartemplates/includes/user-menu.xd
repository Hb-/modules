<xar:comment> License: GPL http://www.gnu.org/copyleft/gpl.html </xar:comment>
<xar:set name="mastername">xarModGetVar('legis','docname')</xar:set>
<xar:style scope="module" module="base" file="navtabs" />
<xar:set name="compare">xarServerGetCurrentURL()</xar:set>

<dl class="xar-tabs">
    <dt class="help">
        <xar:mlstring>
            Select
        </xar:mlstring>

    </dt>
    <div>
        <xar:sec mask="ViewLegis" catch="false">
            <xar:set name="mainpage">xarModURL('legis', 'user', 'main')</xar:set>
            <xar:if condition="$compare eq $mainpage">
               <dd class="active">
                <a href="#xarServerGetCurrentURL()#">
                   <xar:mlstring>Overview</xar:mlstring>
                </a>
               </dd>
               <xar:else />
                <dd>
                   <a href="#$mainpage#">
                       <xar:mlstring>Overview</xar:mlstring>
                   </a>
               </dd>
            </xar:if>
        </xar:sec>
        <xar:sec mask="ReadLegis" catch="false">
           <xar:set name="viewurl">xarModURL('legis', 'user', 'view', array('docstatus'=>2))</xar:set>
            <xar:if condition="$compare eq $viewurl">
               <dd class="active">
                <a href="#xarServerGetCurrentURL()#">
                   <xar:ml>
                   <xar:mlstring>View #(1)</xar:mlstring>
                   <xar:mlvar>#$mastername#</xar:mlvar>
                   </xar:ml>
                </a>
               </dd>
            <xar:else />
               <dd>
                <a href="#$viewurl#">
                  <xar:ml>
                   <xar:mlstring>View #(1)</xar:mlstring>
                   <xar:mlvar>#$mastername#</xar:mlvar>
                   </xar:ml>
                </a>
            </dd>
            </xar:if>
             <xar:set name="pendingurl">xarModURL('legis', 'user', 'view', array('docstatus'=>1))</xar:set>
            <xar:if condition="$compare eq $pendingurl">
               <dd class="active">
                <a href="#xarServerGetCurrentURL()#">
                  <xar:ml>
                   <xar:mlstring>Pending #(1)</xar:mlstring>
                   <xar:mlvar>#$mastername#</xar:mlvar>
                   </xar:ml>
                </a>
               </dd>
            <xar:else />
            <dd>
                <a href="#$pendingurl#">
                   <xar:ml>
                   <xar:mlstring>Pending #(1)</xar:mlstring>
                   <xar:mlvar>#$mastername#</xar:mlvar>
                   </xar:ml>
                </a>
            </dd>
            </xar:if>
        </xar:sec>
        <xar:sec mask="SubmitLegis" catch="false">
            <xar:set name="addlegis">xarModURL('legis', 'user', 'addlegis')</xar:set>
            <xar:if condition="$compare eq $addlegis">
               <dd class="active">
                <a href="#xarServerGetCurrentURL()#">
                  <xar:ml>
                   <xar:mlstring>Submit #(1)</xar:mlstring>
                   <xar:mlvar>#$mastername#</xar:mlvar>
                   </xar:ml>
                </a>
               </dd>
            <xar:else />
            <dd>
                <a href="&xar-modurl-legis-user-addlegis;">
                  <xar:ml>
                   <xar:mlstring>Submit #(1)</xar:mlstring>
                   <xar:mlvar>#$mastername#</xar:mlvar>
                   </xar:ml>
                </a>
            </dd>
            </xar:if>
        </xar:sec>
        <xar:if condition="$cansethall">
        <xar:set name="sethall">xarModURL('legis', 'user', 'main',array('reset'=> 1))</xar:set>
            <xar:if condition="$compare eq $sethall">
               <dd class="active">
                <a href="#xarServerGetCurrentURL()#">
                    <xar:mlstring>
                        Set Default Hall
                    </xar:mlstring>
                </a>
               </dd>
            <xar:else />
            <dd>
                <a href="&xar-modurl-legis-user-main;&amp;reset=1">
                    <xar:mlstring>
                        Set Default Hall
                    </xar:mlstring>
                </a>
            </dd>
       </xar:if>
       </xar:if>
</dl>

