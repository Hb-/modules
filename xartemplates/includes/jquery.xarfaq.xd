<xar:comment>
    Initialise the jquery.xarfaq plugin.
</xar:comment>

<xar:comment>
    Make sure jQuery is going to be loaded.
</xar:comment>

<xar:template file="jquery" module="jquery" />

<xar:comment>
    Other required plugins.
</xar:comment>

<xar:base-include-javascript filename="jquery.dimensions.js" module="jquery" />
<xar:template file="jquery.pngFix" module="jquery" />

<xar:comment>
    Required stylesheets.
</xar:comment>

<xar:style file='jquery.tooltip' scope="module" module="jquery" />

<xar:comment>
    Main plugin.
</xar:comment>

<xar:base-include-javascript filename="jquery.xarfaq.js" module="jquery" />

<xar:if condition="!empty($selector)">
    <xar:if condition="!empty($options)">
        <xar:base-include-javascript type="code" code="jQuery(document).ready(function(){jQuery('$selector').xarfaq('$options');});" />
    <xar:else />
        <xar:base-include-javascript type="code" code="jQuery(document).ready(function(){jQuery('$selector').xarfaq('');});" />
    </xar:if>
</xar:if>
