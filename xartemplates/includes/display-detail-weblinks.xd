<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <xar:template file="publinks" type="module" />
    <!--
    <xar:data-output type="categorynavigation" layout="trails" showchildren="1" module="publications" itemtype="$ptid" itemid="$id" cids="$cids" showcatcount="$showcatcount" showempty="0" />
    -->
    <table border="0" cellpadding="3" cellspacing="0">
        <tr>
            <td align="left" colspan="2" class="xar-normal">
                <!-- <a class="xar-title" href="#$redirect#"> -->
                <a class="xar-title" href="#">
                    <xar:data-output property="$properties['title']" />
                </a>
            <xar:if condition="!empty($editurl)">
                [<a href="#$editurl#">#$edittitle#</a>]
            </xar:if>
            <br />
            </td>
        </tr>
        <tr>
            <td align="right">
            <xar:mlstring>Web Site</xar:mlstring>:
            </td>
            <td align="left">
                <xar:data-output property="$properties['website']" />
            </td>
        </tr>
        <tr>
            <td align="right">
            <xar:mlstring>Description</xar:mlstring>:
            </td>
            <td align="left">
                <xar:data-output property="$properties['description']" />
            </td>
        </tr>
        <xar:if condition="!empty($properties['source']->value)">
            <tr>
                <td align="right">
                    <xar:mlstring>Source</xar:mlstring>:
                </td>
                <td align="left">
                    <xar:data-output property="$properties['source']" />
                </td>
            </tr>
        </xar:if>
        <tr>
            <td align="right">
                <xar:mlstring>Added on</xar:mlstring>:
            </td>
            <td align="left">
                #xarLocaleGetFormattedDate('long',$properties['modified']->getValue())#
                #xarLocaleGetFormattedTime('long',$properties['modified']->getValue())#
            </td>
        </tr>
        <tr>
            <td align="right">
                <xar:mlstring>By</xar:mlstring>:
            </td>
            <td align="left">
                <xar:if condition="!empty($profile)">
                    <a href="#$profile#">
                        <xar:data-output property="$properties['author']" />
                    </a>
                    <xar:else />
                        <xar:data-output property="$properties['author']" />
                </xar:if>
            </td>
        </tr>
        <xar:if condition="!empty($counter)">
            <tr>
                <td align="right">
                    <xar:mlstring>Hits</xar:mlstring>:
                </td>
                <td align="left">
                    #$counter#
                </td>
            </tr>
        </xar:if>
    </table>

    <xar:if condition="!empty($prevart) || !empty($nextart)">
        <br />
            <table border="0" width="95%">
                <tr>
                    <td align="left"><xar:if condition="!empty($prevart)"><a href="#$prevart#">&lt; <xar:mlstring>prev</xar:mlstring> </a></xar:if>&#160;</td>
                    <td align="right">&#160;<xar:if condition="!empty($nextart)"> <a href="#$nextart#"><xar:mlstring>next</xar:mlstring> &gt;</a></xar:if></td>
                </tr>
            </table>
    </xar:if>

    <xar:template file="navtabs-user" type="module" />
</xar:template>
