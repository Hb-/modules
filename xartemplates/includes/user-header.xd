<style type="text/css">@import url(modules/commerce/xarstyles/userstylesheet.css);</style>
<table border="0" width="100%" cellspacing="0" cellpadding="1">
    <tr class="headerNavigation">
        <td class="headerNavigation">&#160;<font size="1" face="Verdana, Arial, Helvetica, sans-serif">{$navtrail}</font>
        </td>
        <td align="right" class="headerNavigation">
            <xar:if condition="xarUserIsLoggedIn()">
                <a href="#xarModURL('commerce','user','logoff')#">
                    <xar:mlstring>Logout</xar:mlstring>
                </a>
            </xar:if>
            <xar:if condition="xarModIsAvailable('customers')">
                <xar:if condition="isset($account)">
                     |
                    <a href="#xarModURL('customers','user','account')#">
                        <xar:mlstring>Your Account</xar:mlstring>
                    </a>
                </xar:if>
            </xar:if>
            <xar:if condition="xarModIsAvailable('carts')">
                     |
                <a href="#xarModURL('carts','user','shopping_cart')#">
                    <xar:mlstring>Shopping Cart</xar:mlstring>
                </a> |
                <a href="#xarModURL('carts','user','checkout')#">
                    <xar:mlstring>Cash Register</xar:mlstring>
                </a>
            </xar:if>
        </td>
    </tr>
</table>