<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<xar:if condition="$tabmodule ne 'maps'">
    <xar:set name="regid">xarModGetIDFromName($tabmodule)</xar:set>
<xar:else />
    <xar:set name="regid">0</xar:set>
</xar:if>
<div class="xar-form-input-wrapper">
    <label for="latitude" title="#xarML('What data sources to use for the locations to be displayed')#" class="xar-form-label">
        <xar:mlstring>
            Get Data from: 
        </xar:mlstring>
    </label>
    <xar:set name="options">array(
                            array('id' => 'dynamic', 'name' => xarML('Maps Module Locations')),
                            array('id' => 'module', 'name' => xarML('#(1) Module Locations',UCFirst($tabmodule))),
                            array('id' => 'hooked', 'name' => xarML('#(1) Hooked Locations',UCFirst($tabmodule))),
                            )
    </xar:set>
    <xar:set name="value">
        unserialize(xarModVars::get('maps', 'uselocations',$regid))
    </xar:set>
    <xar:data-input type="checkboxlist" name="uselocations" id="uselocations" value="$value" options="$options" />
</div>
</xar:template>