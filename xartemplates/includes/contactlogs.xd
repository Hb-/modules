<xar:data-getitem name="$logproperties" module="dossier" itemtype="4" itemid="0" />
    
<table width="100%" border="0">
    <xar:if condition="count($contactlogs) gt 0">
        <xar:foreach in="$contactlogs" value="$loginfo">
            <xar:if condition="!$loginfo['logtype']">
                <xar:set name="logtypename">"General"</xar:set>
            <xar:elseif condition="!is_numeric($loginfo['logtype'])" />
                <xar:set name="logtypename">$loginfo['logtype']</xar:set>
            <xar:else />
                <xar:set name="logtypedetails">xarModAPIFunc('categories', 'user', 'getcatinfo', array('cid' => $loginfo['logtype']))</xar:set>
                <xar:set name="logtypename">$logtypedetails['name']</xar:set>
            </xar:if>
            <tr>
                <td>
                    <div>
                        <xar:set name="logdate">xarLocaleFormatDate(strtotime($loginfo['logdate']))</xar:set>
                        <div style="float: left; width: auto;"><strong>#$logtypename#</strong> - <xar:data-output property="$logproperties['ownerid']" value="$loginfo['ownerid']" /></div>
                        <div style="float: right; width: 200px; font-size: 10px;"><xar:data-output property="$logproperties['logdate']" value="$logdate" /></div>
                        <div style="clear: both;"></div>
                    </div>
                    <div style="padding-left: 20px; max-height: 200px; overflow-y: auto;"><em>#$loginfo['notes']#</em></div>
                </td>
                <td width="65" valign="top" align="right">
                    <a class="thickbox" href="&xar-modurl-dossier-logs-modify;&amp;logid=#$loginfo['logid']#&amp;contactid=#$contactid#&amp;pageName=module"><img src="modules/dossier/xarimages/button.edit.gif"></a>
                    <a class="thickbox" href="&xar-modurl-dossier-logs-delete;&amp;logid=#$loginfo['logid']#&amp;contactid=#$contactid#&amp;pageName=module"><img src="modules/dossier/xarimages/button.delete.gif"></a>
                </td>
            </tr>
        </xar:foreach>
    <xar:else />
        <xar:mlstring>No Record of Contact</xar:mlstring>
    </xar:if>
</table>


