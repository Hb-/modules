<xar:set name="xtasks_objectid">xarModGetVar('xtasks','xtasks_objectid')</xar:set>
<xar:data-getitem name="$properties" module="xTasks" itemtype="1" itemid="$xtasks_objectid" />
<xar:set name="reminders_objectid">xarModGetVar('xtasks','reminders_objectid')</xar:set>
<xar:data-getitem name="$reminderproperties" module="xTasks" itemtype="3" itemid="$reminders_objectid" />

<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Delete Reminder</xar:mlstring></span></div>
<div class="xar-mod-body">
<div align="center">

<form method="post" action="&xar-modurl-xtasks-reminders-delete;">
    <input type="hidden" name="authid" value="#$authid#" />
    <input type="hidden" name="confirm" value="true" />
    <input type="hidden" name="reminderid" value="#$reminderid#" />

    <table border="0" cellpadding="2" cellspacing="0">
        <tr>
            <td align="right" width="30%">
                <xar:mlstring>Task</xar:mlstring>
            </td>
            <td><strong>#$taskinfo['task_name']#</strong> (ID: #$taskinfo['taskid']#)</td>
        </tr>
        <tr>
            <td align="right" width="20%">
                <xar:data-label property="$reminderproperties['ownerid']" />
            </td>
            <td>
                <xar:data-output property="$reminderproperties['ownerid']" value="$item['ownerid']" />
            </td>
        </tr>
        <tr>
            <td align="right" width="20%">
                <xar:data-label property="$reminderproperties['eventdate']" />
            </td>
            <td>
                <xar:data-output property="$reminderproperties['eventdate']" value="$item['eventdate']" />
            </td>
        </tr>
        <tr>
            <td align="right" width="20%">
                <xar:data-label property="$reminderproperties['reminder']" />
            </td>
            <td>
                <xar:data-output property="$reminderproperties['reminder']" value="$item['reminder']" />
            </td>
        </tr>
        <tr>
            <td colspan="2" align="center"><br />
                    <input type="submit" value="#$confirmbutton#"  />
            </td>
        </tr>
    </table>
</form>
</div>
</div>