<xar:style scope="module" module="base" file="navtabs" />
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Newsletter Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <xar:template file="navtab" type="module" />
     <fieldset>
        <legend>
            <xar:mlstring>Publication Results</xar:mlstring>
        </legend>
    <div class="xar-form-input-wrapper">
        <label for="pubblication" title="#xarML('Pubblication')#" class="xar-form-label">
        <xar:mlstring>Issue:</xar:mlstring>
        </label>
        #$publication['title']#&nbsp;:&nbsp;#$issue['title']#
    </div>
    <div class="xar-form-input-wrapper">
    <label for="totla" title="#xarML('Total')#" class="xar-form-label">
        <xar:mlstring>Total Sent:</xar:mlstring>
        </label>
        #$issueCounts['total']#
    </div>
    <xar:if condition="!$bulkemail">
        <div class="xar-form-input-wrapper">
            <label for="errors" title="#xarML('Errors')#" class="xar-form-label">
                <xar:mlstring>Total Errors:</xar:mlstring>
            </label>
            #$issueCounts['errors']#
        </div>
    </xar:if>
    </fieldset>
    <div class="xar-form-input-wrapper-after">
        <xar:if condition="$issueCounts['total'] != 0">
                <a href="#$viewsubscriptionurl#"><xar:mlstring>Click here to view subscriptions</xar:mlstring></a>
        <xar:else />
            <xar:mlstring>Nobody has subscribed to this publication!</xar:mlstring>
        </xar:if>
    </div>
</div>
