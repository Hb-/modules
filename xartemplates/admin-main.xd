<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <div class="xar-mod-head">
        <span class="xar-mod-title">
            <xar:if condition="xarModVars::get('foo','useModuleAlias')">
                <xar:var scope="module" module="foo" name="aliasname" />
            <xar:else />
                Foo Administration
            </xar:if>
        </span>
    </div>
    <div class="xar-mod-body">
        <img src="#xarTplGetImage('admin.gif', 'foo')#" alt="official icon" width="96" height="96" class="xar-module-icon" />

        <h2>
            Overview
        </h2>

        <p>
            Dummy foo text
        </p>
        <div style="clear:both">&#160;</div>
    </div>
</xar:template>