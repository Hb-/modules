<xar:comment> License: GPL http://www.gnu.org/copyleft/gpl.html </xar:comment>
<xar:set name="mastername">xarModGetVar('legis','docname')</xar:set>
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:ml>
            <xar:mlstring>RIC #(1)</xar:mlstring>
            <xar:mlvar>#$mastername#</xar:mlvar>
        </xar:ml>
    </span>
</div>
<div class="xar-mod-body">
     <!-- Common user menu -->
    <xar:if condition="!isset($defaulthall) or empty($defaulthall)">
      <xar:template type="module" file="user-menu-set" />
    <xar:else />
        <xar:template type="module" file="user-menu" />
    </xar:if>
    <!-- function output proper -->
    <h2>
        <xar:ml>
            <xar:mlstring>View #(1)</xar:mlstring>
            <xar:mlvar>#$mastername#</xar:mlvar>
        </xar:ml>
    </h2>
    <xar:if condition="!empty($defaulthall)">
         <xar:set name="uchall">xarML('from ').ucfirst($halls[$defaulthall]['name'])</xar:set>
    <xar:else />
         <xar:set name="uchall">''</xar:set>
    </xar:if>
        <p>
        <xar:ml>
            <xar:mlstring>
                Welcome to RIC's Ultra-Slick #(1) System. This is where representatives
                <strong>#(2)</strong> come to submit #(1), peruse past #(1) in search of precedents,
                and check up on what to expect at upcoming meetings. Check it out by choosing from
                one of the links above.
            </xar:mlstring>
            <xar:mlvar>#$mastername#</xar:mlvar>
            <xar:mlvar>
                #$uchall#
            </xar:mlvar>
        </xar:ml>
        </p>

        <p>
        <xar:if condition="$cansethall">
        <xar:ml>
        <xar:mlstring>Pick a Hall from the available list to set or reset it as your default Hall.
                      Once you have set your default hall you can navigate here,
                      and will be taken directly to the page for your Hall Senate.
                      To revist this page, select Overview from the #(1) menu or reset your default Hall.
        </xar:mlstring>
        <xar:mlvar>#$mastername#</xar:mlvar>
        </xar:ml>
        <xar:else />
        <xar:ml>
        <xar:mlstring>If you would like to set or reset your default hall, please contact the #(1) Administrator.
        </xar:mlstring>
        <xar:mlvar>#$mastername#</xar:mlvar>
        </xar:ml>
        </xar:if>
        </p>

</div>

