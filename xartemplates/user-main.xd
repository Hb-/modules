
<xar:data-getitem name="$properties" module="dossier" itemtype="1" itemid="0" />

<xar:style scope="module" module="dossier" file="default" />

<xar:set name="contactcid">xarModGetVar('dossier', 'contactcid')</xar:set>
<xar:set name="dummy">xarModAPILoad('categories', 'user')</xar:set>
<xar:set name="catlist">xarModAPIFunc('categories', 'user', 'getchildren', array('cid' => $contactcid ) )</xar:set>

<xar:template type="module" file="user-menu" />

<div class="xar-mod-head">

    <xar:comment>Contact category, privacy and search field</xar:comment>
    <form method="post" action="&xar-modurl-dossier-user-main;" style="display: inline;">
    <div style="text-align: left;">
        <div style="margin: 5px; float: left;"><xar:mlstring>SEARCH CONTACTS</xar:mlstring>:</div>
        <div style="text-align: right; margin: 5px; float: left;">
            <input type="text" name="q" value="#$q#" style="width: 10em;" />
        </div>
        <div style="margin: 5px; float: left;">
            <input type="submit" value="#xarML('SEARCH')#" />
        </div>
        <div style="clear: both;"></div>
    </div>
    </form>
</div>

<div class="xar-mod-body contactlist">

    <div class="xar-align-center">
<xar:template type="module" file="alphanav" subdata="array('pagetype'=&gt;$pagetype,
                                                            'itemsperpage'=&gt;$itemsperpage,
                                                            'startnum'=&gt;$startnum,
                                                            'sortby'=&gt;$sortby,
                                                            'private'=&gt;$private,
                                                            'cat_id'=&gt;$cat_id,
                                                            'q'=&gt;$q,
                                                            'ltr'=&gt;$ltr,
                                                            'navurl'=&gt;xarModURL('dossier','user','main'))" />
    </div>

    <xar:comment>Contact List</xar:comment>
    <table border="0" cellpadding="2" cellspacing="1" class="xar-accent" style="width: 100%;">
        <tr>
    
            <th><xar:mlstring>NAME</xar:mlstring></th>
            <th><xar:mlstring>COMPANY</xar:mlstring></th>
            <th style="text-align: center;"><xar:mlstring>CODE</xar:mlstring></th>
            <th style="text-align: center;"><xar:mlstring>PHONE</xar:mlstring></th>
            <th style="text-align: center;"><xar:mlstring>FAX</xar:mlstring></th>
            <th style="text-align: right;"><xar:mlstring>EMAIL</xar:mlstring></th>
        </tr>
    
        <xar:loop name="$items">
            <tr><td class="xar-norm"><a href="&xar-modurl-dossier-admin-display;&amp;contactid=#$loop:item['contactid']#">#$loop:item['sortname']#</a></td>
            
                <td class="xar-norm"><xar:data-output property="$properties['sortcompany']" value="$loop-&gt;item['sortcompany']" /></td>
            
                <td class="xar-norm" style="text-align: center;"><xar:data-output property="$properties['contactcode']" value="$loop-&gt;item['contactcode']" /></td>
                
                <td class="xar-norm" style="text-align: center;"><xar:data-output property="$properties['phone_work']" value="$loop-&gt;item['phone_work']" /></td>

                <td class="xar-norm" style="text-align: center;"><xar:data-output property="$properties['phone_fax']" value="$loop-&gt;item['phone_fax']" /></td>
            
                <td class="xar-norm" style="text-align: right;"><xar:data-output property="$properties['email_1']" value="$loop-&gt;item['email_1']" /></td>
        
            </tr>
                
        </xar:loop>
        
    </table>

</div>
