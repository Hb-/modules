<xar:comment> License: GPL http://www.gnu.org/copyleft/gpl.html </xar:comment>
<xar:set name="base">xarServerGetBaseURL()</xar:set>
<xar:style scope="module" module="xarcpshop" file="cpshop" />
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Xaraya CafePress Support Shop</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <xar:template file="user-menu" type="module"/>
    <xar:if condition="$closed eq '1'">
        <p class="xar-align-center xar-fullwidth">
           <xar:mlstring>Our Cafe Press Shop is currently closed for maintenance. Please call back later.</xar:mlstring>
        </p>
        <p class="xar-align-center xar-fullwidth">
            <xar:mlstring>Thank you for your patience.</xar:mlstring>
       </p>
    <xar:else />
            <div class="xar-clearleft xar-align-center xar-fullwidth">
            #$js#

            #$content#
            </div>
    </xar:if>
</div>

