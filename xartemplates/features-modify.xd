<xar:set name="projects_objectid">xarModGetVar('xproject','projects_objectid')</xar:set>
<xar:data-getitem name="$project_properties" module="xProject" itemtype="1" itemid="$projects_objectid" />
<xar:set name="features_objectid">xarModGetVar('xproject','features_objectid')</xar:set>
<xar:data-getitem name="$properties" module="xProject" itemtype="2" itemid="$features_objectid" />


<xar:template type="module" file="admin-menu" />

<div class="xar-mod-body">
    <h2><xar:mlstring>Modify Feature</xar:mlstring></h2>
    
    <form method="post" action="&xar-modurl-xproject-features-update;">
    
        <input type="hidden" name="authid" value="#$authid#" />
        <input type="hidden" name="featureid" value="#$item['featureid']#" />
        <input type="hidden" name="projectid" value="#$item['projectid']#" />
        
        <table width="100%" border="0" cellspacing="0" cellpadding="2">
            <tr>
                <td><xar:data-label property="$properties['feature_name']" /></td>
                <td><xar:data-input property="$properties['feature_name']" name="feature_name" value="$item['feature_name']" /></td>
            </tr>
            <tr>
                <td><xar:data-label property="$properties['importance']" /></td>
                <td><xar:data-input property="$properties['importance']" name="importance" value="$item['importance']" /></td>
            </tr>
            <tr>
                <td><xar:data-label property="$properties['date_approved']" /></td>
                <td><xar:data-input property="$properties['date_approved']" name="date_approved" value="$item['date_approved']" /></td>
            </tr>
            <tr>
                <td><xar:data-label property="$properties['date_available']" /></td>
                <td><xar:data-input property="$properties['date_available']" name="date_available" value="$item['date_available']" /></td>
            </tr>
            <tr>
                <td><xar:data-label property="$properties['details']" /></td>
                <td><xar:data-input property="$properties['details']" name="details" value="$item['details']" /></td>
            </tr>
            <tr>
                <td><xar:data-label property="$properties['tech_notes']" /></td>
                <td><xar:data-input property="$properties['tech_notes']" name="tech_notes" value="$item['tech_notes']" /></td>
            </tr>
            <tr>
                <xar:set name="updatebtn"><xar:mlstring>Update Feature</xar:mlstring></xar:set>
                <td colspan=2 align="center"><br /><input type="submit" name="submit" value="#$updatebtn#"></td>
            </tr>
        </table>
        
        <input type="hidden" name="authid" id="authid" value="#xarSecGenAuthKey('xproject')#" />
    
    </form>
</div>
