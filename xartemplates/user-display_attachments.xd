<xar:set name="$stylesheet">xarTplAddStyleLink('filemanager', 'filemanager')</xar:set>
<xar:base-include-javascript filename="openDialog.js" /> 
<div class="xar-filemanager-attachment-wrapper xar-accent-outline">
    <h2>
        &nbsp;<xar:mlstring>List of Attachments:</xar:mlstring>
    </h2>
    <a name="Attachments"/>
    <xar:template file="attachment-list" type="module" />
</div>

<div class="xar-filemanager-clearer">&nbsp;</div>
<br />
<xar:sec mask="AddFileManager" catch="false">
    <a name="set_attachments" onClick="AttachmentsDialog('#$local_import_post_url#', '#xarML('Add / Remove Attachments')#'); return false;" >
        #xarML('Add / Remove Attachments')#
    </a>
</xar:sec>
