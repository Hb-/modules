<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>SIGMA Personnel Administration</xar:mlstring></span></div>
<div class="xar-mod-body"><h2>#$menutitle#</h2><br />

    <xar:if condition="!empty($menu)">
    #$menu#
    </xar:if>

    <xar:if condition="!empty($preview)">
        <fieldset>
        <legend><xar:mlstring>Preview</xar:mlstring></legend>
        <div class="xar-form-input-wrapper">
            <xar:data-display object="$object" />
        </div>
    </xar:if>
    <form method="post" action="&xar-modurl-sigmapersonnel-admin-create;">
        <input type="hidden" name="authid" id="authid" value="#$authid#" />
        <fieldset>
            <legend><xar:mlstring>Add new parameter</xar:mlstring></legend>
            <div class="xar-form-input-wrapper">
                <xar:data-form object="$object" />
            </div>
            <div class="xar-form-input-wrapper-after">
                <input type="hidden" name="itemtype" value="#$itemtype#" />
                <input type="submit" name="preview" value="#xarML('Preview')#" />
                <input type="submit" name="create" value="#xarML('Create')#" />
            </div>
        </fieldset>
    </form>
</div>
