<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <div class="xar-mod-head">
        <span class="xar-mod-title">
            <xar:if condition="xarModVars::get('foo','useModuleAlias')">
                <xar:var scope="module" module="foo" name="aliasname" />
            <xar:else />
                <xar:mlstring>Create Item</xar:mlstring>
            </xar:if>
        </span>
    </div>
    <div class="xar-mod-body">
        <h2>
            <xar:ml>
                <xar:mlstring>Create New Item in #(1)</xar:mlstring>
                <xar:mlvar>#$object:label#</xar:mlvar>
            </xar:ml>
        </h2>

        <form method="post" action="#xarServerGetCurrentURL()##">
          <fieldset>
            <legend><xar:mlstring>Item details</xar:mlstring></legend>
            <xar:data-form object="$object" />
          </fieldset>
          <fieldset>
            <div class="xar-align-center">
              <input type="hidden" name="authid" id="authid" value="#$authid#" />
              <input type="hidden" name="tplmodule" id="tplmodule" value="#$tplmodule#" />
              <input type="hidden" name="confirm" id="confirm" value="true" />
              <xar:var name="label">Create</xar:var>
              <input type="submit" value="#$label#" class="xar-margin-thickleft" />
            </div>
          </fieldset>
        </form>
    </div>
</xar:template>
