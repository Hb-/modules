<xar:if condition="xarTplAddStyleLink('polls', 'forms')"></xar:if>
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Polls Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2>
        <xar:mlstring>
            Create New Poll
        </xar:mlstring>
    </h2>
    <form class="xar-formwidget" name="post" id="post" action="&xar-modurl-polls-admin-create;" method="post" enctype="application/x-www-form-urlencoded">
        <fieldset class="formelements xar-norm">
            <legend>
                <strong>
                    <xar:mlstring>
                        Set main settings
                    </xar:mlstring>
                </strong>
            </legend>
        <input type="hidden" name="authid" value="#$authid#">
            <p class="param">
                    <label for="title">
                    <span class="help" title="#xarML('The name of the new poll')#">
                        <xar:mlstring>
                            Poll title
                        </xar:mlstring>
                </span>
                </label>
                    <input type="text" name="title" id="title" size="50" maxlength="100" value="">
            </p>
            <p class="param">
                <label for="type">
                    <span class="help" title="#xarML('The type of the new poll')#">
                    <xar:mlstring>
                        Poll type
                        </xar:mlstring>
                </span>
                </label>
                    <input type="radio" name="polltype" value="single" checked="checked">
                    &nbsp;
                    <xar:mlstring>
                        Single Choice
                    </xar:mlstring>
                    <input type="radio" name="polltype" value="multi">
                    &nbsp;
                    <xar:mlstring>
                        Multiple Choice
                    </xar:mlstring>
            </p>
            <p class="param">
                    <label for="private">
                    <span class="help" title="#xarML('who can view the new poll')#">
                        <xar:mlstring>
                            Private
                        </xar:mlstring>
                </span>
                </label>
                    <input type="checkbox" name="private" id="private" value="1" />
            </p>
        </fieldset>
        <fieldset class="formelements xar-norm">
            <legend>
                <strong>
                    <xar:mlstring>
                        Please enter each available option into a single field
                    </xar:mlstring>
                </strong>
            </legend>
            <xar:for start="$i = 1" test="$i <= $optcount" iter="$i++">
                <p class="param">
                        <label for="option_#$i#">
                            <xar:mlstring>
                                Option
                            </xar:mlstring>
                            #$i#
                    </label>
                        <input type="text" name="option_#$i#" value="" size="50" maxlength="50">
                </p>
            </xar:for>
        </fieldset>
        <xar:if condition="!empty($hooks)">
            <fieldset class="formelements xar-norm">
                <legend>
                    <strong>
                        <xar:mlstring>
                            Configure hooks
                        </xar:mlstring>
                    </strong>
                </legend>
                <p class="param">
                #$hooks#
                </p>
            </fieldset>
        </xar:if>
        <p class="param">
            <input type="submit" value="#xarML('Create Poll')#" />
        </p>
        </form>
    </div>
