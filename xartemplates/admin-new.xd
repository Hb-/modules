<xar:comment> License: GPL http://www.gnu.org/copyleft/gpl.html </xar:comment>
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Help Desk</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">

    <xar:template file="admin-menu" />

    <xar:if condition="!empty($menu)">
        <xar:var name="menu" />
    </xar:if>

    <h2><xar:mlstring>New</xar:mlstring></h2>

    <xar:if condition="!empty($preview)">
    <table width="100%" border="1" cellspacing="0" cellpadding="4">
        <tr>
            <td align="center">
                <xar:mlstring>Preview</xar:mlstring>
            </td>
        </tr>
        <tr>
            <td align="center">
                <xar:data-display object="$object" />
            </td>
        </tr>
    </table>
    </xar:if>

    <form method="post" action="&xar-modurl-helpdesk-admin-create;">
         <fieldset>
             <legend>Basic Info</legend>
             <xar:data-form object="$object" />
         </fieldset>

         <xar:foreach in="$hooks" key="$key" value="$hook">
            <xar:var name="hook" />
         </xar:foreach>

         <fieldset>
             <legend>Actions</legend>

             <div class="xar-form-input-wrapper-after">
                 <input type="hidden" name="authid" id="authid" value="#xarSecGenAuthKey()#" />
                 <input type="hidden" name="itemtype" value="#$itemtype#" />
                 <input type="submit" name="preview" value="#xarML('Preview')#" />
                 <input type="submit" value="#xarML('Create')#" />
             </div>

            <xar:if condition="$itemtype eq REPRESENTATIVE_ITEMTYPE">
                <div class="xar-form-input-wrapper">
                    <xar:mlstring>
                        Note: Creating a representative will place the selected user into your defined
                        reprentatives group.  If you have not have defined such a group please do so now
                        before create a representative.
                    </xar:mlstring>
                </div>
            </xar:if>
        </fieldset>
    </form>
</div>
