<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Workflow Administration</xar:mlstring></span></div>
<div class="xar-mod-body">
    <xar:template module="workflow" type="module" file="admin-menu" />
    <h2><xar:mlstring>Manage Processes</xar:mlstring></h2>
  <!-- Show the navigation bar -->
  <xar:template file="proc_bar"/>

  <!-- Show some help if we enabled that feature -->
  <xar:template file="help"/>

    <xar:if condition="$roleId eq 0">
      <!-- Show the list of roles -->
      <xar:template file="roleslist"/>
    </xar:if>

    <!-- Show the role form -->
    <xar:template file="roleform"/>
  
    <xar:if condition="count($roles) gt 0">
      <!-- Map users to roles -->
      <xar:template file="mapusers"/>

      <!-- Map groups to roles -->
      <xar:template file="mapgroups"/>
    <xar:else/>
      <h4><xar:mlstring>Warning</xar:mlstring></h4>
      <xar:mlstring>No roles are defined yet so no roles can be mapped</xar:mlstring><br />
    </xar:if>
    
    <!-- Show a list of mappings -->
    <xar:template file="maplist"/> 

    <!-- Show a courtesy footer -->
    <xar:template file="galaxfooter"/>

</div>
