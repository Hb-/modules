<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Ephemerids Administration</xar:mlstring></span></div>
<!-- common admin menu for this module - remove link to the current function -->
<div class="xar-mod-body">
    <xar:template type="module" module="ephemerids" file="admin-menu" />
    <h2><xar:mlstring>Modify Configuration</xar:mlstring></h2>

    <form method="post" action="#xarModURL('ephemerids', 'admin', 'updateconfig')#" enctype="application/x-www-form-urlencoded" >
    <fieldset>
        <legend><xar:mlstring>General Options</xar:mlstring></legend>
      <div class="xar-form-input-wrapper">
        <label for="itemsperpage" class="xar-form-label" title="#xarML('Number of example items per page')#">
          <xar:mlstring>Items Per Page:</xar:mlstring>
        </label>
        <input type="text" name="itemsperpage" id="itemsperpage" value="#xarModVars::get('ephemerids', 'itemsperpage')#" maxlength="3" class="xar-form-textshort" />
      </div>
      </fieldset>
        <xar:set name="$updatebutton"><xar:mlstring>Update Ephemerids Configuration</xar:mlstring></xar:set>
        <p class="xar-form-input-wrapper-after;">
            <input type="hidden" name="authid" id="authid" value="#$authid#" />
            <input type="submit" value="#$updatebutton#"  tabindex="3" />
        </p>
    </form>
</div>
</xar:template>
