<div class="xar-mod-head">
  <span class="xar-mod-title"><xar:mlstring>Twitter Administration</xar:mlstring></span>
</div>
<div class="xar-mod-body">
    <xar:template type="module" file="admin-tabs"/>
    <h2><xar:mlstring>Modify Twitter Configuration</xar:mlstring></h2>
    <form method="post" action="#xarModURL('twitter', 'admin', 'modifyconfig')#">
        <xar:comment>
        <fieldset>
            <legend><xar:mlstring>Module Settings</xar:mlstring></legend>
            <div class="xar-form-input-wrapper">
                <label for="useshorturls" class="xar-form-label" title="#xarML('Enable short URLS?')#">
                    <xar:mlstring>Enable short URLs?</xar:mlstring>
                </label>
                <xar:data-input type="checkbox" name="useshorturls" id="useshorturls" checked="$useshorturls" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for = "usealias" class="xar-form-label" title="#xarML('Use an alias instead of the module name')#">
                    <xar:mlstring>Use a module alias</xar:mlstring>
                </label>
                <xar:data-input type="checkbox" name="usealias" id="usealias" checked="$usealias" />
            </div>
            <div class="xar-form-input-wrapper">
                <label for="aliasname" class="xar-form-label" title="#xarML('The name of module alias to be used.')#">
                    <xar:mlstring>Module Alias Name</xar:mlstring>
                </label>
                <input type="text" name="aliasname" id="aliasname" value="#$aliasname#" size="32" maxlength="100" />
            </div>
        </fieldset>
        </xar:comment>
        <fieldset>
            <legend><xar:mlstring>Application Tokens</xar:mlstring></legend>
            <div class="xar-form-input-wrapper">
                <label for="consumer_key" class="xar-form-label"><xar:mlstring>Consumer Key</xar:mlstring></label>
                <input type="textbox" name="consumer_key" id="consumer_key" value="#$consumer_key#" class="xar-form-textxxlong"/>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="consumer_secret" class="xar-form-label"><xar:mlstring>Consumer Secret</xar:mlstring></label>
                <input type="textbox" name="consumer_secret" id="consumer_secret" value="#$consumer_secret#" class="xar-form-textxxlong"/>
            </div>
        </fieldset>

        <fieldset>
            <legend><xar:mlstring>Site Account Tokens</xar:mlstring></legend>
            <div class="xar-form-input-wrapper">
                <label for="access_token" class="xar-form-label"><xar:mlstring>Access Token</xar:mlstring></label>
                <input type="textbox" name="access_token" id="access_token" value="#$access_token#" class="xar-form-textxxlong"/>
            </div>
            <div class="xar-form-input-wrapper">
                <label for="access_token_secret" class="xar-form-label"><xar:mlstring>Access Token Secret</xar:mlstring></label>
                <input type="textbox" name="access_token_secret" id="access_token_secret" value="#$access_token_secret#" class="xar-form-textxxlong"/>
            </div>
        </fieldset>

        <xar:if condition="!empty($hooks)">
            <xar:foreach in="$hooks" key="$hookmod">
                #$hooks[$hookmod]#
            </xar:foreach>
        </xar:if>

        <fieldset>
            <div class="xar-form-input-wrapper-after">
                <input type="hidden" name="phase" id="phase" value="update"/>
                <input type="hidden" name="authid" id="authid" value="#xarSecGenAuthKey()#"/>
                <input type="submit" value="#xarML('Update Configuration')#"/>
            </div>
        </fieldset>

    </form>
</div>
