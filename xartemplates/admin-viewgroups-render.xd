<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Question Group Administration</xar:mlstring></span></div>
<div class="xar-mod-body"><h2><xar:mlstring>View Groups</xar:mlstring></h2>
<div style="margin: auto;">

<div><a href="#xarModURL('surveys','admin','modifygroup')#"><xar:mlstring>Add Group</xar:mlstring></a></div>

<table border="0" width="100%" cellspacing="0" cellpadding="0">
    <tr>
        <th><xar:mlstring>Name</xar:mlstring></th>
        <th><xar:mlstring>Description</xar:mlstring></th>
        <th><xar:mlstring>Options</xar:mlstring></th>
    </tr>
    <xar:loop name="$groups">
        <xar:if condition="$loop:index gt 0">
            <xar:if condition="(($loop:index + 1) % 2)">
                <xar:set name="$row_class">''</xar:set>
            <xar:else />
                <xar:set name="$row_class">'xar-accent'</xar:set>
            </xar:if>

            <tr>
                <td align="left" class="#$row_class#">
                    #$loop:item['xar_map']#
                    #$loop:item['name']#
                </td>
                <td class="#$row_class#">#$loop:item['description']#</td>
                <td class="#$row_class#" style="text-align: center;">
                    <a href="#xarModURL('surveys', 'admin', 'modifygroup', array('gid' => $loop:item['gid']))#">
                        <xar:mlstring>Modify</xar:mlstring>
                    </a>
                    &nbsp;|&nbsp;
                    <a href="#xarModURL('surveys', 'admin', 'deletegroup', array('gid' => $loop:item['gid']))#">
                        <xar:mlstring>Delete</xar:mlstring>
                    </a>
                </td>
            </tr>
        </xar:if>
    </xar:loop>
</table>

<br />
</div>
</div>
