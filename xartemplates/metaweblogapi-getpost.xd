<methodResponse>
  <params>
    <param>
      <value>
        <struct>
          <xar:if condition="!empty($categories)">
            <member>
              <name>categories</name>
              <value>
                <array>
                  <data>
                    <xar:loop name="$categories">
                      <value><string>#$loop:item.name#</string></value>
                    </xar:loop>
                  </data>
                </array>
              </value>
            </member>
          </xar:if>
          <member>
            <name>dateCreated</name>
            <value>
              <dateTime.iso8601>#$dateCreated#</dateTime.iso8601>
            </value>
          </member>
          <member>
            <name>description</name>
            <value><string>#$content#</string></value>
          </member>
          <xar:if condition="isset($body)">
            <member>
              <name>mt_text_more</name>
              <value><string>#$body#</string></value>
            </member>
          </xar:if>
          <xar:if condition="isset($keywords)">
            <member>
              <name>mt_keywords</name>
              <value><string>#$keywords#</string></value>
            </member>
          </xar:if>
          <member>
            <name>postid</name>
            <value>
              <string>#$postid#</string>
            </value>
          </member>
          <member>
            <name>title</name>
            <value><string>#$title#</string></value>
          </member>
          <member>
            <name>link</name>
            <value><string>#$link#</string></value>
          </member>
          <member>
            <name>permaLink</name>
            <value><string>#$link#</string></value>
          </member>
          <member>
            <name>userid</name>
            <value>
              <string>#$userid#</string>
            </value>
          </member>
        </struct>
      </value>
    </param>
  </params>
</methodResponse>
