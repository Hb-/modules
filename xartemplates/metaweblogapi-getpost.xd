<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<methodResponse>
  <params>
    <param>
      <value>
        <struct>
          <xar:if condition="!empty($categories)">
            <member>
              <name>categories</name>
              <value>
                <array>
                  <data>
                    <xar:loop name="$categories">
                      <value><string><xar:var name="loop:item.name"/></string></value>
                    </xar:loop>
                  </data>
                </array>
              </value>
            </member>
          </xar:if>
          <member>
            <name>dateCreated</name>
            <value>
              <dateTime.iso8601><xar:var name="dateCreated"/></dateTime.iso8601>
            </value>
          </member>
          <member>
            <name>description</name>
            <value><string><xar:var name="content"/></string></value>
          </member>
          <xar:if condition="isset($body)">
            <member>
              <name>mt_text_more</name>
              <value><string><xar:var name="body"/></string></value>
            </member>
          </xar:if>
          <xar:if condition="isset($keywords)">
            <member>
              <name>mt_keywords</name>
              <value><string><xar:var name="keywords"/></string></value>
            </member>
          </xar:if>
          <member>
            <name>postid</name>
            <value>
              <string><xar:var name="postid"/></string>
            </value>
          </member>
          <member>
            <name>title</name>
            <value><string><xar:var name="title"/></string></value>
          </member>
          <member>
            <name>link</name>
            <value><string><xar:var name="link"/></string></value>
          </member>
          <member>
            <name>permaLink</name>
            <value><string><xar:var name="link"/></string></value>
          </member>
          <member>
            <name>userid</name>
            <value>
              <string><xar:var name="userid"/></string>
            </value>
          </member>
        </struct>
      </value>
    </param>
  </params>
</methodResponse>


</xar:template>
