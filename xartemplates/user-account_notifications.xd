<xar:template file="application_top" type="module"/>
<xar:template file="user-header" type="module"/>
<br>
<br>
<FORM method="POST" name="account_notifications" id="post" action="#xarModURL('commerce','user','account_notifications')#">
	<input type="hidden" name="action" value="process">
	<strong><xar:mlstring>My Product Notifications</xar:mlstring></strong>
	<table width="100%" border="0" cellspacing="0" cellpadding="0">
	  <tr>
		<td style="border-top: 1px solid; border-color: #cccccc;" class="main">
		<xar:mlstring>These Information allow you , to stay up to date with changed product details.
		</xar:mlstring>
		<br><br>
		<xar:mlstring>If you want to receive information for our complete offer, you should activate the general information.
		</xar:mlstring>
		</td>
	  </tr>
	</table><br>

	<strong><xar:mlstring>General Notifications</xar:mlstring></strong>
	<table width="100%" border="0" cellspacing="0" cellpadding="0">
	  <tr>
		<td style="border-top: 1px solid; border-color: #cccccc;"><table width="100%" border="0" cellspacing="0" cellpadding="0">
			<tr class=$moduleRow" onmouseover="rowOverEffect(this)" onmouseout="rowOutEffect(this)" onclick="checkBox('product_global')">
			  <td class="main"> 
				<xar:if condition="$global_product_notifications eq 1"> 
					<input type="checkbox" name="checkbox_global" CHECKED onclick="checkBox('product_global')">
				<xar:else />
					<input type="checkbox" name="checkbox_global" onclick="checkBox('product_global')">
				</xar:if>
				<strong><xar:mlstring>General Notifications</xar:mlstring></strong><br>
				<table width="98%" border="0" align="right" cellpadding="0" cellspacing="0">
				  <tr>
					<td class="main"><xar:mlstring>Being informed About all changes.</xar:mlstring></td>
				  </tr>
				</table> </td>
			</tr>
		  </table></td>
	  </tr>
	</table>
	<xar:if condition="$global_notification eq 0"> 
		<br>
		<strong><xar:mlstring>Product specified Notifications</xar:mlstring></strong>
		<table width="100%" border="0" cellspacing="0" cellpadding="0">
			<tr>
				<td style="border-top: 1px solid; border-color: #cccccc;">
					<table width="100%" border="0" cellspacing="0" cellpadding="0">
						<tr>
							<td class="main">
								<xar:mlstring>In Order to remove a activated information, simply deactivating the check box and accreting on the <b>Next-Button</b>.</xar:mlstring>
								<br>
							</td>
						</tr>
						<tr>
							<td class="main">
								#$global_notification#
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
	</xar:if>
	<br>
	<table width="100%" border="0" cellspacing="0" cellpadding="0">
	  <tr>
		<td>
			<a href="#xarModURL('commerce','user','account')#">
				<image src="#xarTplGetImage($language . '/buttons_catalog/button_back.gif')#" alt="#xarML('Back')#">
			</a>
		</td>
		<td><div align="right">
  			<input type="image" src="#xarTplGetImage($language . '/buttons_catalog/button_continue.gif')#" border="0" alt="#xarML('Continue')#">
		</div></td>
	  </tr>
	</table>
</FORM>