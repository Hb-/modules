<div class="xar-mod-head">
  <span class="xar-mod-title">
    <xar:ml>
      <xar:mlstring>#(1) - Search Tickets</xar:mlstring>
      <xar:mlvar>#xarModGetDisplayableName('helpdesk')#</xar:mlvar>
    </xar:ml>
  </span>
</div>

<div class="xar-mod-body">
  #$menu#

  <xar:if condition="!$UserLoggedIn">
    <p><xar:mlstring>Not logged in!</xar:mlstring></p>
    <p class="xar-title">
      <xar:mlstring>Sorry, this feature is not available for anonymous users.<br/>
        Please login and try again.</xar:mlstring>
    </p>
    <xar:else />

    <fieldset>
        <legend><xar:mlstring>Search</xar:mlstring></legend>

        <form action="#xarModURL('helpdesk', 'user', 'view')#" method="post" name="searchtickets">
          <input type="hidden" name="userid" value="#$userid#" />
          <xar:if condition="!$EditAccess">
            <input type="hidden" name="ticketsource" value="1" />
            <input type="hidden" name="nontechsubmit" value="1" />
          </xar:if>

          <div class="xar-form-input-wrapper">
            <label class="xar-form-label"><xar:mlstring>Keywords:</xar:mlstring></label>
            <input type="text" name="keywords" maxlength="255" class="xar-form-textlong" />
          </div>

          <div class="xar-form-input-wrapper">
            <label class="xar-form-label"><xar:mlstring>Fields to include:</xar:mlstring></label>
            <input type="checkbox" name="search_fields[]" value="subject" />
            <xar:mlstring>Subject</xar:mlstring>
          </div>

          <div class="xar-form-input-wrapper-after">
            <xar:if condition="$enabledimages">
              <a href="javascript:document.searchtickets.submit();"><img src="#xarTplGetImage('search.gif', 'helpdesk')#" border="0"/></a>
              <xar:else />
              <input type="submit" name="submit" value="Search" class="xar-form-textlong" />
            </xar:if>
          </div>
        </form>
    </fieldset>

  </xar:if>
  #$summary#
</div>
