<div id="tabnav">
	<xar:loop name="$languages">
		<div>
			<xar:if condition="$loop:item['id'] eq $langid">
				<a href="#xarModURL('commerce', 'admin', 'categories_screen', array('langid' => $loop:item['id']))#" class="active">#$loop:item['name']#
					<img src="#xarTplGetImage($loop:item['directory'] .'/admin/' . $loop:item['image'])#" border="0" alt="#xarML($loop:item['name'])#">
				</a>
			<xar:else />
				<a href="#xarModURL('commerce', 'admin', 'categories_screen', array('langid' => $loop:item['id']))#">#$loop:item['name']#
					<img src="#xarTplGetImage($loop:item['directory'] .'/admin/' . $loop:item['image'])#" border="0" alt="#xarML($loop:item['name'])#">
				</a>
			</xar:if>
		</div>	
	</xar:loop>
</div>
<div style="border: 1px solid #ccc; border-top : none; padding-left: 5px;">
<br />
	<xar:set name="$form_action">isset($cID) ? 'update_category' : 'insert_category'</xar:set>
	<form action="#xarModURL('commerce','admin','categories_screen', array('cPath' => $cPath, 'cID' => $cID, 'action'=> $form_action))# method="POST" enctype="multipart/form-data">
		<xar:loop name="$languages">
			<xar:if condition="$loop:item['id'] eq $langid">
				<table border="0" cellspacing="0" cellpadding="2">
					<tr>
