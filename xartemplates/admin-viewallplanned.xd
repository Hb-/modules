<xar:style scope="module" />
<div class="xar-mod-head">
    <span class="xar-mod-title"><xar:mlstring>Courses Administration</xar:mlstring></span>
</div>
<div id="ajaxshow" class="xar-mod-body">
  <xar:template type="module" module="courses" file="admin-menu" />
    <h2>#$menutitle#</h2><br />

    <xar:if condition="xarSessionGetVar('statusmsg') ne ''">
        <div class="xar-mod-statusmsg">#xarSessionGetVar('statusmsg')#</div>
    </xar:if>
    <xar:if condition="xarModIsHooked('categories','courses')">
      <xar:categories-navigation layout="trails" showchildren="1" module="courses" catid="$catid" type="admin" func="viewallplanned" />
    </xar:if>
    <table>
        <thead>
        <tr>
            <xar:if condition="!empty($snumberlink)">
                <th><a href="#$snumberlink#"><xar:mlstring>Number</xar:mlstring></a></th>
            <xar:else />
                <th><xar:mlstring>Number</xar:mlstring></th>
            </xar:if>
            <xar:if condition="!empty($snamelink)">
                <th><a href="#$snamelink#"><xar:mlstring>Title</xar:mlstring></a></th>
            <xar:else />
                <th><xar:mlstring>Title</xar:mlstring></th>
            </xar:if>
            <xar:if condition="!empty($sdatelink)">
                <th><a href="#$sdatelink#"><xar:mlstring>Startdate</xar:mlstring></a></th>
            <xar:else />
                <th><xar:mlstring>Startdate</xar:mlstring></th>
            </xar:if>
            <th><xar:mlstring>Enddate</xar:mlstring></th>
            <th><xar:mlstring>Min/Max</xar:mlstring></th>
            <th><xar:mlstring>Participants</xar:mlstring></th>
            <th><xar:mlstring>Options</xar:mlstring></th>
        </tr>
        </thead>
        <xar:foreach in="$items" value="$item">
        <tr>
            <th>#$item['number']#</th>
            <td>
               <xar:if condition="empty($item['displayurl'])">
                   #$item['name']#
               <xar:else />
                   <a href="#$item['displayurl']#">#$item['name']#</a>
               </xar:if>
            </td>
            <xar:if condition="$item['hideplanning'] eq 1">
                <td class="coursehidden">H:
            <xar:elseif condition="!empty($item.expected)" />
                <td class="dateexpected">E:
            <xar:else />
                <td>
            </xar:if>
                #xarlocalegetformatteddate('short',$item['startdate'])#
                </td>
            <xar:if condition="$item['hideplanning'] eq 1">
                <td class="coursehidden">
            <xar:elseif condition="!empty($item.expected)" />
                <td class="dateexpected">
            <xar:else />
                <td>
            </xar:if>
                #xarlocalegetformatteddate('short',$item['enddate'])#
                </td>
            <td>#$item['minparticipants']#&#32;&#47;&#32;#$item['maxparticipants']#</td>
            <td>
               <xar:set name="$minpart">#$item['minparticipants']#</xar:set>
               <xar:set name="$part">#$item['participants']#</xar:set>
               <xar:if condition="empty($item['participantsurl'])">
                   #$item['participants']#
               <xar:elseif condition="$part gt $minpart" />
                    <a href="#$item['participantsurl']#" style="color:#006600; ">#$item['participants']#</a>
               <xar:elseif condition="$part lt $minpart" />
                    <a href="#$item['participantsurl']#" style="color:#FF0000; ">#$item['participants']#</a>
               </xar:if>
            </td>
            <td>
               <xar:if condition="empty($item['editurl'])">
                   #$item['edittitle']#
               <xar:else />
                   <a href="#$item['editurl']#">#$item['edittitle']#</a>
               </xar:if>
               |
               <xar:if condition="empty($item['teachersurl'])">
                   #$item['teacherstitle']#
               <xar:else />
                   <a href="#$item['teachersurl']#">#$item['teacherstitle']#</a>
               </xar:if>
               |
               <xar:if condition="empty($item['copyurl'])">
                   #$item['copytitle']#
               <xar:else />
                   <a href="#$item['copyurl']#">#$item['copytitle']#</a>
               </xar:if>
            </td>
        </tr>
        </xar:foreach>
    </table>
    <br />
    <!-- add the pager here -->
    #$pager#
</div>
<!-- Empty statusmsg -->
<xar:if condition="xarSessionSetVar('statusmsg','')"></xar:if>
