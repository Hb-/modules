<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <xar:comment> License: GPL http://www.gnu.org/copyleft/gpl.html </xar:comment>
    <xar:set name="adminemail">xarModVars::get('mail','adminmail')</xar:set>
    <div class="xar-mod-head">
        <span class="xar-mod-title"><xar:mlstring>Account Activated</xar:mlstring></span>
    </div>

    <div class="xar-mod-body">
        <xar:if condition="$state eq xarRoles::ROLES_STATE_ACTIVE">
            <h2><xar:mlstring>Your account is active</xar:mlstring></h2>
            <p>
                <xar:mlstring>Use the login block to log in</xar:mlstring>
            </p>
        <xar:elseif condition="$state eq xarRoles::ROLES_STATE_PENDING" />
            <h2><xar:mlstring>Your account is pending activation</xar:mlstring></h2>
            <p>
                <xar:mlstring>The site administrator needs to activate your account.</xar:mlstring>
            </p>
        <xar:elseif condition="$state eq xarRoles::ROLES_STATE_NOTVALIDATED" />
            <h2><xar:mlstring>Your account needs to be validated</xar:mlstring></h2>
            <p>
                <xar:mlstring>You need to follow the validation instructions you should have received when you registered.</xar:mlstring>
            </p>
        </xar:if>
    </div>
</xar:template>