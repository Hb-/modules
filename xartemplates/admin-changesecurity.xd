<xar:base-include-javascript module="security" filename="changeInputName.js" />

<fieldset>
    <legend>Security Levels</legend>

    <xar:if condition="$standalone eq true">
        <div class="xar-align-center  xar-floatleft" style="width: 44%;">
        <form name="" action="#xarModURL('security', 'admin', 'updatesecurity')#" method="POST">

            <xar:template file="security-form" />

            <div class="xar-align-center">
                <input type="hidden" name="modid" value="#$modid#" />
                <input type="hidden" name="itemtype" value="#$itemtype#" />
                <input type="hidden" name="itemid" value="#$itemid#" />
                <input type="hidden" name="returnurl" value="#$returnurl#" />
                <input type="submit" name="submit" value="#xarML('Update')#" />
            </div>
        </form>
        </div>
    <xar:else />
        <div class="xar-align-center  xar-floatleft" style="width: 44%;">
            <xar:template file="security-form" />
        </div>
    </xar:if>
</fieldset>