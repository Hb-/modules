<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Polls Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2>
        <xar:mlstring>
            Delete Poll
        </xar:mlstring>
    </h2>
    <div style="clear: both; padding-top: 10px; text-align: center; margin: auto;">
        <h3>
            #$polltitle#
        </h3>
        <form method="post" action="&xar-modurl-polls-admin-delete;">
            <input type="hidden" name="authid" value="#$authid#">
            <input type="hidden" name="pid" value="#$pid#">
            <input type="hidden" name="confirm" value="#$confirm#">
            <div style="clear: both; padding-top: 10px;">
                <xar:mlstring>
                    Delete this Poll?
                </xar:mlstring>
            </div>
            <div style="clear: both; padding-top: 10px;">
                <input type="submit" value="#xarML('Delete Poll')#"> &nbsp; &nbsp;
                <input type="button" value="#xarML('Cancel')#" onclick="location.href='&xar-modurl-polls-admin-list;'">
            </div>
        </form>
    </div>
</div>
