<div class="xar-mod-head">
    <span class="xar-mod-title"><xar:mlstring>Courses Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2><xar:mlstring>Confirm deleting this course</xar:mlstring></h2><br />
      <xar:if condition="xarSessionGetVar('statusmsg') != ''">
          <p>#xarSessionGetVar('statusmsg')#</p>
      </xar:if>
    <xar:if condition="$countplanned eq 0">
        <form method="post" action="&xar-modurl-courses-admin-deletecourse;">
            <input type="hidden" name="authid" id="authid" value="#$authid#" />
            <input type="hidden" name="confirm" id="confirm" value="true" />
            <input type="hidden" name="courseid" id="courseid" value="#$courseid#" />

            <table>
                <tr>
                    <td>
                      <xar:mlstring>Course Code</xar:mlstring>
                    </td>
                    <td>
                        #$number#
                    </td>
                </tr>
                <tr>
                    <td>
            <xar:mlstring>Course Name</xar:mlstring>
                    </td>
                    <td>
                        #$coursename#
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><br />
                        <input type="submit" value="#$confirmbutton#"  />
                    </td>
                </tr>
            </table>
        </form>
    <xar:else />
    <p>
        <xar:ml>
            <xar:mlstring>This course has been planned #(1) times. You can only delete courses that are not planned, otherwise you will introduce data errors in the database.</xar:mlstring>
            <xar:mlvar>#$countplanned#</xar:mlvar>
        </xar:ml>
        <br />
        <xar:mlstring>
            You can however not show it to your users by hiding it.
            Use the button below to go to the modify page.
        </xar:mlstring>
    </p>
        <form method="post" action="&xar-modurl-courses-admin-modifycourse;">
            <input type="hidden" name="courseid" id="courseid" value="#$courseid#" />
            <input type="submit" value="#xarML('Modify this course')#" />
        </form>

    </xar:if>
</div>
<xar:if condition="xarSessionSetVar('statusmsg', '')"></xar:if>
