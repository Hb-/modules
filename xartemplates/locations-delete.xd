<xar:data-getitem name="$properties" module="dossier" itemtype="1" itemid="0" />
<xar:data-getitem name="$locationproperties" module="dossier" itemtype="2" itemid="0" />
<xar:data-getitem name="$locationdataproperties" module="dossier" itemtype="3" itemid="0" />

<div class="xar-mod-body">
<h2><xar:mlstring>Delete Address / Move Contact</xar:mlstring></h2>
<div align="center">

<h3><xar:mlstring>Confirm deleting this Address?</xar:mlstring></h3>

<form method="post" action="&xar-modurl-dossier-locations-delete;">
    <input type="hidden" name="authid" value="#$authid#" />
    <input type="hidden" name="confirm" value="true" />
    <input type="hidden" name="locationid" value="#$locationid#" />
    <input type="hidden" name="contactid" value="#$contactid#" />

    <table border="0" cellpadding="2" cellspacing="0">
        <tr>
            <td align="right" width="50%">
                <xar:data-label property="$locationproperties['address_1']" />
            </td>
            <td width="50%">
                <xar:data-output property="$locationproperties['address_1']" value="$item['address_1']" />
            </td>
        </tr>
        <tr>
            <td align="right" width="50%">
                <xar:data-label property="$locationproperties['address_2']" />
            </td>
            <td width="50%">
                <xar:data-output property="$locationproperties['address_2']" value="$item['address_2']" />
            </td>
        </tr>
        <tr>
            <td align="right" width="50%">
                <xar:data-label property="$locationproperties['city']" />
            </td>
            <td width="50%">
                <xar:data-output property="$locationproperties['city']" value="$item['city']" />
            </td>
        </tr>
        <tr>
            <td align="right" width="50%">
                <xar:data-label property="$locationproperties['us_state']" />
            </td>
            <td width="50%">
                <xar:data-output property="$locationproperties['us_state']" value="$item['us_state']" />
            </td>
        </tr>
        <tr>
            <td align="right" width="50%">
                <xar:data-label property="$locationproperties['postalcode']" />
            </td>
            <td width="50%">
                <xar:data-output property="$locationproperties['postalcode']" value="$item['postalcode']" />
            </td>
        </tr>
        <tr>
            <td align="right" width="50%">
                <xar:data-label property="$locationproperties['country']" />
            </td>
            <td width="50%">
                <xar:data-output property="$locationproperties['country']" value="$item['country']" />
            </td>
        </tr>
        <tr>
            <td align="right" width="50%">
                <xar:data-label property="$locationproperties['latitude']" />
            </td>
            <td width="50%">
                <xar:data-output property="$locationproperties['latitude']" value="$item['latitude']" />
            </td>
        </tr>
        <tr>
            <td align="right" width="50%">
                <xar:data-label property="$locationproperties['longitude']" />
            </td>
            <td width="50%">
                <xar:data-output property="$locationproperties['longitude']" value="$item['longitude']" />
            </td>
        </tr>
        <tr>
            <td align="right" width="50%">
                <xar:data-label property="$locationdataproperties['startdate']" />
            </td>
            <td width="50%">
                <xar:if condition="!empty($item['startdate']) and $item['startdate'] ne '0000-00-00'">
                    <xar:data-output property="$locationdataproperties['startdate']" value="$item['startdate']" />
                <xar:else />
                    <xar:mlstring>Current</xar:mlstring>                
                </xar:if>
            </td>
        </tr>
        <tr>
            <td align="right" width="50%">
                <xar:data-label property="$locationdataproperties['enddate']" />
            </td>
            <td width="50%">
                <xar:if condition="!empty($item['enddate']) and $item['enddate'] ne '0000-00-00'">
                    <xar:data-output property="$locationdataproperties['enddate']" value="$item['enddate']" />
                <xar:else />
                    <xar:mlstring>Current</xar:mlstring>                
                </xar:if>
            </td>
        </tr>
        <tr>
            <td colspan="2" align="center"><br />
                    <input type="submit" value="Confirm Delete" />
                    <input type="checkbox" name="close" value="1" /> <xar:mlstring>Delete location for this contact only?</xar:mlstring>
            </td>
        </tr>
    </table>
</form>
</div>
</div>

