<div class="xar-mod-head">
    <span class="xar-mod-title"><xar:mlstring>Multisites Administration</xar:mlstring></span>
</div>

<div class="xar-mod-body">
<xar:template type="module" module="multisites" file="admin-menu" />
    <h2><xar:mlstring>Administration Configuration</xar:mlstring></h2>

    <xar:set name="$btntxt"><xar:mlstring>Update Admin Configuration</xar:mlstring></xar:set>
    <form class="xar-formwidget" method="post" action="&xar-modurl-multisites-admin-updateadminconfig;" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="authid" value="&xar-var-authid;" />

        <fieldset class="formelements xar-norm">
        <legend><xar:mlstring>Admin Options</xar:mlstring></legend>
        <p class="param">
            <label for="itemsperpage" class="xar-form-label">
                <span class="help" title="#xarML('Number of site listings per page')#">
                    <xar:mlstring>Number of site listings per page:</xar:mlstring>
                </span>
            </label>
            <input type="text" name="itemsperpage" id="itemsperpage" size="3" maxlength="3" value="#xarModGetVar('multisites', 'itemsperpage')#" />
        </p>
        </fieldset>
        
   </form>
          <div class="xar-clear-both xar-align-center">
         <input type="submit" value="#$btntxt#"  tabindex="3" />
     </div>

</div>

