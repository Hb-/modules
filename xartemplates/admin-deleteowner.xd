<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Newsletter Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2><xar:mlstring>Delete Newsletter User</xar:mlstring></h2>
    <form name="post" id="post" action="&xar-modurl-newsletter-admin-deleteowner;" method="post" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="authid" value="#$authid#" />
        <input type="hidden" name="id" id="id" value="#$id#" />
        <input type="hidden" name="confirm" id="confirm" value="1"/>
        <fieldset>
            <legend>
                <xar:mlstring>You are about to delete an Newsletter user</xar:mlstring>
            </legend>
            <div class="xar-form-input-wrapper">
                <span class="xar-title"><xar:mlstring>This user will not be removed from any other Xaraya module.</xar:mlstring></span>
            </div>
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label">
                    <xar:mlstring>Newsletter user:</xar:mlstring>
                </label>
            #$namevalue#
            </div>
        </fieldset>
        <div class="xar-form-input-wrapper-after">
            <input type="submit" value="#xarML('Confirm')#"  tabindex="1" />
        </div>
        <div class="xar-form-input-wrapper-after">
            <a href="&xar-modurl-newsletter-admin-viewusers;"><xar:mlstring>Cancel removal of Newsletter user</xar:mlstring></a>
        </div>
    </form>
</div>
