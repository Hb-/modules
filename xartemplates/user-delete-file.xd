<xar:style scope="module" file="gallery"  />
<div class="xar-mod-head">
    <span class="xar-mod-title">Delete Photo</span>
</div>
<div class="xar-mod-body xar-align-center">

    <h3>Are you sure you want to delete this photo?</h3>

    <xar:set name="path">$files_path.$file['file']</xar:set>
    <xar:set name="params">array('w' => 400,'q' => 90, 'ace' => true)</xar:set>
    <div class="xar-margin-thickends">
        <xar:if condition="empty($file['name'])">
            <xar:set name="label">"empty"</xar:set>
        <xar:else />
            <xar:set name="label">$file['name']</xar:set>
        </xar:if>
        <xar:image-resize src="$path" static="1" label="$label" params="$params" />
    </div>

    <form action="#xarModURL('gallery', 'admin', 'delete')#" method="POST">

        <input name="what" type="hidden" value="files" />
        <input name="file_id" type="hidden" value="#$file['file_id']#" />
        <input name="authid" type="hidden" value="#xarSecGenAuthKey()#" />
        <input name="returnurl" type="hidden" value="#$returnurl#" />

        <input name="confirm" type="submit" class="xar-form-textmedium" value="#xarML('Confirm')#" />

    </form>
</div>