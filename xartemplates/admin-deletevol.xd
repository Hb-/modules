<div class="xar-mod-head">
    <span class="xar-mod-title"><xar:mlstring>Administration - Encyclopedia</xar:mlstring></span>
</div>
<div class="xar-mod-body">
      <xar:template type="module" module="encyclopedia" file="admin-menu" />
      <h2>
          <xar:mlstring>Delete Volume</xar:mlstring>
      </h2>
      <xar:style scope="module" module="base" file="navtabs" />
	  <dl class="xar-tabs">
     <dd  class="active" style="float: right; margin-right: .5em; text-align: left;">
				<a href="#xarModURL('encyclopedia','admin','volumes')#">
					<xar:mlstring>View Volumes</xar:mlstring>
				</a>
           </dd>
	  </dl>
            <form method="post" action="&xar-modurl-encyclopedia-admin-deletevol;" method="post" >
                <div style="text-align: center">
                <input type="hidden" name="authid" id="authid" value="#$authid#" />
			    <input type="hidden" name="vid" id="itemid" value="#$volume['vid']#" />
                <input type="hidden" name="confirmed" id="confirmed" value="1" />

                <p><span class="xar-title"><xar:mlstring>Confirm the deletion of the volume</xar:mlstring>  '#$volume['volume']#'</span></p>
                <br />

                <input type="submit" value="#xarML('Confirm')#"  tabindex="1" /><br />

                <p><a href="&xar-modurl-encyclopedia-admin-volumes;"><xar:mlstring>Cancel the deletion</xar:mlstring></a></p>
               </div>
            </form>        

</div>