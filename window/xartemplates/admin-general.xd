<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Applications Window Administration</xar:mlstring></span></div>
<div class="xar-mod-body"><h2><xar:mlstring>General Settings</xar:mlstring></h2>
<div style="text-align: center; margin: auto;">
<table border="0" width="50%">
    <tr align="center" valign="middle">
        <td align="center" valign="middle">
            <xar:mlstring>General Settings</xar:mlstring>
        </td>
        <td align="center" valign="middle">
            <a href="#xarModURL('window','admin','addurl')#">
            <xar:mlstring>URL Specific Settings</xar:mlstring></a>
        </td>
    </tr>
</table>
</div>
<div style="text-align: left; margin: auto;">
<form action="#xarModURL('window','admin','updatelinks')#" method="post" enctype="application/x-www-form-urlencoded">
<table border="0" width="80%">
<tr>
    <td>
        <xar:mlstring>Allow only local pages</xar:mlstring>
    </td>
    <td>
        <xar:if condition = "$allow_local_only eq 1">
                        <input type="radio" name="allow_local_only" id="allow_local_only" value="0" tabindex="1" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="allow_local_only" id="allow_local_only" value="1" checked tabindex="2" />
                        <xar:mlstring>Yes</xar:mlstring>
                <xar:else />
                        <input type="radio" name="allow_local_only" id="allow_local_only" value="0" checked tabindex="1" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="allow_local_only" id="allow_local_only" value="1"  tabindex="2" />
                        <xar:mlstring>Yes</xar:mlstring>
                </xar:if>
    </td>
</tr>
<tr>
    <td>
        <xar:mlstring>Use buffering of output before sending</xar:mlstring>
    </td>
    <td>
        <xar:if condition = "$use_buffering eq 1">
                        <input type="radio" name="use_buffering" id="use_buffering" value="0" tabindex="3" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="use_buffering" id="use_buffering" value="1" checked tabindex="4" />
                        <xar:mlstring>Yes</xar:mlstring>
                <xar:else />
                        <input type="radio" name="use_buffering" id="use_buffering" value="0" checked tabindex="3" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="use_buffering" id="use_buffering" value="1"  tabindex="4" />
                        <xar:mlstring>Yes</xar:mlstring>
                </xar:if>
    </td>
</tr>
<tr>
    <td>
        <xar:mlstring>Allow input from browser address bar</xar:mlstring>
    </td>
    <td>
        <xar:if condition = "$no_user_entry eq 1">
                        <input type="radio" name="no_user_entry" id="no_user_entry" value="0" tabindex="7" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="no_user_entry" id="no_user_entry" value="1" checked tabindex="8" />
                        <xar:mlstring>Yes</xar:mlstring>
                <xar:else />
                        <input type="radio" name="no_user_entry" id="no_user_entry" value="0" checked tabindex="7" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="no_user_entry" id="no_user_entry" value="1" tabindex="8" />
                        <xar:mlstring>Yes</xar:mlstring>
                </xar:if>
    </td>
</tr>
<tr>
    <td>
        <xar:mlstring>Compare URL against URL Security in DataBase</xar:mlstring>
    </td>
    <td>
        <xar:if condition = "$security eq 1">
                        <input type="radio" name="security" id="security" value="0" tabindex="9" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="security" id="security" value="1" checked tabindex="10" />
                        <xar:mlstring>Yes</xar:mlstring>
                <xar:else />
                        <input type="radio" name="security" id="security" value="0" checked tabindex="9" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="security" id="security" value="1"  tabindex="10" />
                        <xar:mlstring>Yes</xar:mlstring>
                </xar:if>
    </td>
</tr>
<tr>
    <td>
        <xar:mlstring>Only for registered users</xar:mlstring>
    </td>
    <td>
        <xar:if condition = "$reg_user_only eq 1">
                        <input type="radio" name="reg_user_only" id="reg_user_only" value="0" tabindex="11" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="reg_user_only" id="reg_user_only" value="1" checked tabindex="12" />
                        <xar:mlstring>Yes</xar:mlstring>
                <xar:else />
                        <input type="radio" name="reg_user_only" id="reg_user_only" value="0" checked tabindex="11" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="reg_user_only" id="reg_user_only" value="1" tabindex="12" />
                        <xar:mlstring>Yes</xar:mlstring>
                </xar:if>
    </td>
</tr>
<tr>
    <td>
        <xar:mlstring>Add link for Open in new window</xar:mlstring>
    </td>
    <td>
        <xar:if condition = "$open_direct eq 1">
                        <input type="radio" name="open_direct" id="open_direct" value="0"  tabindex="13" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="open_direct" id="open_direct" value="1" checked  tabindex="14" />
                        <xar:mlstring>Yes</xar:mlstring>
                <xar:else />
                        <input type="radio" name="open_direct" id="open_direct" value="0" checked  tabindex="13" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="open_direct" id="open_direct" value="1" tabindex="14" />
                        <xar:mlstring>Yes</xar:mlstring>
                </xar:if>
    </td>
</tr>
<tr>
    <td>
        <xar:mlstring>Use fixed title</xar:mlstring>
    </td>
    <td>
        <xar:if condition = "$use_fixed_title eq 1">
                        <input type="radio" name="use_fixed_title" id="use_fixed_title" value="0"  tabindex="15" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="use_fixed_title" id="use_fixed_title" value="1" checked tabindex="16" />
                        <xar:mlstring>Yes</xar:mlstring>
                <xar:else />
                        <input type="radio" name="use_fixed_title" id="use_fixed_title" value="0" checked tabindex="15" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="use_fixed_title" id="use_fixed_title" value="1" tabindex="16" />
                        <xar:mlstring>Yes</xar:mlstring>
                </xar:if>
    </td>
</tr>
<tr>
    <td>
        <xar:mlstring>Auto resize window</xar:mlstring>
    </td>
    <td>
        <xar:if condition = "$auto_resize eq 1">
                        <input type="radio" name="auto_resize" id="auto_resize" value="0"  tabindex="17" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="auto_resize" id="auto_resize" value="1" checked tabindex="18" />
                        <xar:mlstring>Yes</xar:mlstring>
                <xar:else />
                        <input type="radio" name="auto_resize" id="auto_resize" value="0" checked tabindex="17" />
                        <xar:mlstring>No</xar:mlstring>
                        <input type="radio" name="auto_resize" id="auto_resize" value="1" tabindex="18" />
                        <xar:mlstring>Yes</xar:mlstring>
                </xar:if>
    </td>
</tr>
<tr>
    <td>
        <xar:mlstring>Height of viewing window in pixels</xar:mlstring>
        <br />
        (<xar:mlstring>Only if Auto resize window = No, in which case this is the height of the content window.</xar:mlstring>)
    </td>
    <td>
                <input type="text" name="vsize" id="vsize" value="#$vsize#" size="4" maxlength="4" tabindex="19" />
    </td>
</tr>
<tr>
    <td>
                <xar:mlstring>Width of viewing window in pixels or percent</xar:mlstring>
                (<xar:mlstring>If percent use %</xar:mlstring>)
    </td>
    <td>
<input type="text" name="hsize" id="hsize" value="#$hsize#" size="4" maxlength="4" tabindex="20" />
    </td>
</tr>
<tr>
    <td>
            &nbsp;
    </td>
</tr>
<tr>
    <td>
        <input type="submit" value="Save Changes"  tabindex="21" />
    </td>
</tr>
</form>
</table>
</div>
</div>
</div>
