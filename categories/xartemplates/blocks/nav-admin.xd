<tr align="left" valign="middle">
    <td><xar:mlstring>Category Layout</xar:mlstring></td>
    <td><select name="layout" id="layout#$blockid#">
        <xar:loop name="$layouts">
        <xar:if condition="$layout eq $loop:item['id']">
            <option value="#$loop:item['id']#" selected="selected">#$loop:item['name']#</option>
        <xar:else />
            <option value="#$loop:item['id']#">#$loop:item['name']#</option>
        </xar:if>
        </xar:loop>
        </select></td>
</tr>
<tr align="left" valign="middle">
    <td><label for="showcatcount#$blockid#"><xar:mlstring>Show count per category</xar:mlstring></label></td>
    <xar:if condition="!empty($showcatcount)">
        <td><input type="checkbox" name="showcatcount" id="showcatcount#$blockid#" value="1" checked="checked" /></td>
    <xar:else />
        <td><input type="checkbox" name="showcatcount" id="showcatcount#$blockid#" value="1" /></td>
    </xar:if>
</tr>
<tr align="left" valign="middle">
    <td><xar:mlstring>Show children</xar:mlstring></td>
    <td><select name="showchildren" id="showchildren#$blockid#">
        <xar:loop name="$children">
        <xar:if condition="$showchildren eq $loop:item['id']">
            <option value="#$loop:item['id']#" selected="selected">#$loop:item['name']#</option>
        <xar:else />
            <option value="#$loop:item['id']#">#$loop:item['name']#</option>
        </xar:if>
        </xar:loop>
        </select></td>
</tr>

