<xar:base-include-javascript filename="switchImport.js" />

<div class="xar-uploads-clearer">&nbsp;</div>
<p>
    <a style="cursor: pointer;" 
    onClick="javascript:switchImport(1, #$getAction['LOCAL']#);" 
    name="import_trusted" 
    title="#xarML('Import file from Trusted Directory')#">Import Trusted</a> |
    <a style="cursor: pointer;" 
    onClick="javascript:switchImport(2, #$getAction['EXTERNAL']#);" 
    name="import_external" 
    title="#xarML('Import file from external source (http(s)|ftp)')#">Import External</a> |
    <a style="cursor: pointer;" 
    onClick="javascript:switchImport(3, #$getAction['UPLOAD']#);" 
    name="import_upload" 
    title="#xarML('Import file via upload')#">Import Uploaded File</a> 
    <br />
    <xar:template file="attach_upload" type="module" />
    <xar:template file="attach_external" type="module" />
    <xar:template file="attach_trusted" type="module" />
    <input type="hidden" name="file_import_type" value="0" />
</p>
