<xar:if condition="isset($fileList) AND count($fileList)">
    <div id="#$id#_attach_trusted" style="display: none;">
        <xar:mlstring>Attach from Trusted directory:</xar:mlstring><br />
        <select name="#$id#_attach_trusted[]" multiple="multiple">
            <xar:loop name="$fileList">
                <option value="#$loop:item['relativePath']#">#$loop:item['relativePath']#</option>
            </xar:loop>
        </select>
    </div>
</xar:if>
