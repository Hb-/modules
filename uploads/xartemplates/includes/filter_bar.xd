<table width="100%" border="0" class="xar-norm xar-accent-outline">
	<tr>
		<th colspan="5">
			<h4><xar:mlstring>Filtering Options</xar:mlstring></h4>
		</th>
	</tr>
	<tr>
		<form action="#xarModUrl('uploads','admin','view')#" method="post">
		<td width="25%" align="center">
			<label for="mimetype">
				<xar:mlstring>
					MIME Type
				</xar:mlstring>
			</label>
			<br />
			<select name="mimetype" id="mimetype" onchange="this.form.submit();">
				<xar:foreach in="$filters['mimetypes']" key="$key" value="$type">
					<xar:if condition="isset($type['selected'])">
						<option value="#$type['typeId']#" selected="selected">
							#$type['typeName']# 
						</option>
					<xar:else />
						<option value="#$type['typeId']#">
							#$type['typeName']# 
						</option>
					</xar:if>
				</xar:foreach>
			</select>
		</td>
		<td width="25%" align="center">
			<label for="subtypes">
				<xar:mlstring>
					MIME SubType
				</xar:mlstring>
			</label>
			<br />
			<select name="subtype" id="subtypes" onchange="this.form.submit();">
				<xar:foreach in="$filters['subtypes']" key="$key" value="$subtype">
					<xar:if condition="isset($subtype['selected'])">
						<option value="#$subtype['subtypeId']#" selected="selected">
							#$subtype['subtypeName']# 
						</option>
					<xar:else />
						<option value="#$subtype['subtypeId']#">
							#$subtype['subtypeName']# 
						</option>
					</xar:if>
				</xar:foreach>
			</select>
		</td>
		<td width="15%" align="center">
			<label for="status">
				<xar:mlstring>
					File Status
				</xar:mlstring>
			</label>
			<br />
			<select name="status" id="status" onchange="this.form.submit();">
				<xar:foreach in="$filters['status']" key="$key" value="$status">
					<xar:if condition="isset($status['selected'])">
						<option value="#$status['statusId']#" selected="selected">
							#$status['statusName']# 
						</option>
					<xar:else />
						<option value="#$status['statusId']#">
							#$status['statusName']# 
						</option>
					</xar:if>
				</xar:foreach>
			</select>
		</td>
		<td width="25%" align="center">
			<label for="action">
				<xar:mlstring>
					action
				</xar:mlstring>
			</label>
			<br />
			<select name="action" id="action" onchange="this.form.submit();">
				<xar:foreach in="$filters['status']" key="$key" value="$status">
					<xar:if condition="$key eq '0'">
						<option value="#$status['statusId']#" selected="selected">
							Change View
						</option>
					<xar:else />
						<option value="#$status['statusId']#">
							Change all to #$status['statusName']# 
						</option>
					</xar:if>
				</xar:foreach>
			</select>
		</td>
		<td width="10%" align="center">
			<br />
			<input type="submit" name="do_it" value="#xarML('Refresh')#">
		</td>
		</form>
	</tr>
</table>
<br />
